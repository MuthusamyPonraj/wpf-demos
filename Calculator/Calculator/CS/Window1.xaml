<!--Window for applying custom skins-->
<syncfusion:ChromelessWindow 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf" UseNativeChrome="True"
    x:Class="CalculatorDemo.Window1" Icon="App.ico" 
    x:Name="window1" WindowStartupLocation="CenterScreen" xmlns:sblayout="clr-namespace:SampleLayout.WPF;assembly=Syncfusion.SampleLayout.WPF"
    Title="Calculator Demo" Width="800" 
    Height="610" FontFamily="Calibri" FontSize="13" >
    <Grid >
        <sblayout:SampleLayoutControl Header="Calculator" x:Name="Sblayout"  EventLogHeight="0"
                                          Description="The Calculator helps the users to perform basic calculations.">
            <Grid>
                <syncfusion:SfCalculator x:Name="Calculator" Width="250" Height="300" HorizontalAlignment="Center" />
            </Grid>
        </sblayout:SampleLayoutControl>
    </Grid>
</syncfusion:ChromelessWindow>