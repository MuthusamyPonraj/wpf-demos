<Window x:Class="CalendarDemo.Window1" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
        xmlns:local="clr-namespace:CalendarDemo" xmlns:controls="clr-namespace:Syncfusion.Windows.Tools.Controls;assembly=Syncfusion.Shared.Wpf"
        WindowStartupLocation="CenterScreen" 
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    Title="CalendarEdit"  Icon="App.Ico" x:Name="window" Height="800">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <local:StringToCultureConverter x:Key="cultureconverter"/>
    </Window.Resources>
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  >
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="Grid3" Width="850" Height="700" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition  Height="45"/>
                <RowDefinition/>
                <RowDefinition  Height="45"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock VerticalAlignment="Center" FontSize="11" HorizontalAlignment="Left"  Margin="35 0 0 0"  >
                            Default Settings</TextBlock>

            <syncfusion:CalendarEdit  Grid.Row="1" Name="calendaredit1" Height="280" Width="350"
                                      HorizontalAlignment="Center" VerticalAlignment="Center" 
                                      Margin="-5 0 0 0"
                                      AllowMultiplySelection="{Binding EnableMultipleSelection,Mode=TwoWay}"
                                      Culture="{Binding CultureString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource cultureconverter}}"
                                      CalendarStyle="Vista"
                                      MonthChangeDirection="Horizontal"
                                      IsDayNamesAbbreviated="{Binding ShowAbbrivatedDays,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      IsMonthNameAbbreviated="{Binding ShowAbbrivatedMonths,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                      AllowSelection="{Binding EnableDateSelection,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      >
            </syncfusion:CalendarEdit >


            <TextBlock VerticalAlignment="Stretch" FontSize="11"  Grid.Column="1" Margin="37 0 0 0" HorizontalAlignment="Left"  > 
                            Standard Style <LineBreak/>Week number enabled<LineBreak/>Show only current month days<LineBreak/></TextBlock>

            <syncfusion:CalendarEdit  Name="WeekNumber"  ShowWeekNumbers="True" Grid.Column="1"  Grid.Row="1"  Height="280" Width="350"
                                      HorizontalAlignment="Center" VerticalAlignment="Center" ShowNextMonthDays="False" ShowPreviousMonthDays="False"  Margin="0 0 0 0"
                                      AllowMultiplySelection="{Binding EnableMultipleSelection,Mode=TwoWay}" 
                                      Culture="{Binding CultureString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource cultureconverter}}"
                                      CalendarStyle="Standard" 
                                      IsDayNamesAbbreviated="{Binding ShowAbbrivatedDays,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      IsMonthNameAbbreviated="{Binding ShowAbbrivatedMonths,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      AllowSelection="{Binding EnableDateSelection,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      >
            </syncfusion:CalendarEdit >


            <TextBlock VerticalAlignment="Center" FontSize="11" HorizontalAlignment="Left" Grid.Row="2"  Margin="35 0 0 0"> Disable date selection<LineBreak/>Navigation direction: Vertical <LineBreak/>Show today date</TextBlock>


            <syncfusion:CalendarEdit  Name="PrevAndNextMonth" Grid.Row="3"  Height="280" Width="350" DisableDateSelection="True"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"  
                                      Margin="-5 0 0 0"
                                      AllowMultiplySelection="{Binding EnableMultipleSelection,Mode=TwoWay}"
                                      TodayRowIsVisible="True"  MonthChangeDirection="Vertical"
                                      Culture="{Binding CultureString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource cultureconverter}}"
                                      CalendarStyle="Vista"
                                      IsDayNamesAbbreviated="{Binding ShowAbbrivatedDays,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      IsMonthNameAbbreviated="{Binding ShowAbbrivatedMonths,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                       AllowSelection="{Binding EnableDateSelection,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                     >
            </syncfusion:CalendarEdit >


            <TextBlock VerticalAlignment="Center" FontSize="11" HorizontalAlignment="Left" Margin="37 0 0 0" Grid.Row="2" Grid.Column="1">Date Range : 09 Jan 2019 - 22 Mar 2019<LineBreak/>ViewMode : Date - Month<LineBreak/>BlackOut Dates</TextBlock>

            <syncfusion:CalendarEdit  Name="MaxAndMinDays" x:FieldModifier="public" Grid.Row="3" Grid.Column="1"  MinMaxHidden="True" MinDate="2019-01-09" MaxDate="2019-03-22" Height="280" Width="350" ShowNextMonthDays="True" ShowPreviousMonthDays="True"
                                      HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 0" ViewMode="Days,Months"
                                      Culture="{Binding CultureString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource cultureconverter}}"
                                      CalendarStyle="Vista" AllowMultiplySelection="{Binding EnableMultipleSelection,Mode=TwoWay}" BlackoutDates="{Binding BlackOutDatesCollection,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      IsDayNamesAbbreviated="{Binding ShowAbbrivatedDays,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      IsMonthNameAbbreviated="{Binding ShowAbbrivatedMonths,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      AllowSelection="{Binding EnableDateSelection,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      >
            </syncfusion:CalendarEdit >

        </Grid>
        <GroupBox Header="Properties" FontWeight="Bold" FontSize="13"  Grid.Column="1">
            <Grid  Name="Properties" HorizontalAlignment="Right"  VerticalAlignment="Stretch" >

                <Grid.RowDefinitions>
                    <RowDefinition Height="20"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="170"/>
                    <ColumnDefinition Width="170"></ColumnDefinition>

                </Grid.ColumnDefinitions>
                <TextBlock  FontWeight="Normal" Grid.Row="1" Text="Show Abbreviated Days"  Margin="3" VerticalAlignment="Center"/>
                <CheckBox  Name="daysabbreviated" Grid.Row="1" IsChecked="{Binding ShowAbbrivatedDays,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                      Margin="3"   Grid.Column="1" VerticalAlignment="Center"/>
                <TextBlock  FontWeight="Normal" Grid.Row="2" Text="Show Abbreviated Month" Margin="3" VerticalAlignment="Center"/>
                <CheckBox Name="monthsabbreviated" Grid.Row="2" IsChecked="{Binding ShowAbbrivatedMonths,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                      Margin="3"   Grid.Column="1" VerticalAlignment="Center"/>
                <TextBlock FontWeight="Normal" Grid.Row="3" Text="Enable date selection" Margin="3" VerticalAlignment="Center"/>
                <CheckBox FontWeight="Normal" Name="dateSelection" Grid.Row="3" IsChecked="{Binding EnableDateSelection,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                      Margin="3"   Grid.Column="1" VerticalAlignment="Center"/>
                <TextBlock  FontWeight="Normal" Grid.Row="5" Text="Culture" Margin="3"   VerticalAlignment="Center"/>
                <ComboBox FontWeight="Normal" Name="cmboCulture" Grid.Row="5" Margin="3"  VerticalAlignment="Center" HorizontalAlignment="Stretch"
                                      Grid.Column="1" SelectedItem="{Binding CultureString,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                    <ComboBoxItem Tag="0" Content="en-US"  IsSelected="True" />
                    <ComboBoxItem Tag="1"  Content="vi-VN" />
                    <ComboBoxItem Tag="2"   Content="sq-AL" />
                    <ComboBoxItem Tag="3" Content="uk-UA" />
                    <ComboBoxItem Tag="4"   Content="mn-MN"  />
                    <ComboBoxItem Tag="5"   Content="is-IS" />
                    <ComboBoxItem Tag="6"  Content="ar-SA" />
                    <ComboBoxItem Tag="7"   Content="he-IL" />
                </ComboBox>
                <TextBlock  FontWeight="Normal" Grid.Row="6" Text="Themes" Margin="3"   VerticalAlignment="Center"/>
                <syncfusion:ComboBoxAdv FontWeight="Normal" Name="themestyles" Grid.Row="6"  Margin="3" Grid.Column="1" SelectedItem="{Binding VisualStyle,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" syncfusion:ComboBoxAdvSelectionChangedCommand.Command="{Binding SelectionChangedCommand}" syncfusion:ComboBoxAdvSelectionChangedCommand.CommandParameter="{Binding ElementName=window}"  VerticalAlignment="Center">
                    <syncfusion:ComboBoxItemAdv Tag="0" Content="Metro" />
                    <syncfusion:ComboBoxItemAdv Tag="1" Content="Lime" />
                    <syncfusion:ComboBoxItemAdv Tag="2" Content="Office365" />
                    <syncfusion:ComboBoxItemAdv Tag="3" Content="Office2010Black" />
                    <syncfusion:ComboBoxItemAdv Tag="4" Content="Office2010Blue" />
                    <syncfusion:ComboBoxItemAdv Tag="5" Content="Office2010Silver" />
                    <syncfusion:ComboBoxItemAdv Tag="6" Content="Office2013DarkGray" />
                    <syncfusion:ComboBoxItemAdv Tag="7" Content="Office2013LightGray" />
                    <syncfusion:ComboBoxItemAdv Tag="8" Content="Office2013White" />
                    <syncfusion:ComboBoxItemAdv Tag="9" Content="Office2016Colorful" IsSelected="True" />
                    <syncfusion:ComboBoxItemAdv Tag="10" Content="Office2016DarkGray" />
                    <syncfusion:ComboBoxItemAdv Tag="11" Content="Office2016White" />
                    <syncfusion:ComboBoxItemAdv Tag="12" Content="Saffron" />
                    <syncfusion:ComboBoxItemAdv Tag="13" Content="VisualStudio2013" />
                    <syncfusion:ComboBoxItemAdv Tag="14" Content="VisualStudio2015" />
                    <syncfusion:ComboBoxItemAdv Tag="15" Content="Blend" />
                </syncfusion:ComboBoxAdv>
                <TextBlock  FontWeight="Normal" Grid.Row="7" Text="Move to Date" Visibility="Collapsed" Margin="3"   VerticalAlignment="Center"/>
                <syncfusion:DateTimeEdit FontWeight="Normal" Name="movetodate" Grid.Column="1" Grid.Row="7" Visibility="Collapsed" Margin="3" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="4" FontWeight="Normal" Text="Multiple date selection" VerticalAlignment="Center"  Margin="3" />
                <CheckBox FontWeight="Normal" Name="disablemultipledateselection"  Grid.Row="4" IsChecked="{Binding EnableMultipleSelection,Mode=TwoWay}" 
                                      Margin="3"   Grid.Column="1" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>

    </Grid>
</Window>