<layout:SampleLayoutWindow x:Class="FastCandleChart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
        xmlns:layout="clr-namespace:Syncfusion.Windows.SampleLayout;assembly=Syncfusion.Chart.Wpf.SampleLayout"
        xmlns:local="clr-namespace:FastCandleChart" 
        WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip"
        UserOptionsVisibility="Collapsed"
        Title="Candle" >
    <Grid>
        
        <Grid.DataContext>
            <local:TestingValuesCollection/>
        </Grid.DataContext>
        
        <Grid.Resources>
            
            <DataTemplate x:Key="headerTemplate">
                <TextBlock FontSize="22" Foreground="Black" Margin="5" Text="{Binding}"/>
            </DataTemplate>
            
            <DataTemplate x:Key="labelTemplate">
                <TextBlock FontSize="16" Foreground="Black" Margin="5" 
                           Text="{Binding Path=LabelContent}"></TextBlock>
            </DataTemplate>
            <DataTemplate x:Key="tooltiptemplate">
                <Border  BorderBrush="Black" BorderThickness="1" Margin="10" Background="White">
                    <Grid Margin="3,3,3,3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="High"/>
                            <TextBlock Text="Open"/>
                            <TextBlock Text="Close"/>
                            <TextBlock Text="Low"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text=" : "/>
                            <TextBlock Text=" : "/>
                            <TextBlock Text=" : "/>
                            <TextBlock Text=" : "/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="{Binding Item.Y}"/>
                            <TextBlock Text="{Binding Item.Y2}"/>
                            <TextBlock Text="{Binding Item.Y3}"/>
                            <TextBlock Text="{Binding Item.Y1}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </DataTemplate>
            <Style TargetType="Line" x:Key="axisStyle">
                <Setter Property="Stroke" Value="DarkGray"  />
                <Setter Property="StrokeThickness" Value="1"/>
            </Style>
            
            <Style TargetType="Line" x:Key="axisStyle1">
                <Setter Property="Stroke" Value="DarkGray"  />
                <Setter Property="StrokeThickness" Value="0.5"/>
            </Style>
            
        </Grid.Resources>
        
        <chart:SfChart x:Name="FastCandleChart"  AreaBorderThickness="0,1,1,1" 
                       AreaBorderBrush="DarkGray"  HorizontalAlignment="Center" Margin="15">
            
            <chart:SfChart.Header>
                <TextBlock Foreground="Black"  FontSize="24" 
                           FontFamily="Segoe UI" 
                           Margin="0,20,0,10">Microsoft Stock Market Trend Analysis</TextBlock>
            </chart:SfChart.Header>
           
            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis  Header="Product ID"  
                                     LabelTemplate="{StaticResource labelTemplate}" 
                                     HeaderTemplate="{StaticResource headerTemplate}"
                                     AxisLineStyle="{StaticResource axisStyle1}"
                                     MajorTickLineStyle="{StaticResource axisStyle}"/>
            </chart:SfChart.PrimaryAxis>
            
            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis RangePadding="Round" Header="Price in USD" 
                                     HeaderTemplate="{StaticResource headerTemplate}" Interval="10"
                                     LabelTemplate="{StaticResource labelTemplate}" 
                                     AxisLineStyle="{StaticResource axisStyle}" 
                                     MajorTickLineStyle="{StaticResource axisStyle}"/>
            </chart:SfChart.SecondaryAxis>

            <chart:FastCandleBitmapSeries ItemsSource="{Binding TestingModel}" 
                                          XBindingPath="X" High="Y" 
                                          Low="Y1" Open="Y2" Close="Y3" 
                                          BullFillColor="Green" 
                                          BearFillColor="Red"  
                                          Label="Price of Product" ShowTooltip="True" TooltipTemplate="{StaticResource tooltiptemplate}"/>

        </chart:SfChart>
        
    </Grid>
</layout:SampleLayoutWindow>
