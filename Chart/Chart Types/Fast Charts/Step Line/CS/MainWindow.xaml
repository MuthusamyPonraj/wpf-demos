<layout:SampleLayoutWindow x:Class="FastStepLineChart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
        xmlns:layout="clr-namespace:Syncfusion.Windows.SampleLayout;assembly=Syncfusion.Chart.Wpf.SampleLayout"
        xmlns:local="clr-namespace:FastStepLineChart" ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen" 
        UserOptionsVisibility="Collapsed"
        Title="Step Line" >
    <Grid>
        
        <Grid.Resources>
            
            <local:TooltipConverter x:Key="tooltipConY"/>
            
            <DataTemplate x:Key="headerTemplate">
                <TextBlock FontSize="16" Foreground="Black" Margin="5" Text="{Binding}"/>
            </DataTemplate>
            
            <DataTemplate x:Key="labelTemplate">
                <TextBlock FontSize="16" Foreground="Black" Margin="5" 
                           Text="{Binding Path=LabelContent}"></TextBlock>
            </DataTemplate>
            
            <Style TargetType="Line" x:Key="axisStyle">
                <Setter Property="Stroke" Value="DarkGray"  />
                <Setter Property="StrokeThickness" Value="1"/>
            </Style>
            
            <Style TargetType="Line" x:Key="axisStyle1">
                <Setter Property="Stroke" Value="DarkGray"  />
                <Setter Property="StrokeThickness" Value="0.5"/>
            </Style>
            
            <DataTemplate x:Key="tooltipVal">
                <Border Background="#FFFFFFFF" BorderBrush="#FF808080" 
                        BorderThickness="1" CornerRadius="3" Padding="4" >
                    <ContentControl Content="{Binding YData,Converter={StaticResource tooltipConY}}"
                                    Foreground="#FF666666" FontSize="15" />
                </Border>
            </DataTemplate>
            
        </Grid.Resources>

        <chart:SfChart x:Name="FastStepLine" AreaBorderThickness="0,1,1,1" 
                       AreaBorderBrush="#8e8e8e" HorizontalAlignment="Center" Margin="15">
            
            <chart:SfChart.Header>
                <TextBlock FontSize="24" Foreground="Black" 
                           FontFamily="Segoe UI" Margin="0,20,0,10">Weather Forecasting</TextBlock>
            </chart:SfChart.Header>
           
            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis  x:Name="axis1" Header="Date"  LabelFormat="MM/dd/yyyy"  
                                     LabelTemplate="{StaticResource labelTemplate}"  
                                     HeaderTemplate="{StaticResource headerTemplate}" 
                                     AxisLineStyle="{StaticResource axisStyle1}" 
                                     MajorTickLineStyle="{StaticResource axisStyle}"/>
            </chart:SfChart.PrimaryAxis>
            
            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis RangePadding="Round" Header="Temperature(In Fahrenheit)" 
                                     HeaderTemplate="{StaticResource headerTemplate}"  
                                     Interval="5"
                                     LabelTemplate="{StaticResource labelTemplate}"  
                                     AxisLineStyle="{StaticResource axisStyle}" 
                                     MajorTickLineStyle="{StaticResource axisStyle}"/>
            </chart:SfChart.SecondaryAxis>
            
            <chart:FastStepLineBitmapSeries Palette="Metro" EnableAnimation="True" 
                                            x:Name="FastStepLineSeries" XBindingPath="Date" 
                                            YBindingPath="Value" 
                                            Label="Expenditures" ShowTooltip="True" 
                                            TooltipTemplate="{StaticResource tooltipVal}"/>

        </chart:SfChart>
    </Grid>
</layout:SampleLayoutWindow>
