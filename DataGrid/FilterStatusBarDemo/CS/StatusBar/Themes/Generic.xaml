<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Syncfusion="http://schemas.syncfusion.com/wpf"
                    xmlns:local="clr-namespace:StatusBar">

    <Style x:Key="ClearButton" TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid Background="Transparent">
                        <Ellipse x:Name="BackgroundEllipse" />
                        <Path x:Name="ButtonPath"
                                Margin="3"
                                Stroke="Gray"
                                StrokeThickness="1.5"                                                                                                   Stretch="Uniform"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                            <Path.Data>
                                <PathGeometry>
                                    <PathGeometry.Figures>
                                        <PathFigure StartPoint="0,0">
                                            <LineSegment Point="50,50"/>
                                        </PathFigure>
                                        <PathFigure StartPoint="0,50">
                                            <LineSegment Point="50,0"/>
                                        </PathFigure>
                                    </PathGeometry.Figures>
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BackgroundEllipse"
                                    Property="Fill"
                                    Value="Red"/>                                  
                            <Setter TargetName="ButtonPath" 
                                    Property="Stroke" 
                                    Value="#FFf9ebeb"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
        
    <Style TargetType="{x:Type local:FilterStatusBar}">
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
        <Setter Property="BorderThickness" Value="1,0,1,1"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="Margin" Value="0.25,0,0,0"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FilterStatusBar}">
                    <Border x:Name="border"
                            Height="{TemplateBinding Height}"          
                            Margin="{TemplateBinding Margin}"
                            Grid.Row="1"   
                            BorderBrush="{TemplateBinding BorderBrush}"   
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="PART_TextBlock"
                                       VerticalAlignment="Center"                               
                                       FontSize="14"   
                                       Margin="3,0,0,0"
                                       Grid.Column="0"                                                                                   
                                       SnapsToDevicePixels="True"
                                       TextTrimming="WordEllipsis"
                                       ToolTipService.ShowDuration="90000"
                                       Text="{TemplateBinding FilterText}">
                                <TextBlock.ToolTip>
                                    <ToolTip x:Name="PART_ToolTip"
                                             Visibility="Collapsed"
                                             MaxWidth="500">
                                        <ToolTip.Content>
                                            <TextBlock TextWrapping="Wrap" 
                                                       TextTrimming="WordEllipsis" 
                                                       Text="{TemplateBinding FilterText}"/>
                                        </ToolTip.Content>
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                            <Border x:Name="borders"
                                    Grid.Column="1"                            
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center" 
                                    Background="White"                                   
                                    SnapsToDevicePixels="True">
                                <Button x:Name="PART_CloseButton"  
                                        Height="15"
                                        Width="15"                                        
                                        Margin="0,5,5,5"
                                        Padding="2"        
                                        Style="{StaticResource ClearButton}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        ToolTip="Clear Filter"/>
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>