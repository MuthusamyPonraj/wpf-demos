                                        VerticalAlignment="Top"
                                        Text="{Binding Path=Thickness.Right, StringFormat=: {0} px,Mode=TwoWay}" 
                                        FontSize="10" FontWeight="Normal"
										Foreground="#737373"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="3,1,1,0">
