            <DataTemplate x:Key="PageSizeTemplate">
                <Border Background="Transparent">
                    <Grid Height="43">
                        <Grid Margin="0,0,0,4">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="{Binding PageSizeName}"
                                FontSize="12"
                                Foreground="#292929"/>
                            <TextBlock Grid.Row="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"                                
                                FontSize="10" FontWeight="Normal"
                                Foreground="#737373">
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource PageSizeTextConverters}">
                                        <MultiBinding.Bindings>
                                            <Binding Path="Size" />
                                            <Binding Path="PageSizeUnit"/>
                                        </MultiBinding.Bindings>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </Grid>
                    </Grid>
                </Border>
            </DataTemplate>

            <DataTemplate x:Key="MarginTemplate">
                <Border Background="Transparent">
                    <Grid Height="49">   
                        <Grid Margin="0,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition  Height="17"/>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Margin="3,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Text="{Binding Path=MarginName}" 
                                FontSize="12" 
								Foreground="#292929"/>
                            <Grid Grid.Row="1" >
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal"  Margin="3,2,1,1">
                                    <TextBlock HorizontalAlignment="Left"
                                    VerticalAlignment="Top" FontWeight="Normal"
                                    Text="{Binding Source={StaticResource ResourceWrapperKey},Path=Left}" 
                                    FontSize="10" 
									Foreground="#737373"/>
                                    <TextBlock HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Text="{Binding Path=Thickness.Left, StringFormat=: {0} px,Mode=TwoWay}"  
                                       FontSize="10" FontWeight="Normal"
								       Foreground="#737373"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1"
                                    Margin="3,2,1,1"
                                    Orientation="Horizontal">
                                    <TextBlock HorizontalAlignment="Left"
                                        VerticalAlignment="Top" FontWeight="Normal"
                                        Text="{Binding Source={StaticResource ResourceWrapperKey},Path=Right}"
                                        FontSize="10" 
										Foreground="#737373"/>
