                            <local:AnnotationCollection>
                                <syncfusion:AnnotationEditorViewModel TextHorizontalAlignment="Center"
                                                                      TextVerticalAlignment="Center" 
                                                                      WrapText="Wrap" UnitWidth="75"                                                                     
