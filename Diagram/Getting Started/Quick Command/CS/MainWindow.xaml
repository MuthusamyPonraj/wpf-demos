<shared:ChromelessWindow x:Class="Quick_Command.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                         MinWidth="800"
        Template="{StaticResource ChromelessWindowTemplate}"       
        WindowStartupLocation="CenterScreen"
        Icon="App.ico"
        xmlns:shared="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.WPF"                  
        xmlns:local="clr-namespace:Quick_Command" 
        Title="QuickCommand" Height="700">
    <Window.Resources>
        <BitmapImage x:Key="MyImageSource" UriSource="Image.png"/>
        <DataTemplate x:Key="Template">
            <Image Source="Image.png"  HorizontalAlignment="Center" VerticalAlignment="Center"
                        Width="16" Height="16" />
        </DataTemplate>
        <DataTemplate x:Key="Path" >
            <Path StrokeThickness ="1" Width ="16" Height="16"  HorizontalAlignment = "Center" VerticalAlignment = "Center"  Fill = "White" Data = "{Binding Path=Content, RelativeSource={RelativeSource Mode=TemplatedParent}}" ></Path>
        </DataTemplate>
    </Window.Resources>
    <Grid x:Name="grid1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <!--Initialize Diagram-->
        <syncfusion:SfDiagram x:Name="diagramcontrol" DefaultConnectorType="Line" >

            <!--PageSettings used to enable the Appearance of Diagram Page.-->
            <syncfusion:SfDiagram.PageSettings>
                <syncfusion:PageSettings PageBackground="White" PageBorderThickness="0"/>
            </syncfusion:SfDiagram.PageSettings>

            <syncfusion:SfDiagram.ScrollSettings>
                <syncfusion:ScrollSettings ScrollLimit="Diagram"/>
            </syncfusion:SfDiagram.ScrollSettings>



            <!--Initialize Node-->
            <syncfusion:SfDiagram.Nodes>
                <syncfusion:NodeCollection>
                    <syncfusion:NodeViewModel ID="Starts" x:Name="Starts" UnitWidth="130" UnitHeight="50" OffsetX="135" OffsetY="50" ShapeStyle="{StaticResource Starts}"
                                         Shape="{StaticResource Ellipse}">
                        <syncfusion:NodeViewModel.Annotations>
                            <local:AnnotationCollection>
                                <syncfusion:AnnotationEditorViewModel TextHorizontalAlignment="Center" 
                                                                      TextVerticalAlignment="Center" 
                                                                      WrapText="Wrap" UnitWidth="75" 
                                                                       Content="Starts" 
                                                                      ViewTemplate="{StaticResource viewtemplate1}"/>
                            </local:AnnotationCollection>
                        </syncfusion:NodeViewModel.Annotations>
                    </syncfusion:NodeViewModel>

                    <syncfusion:NodeViewModel x:Name="ReadMarks" ID="ReadMarks" UnitWidth="130" UnitHeight="50" OffsetX="135" OffsetY="150"  ShapeStyle="{StaticResource ReadMarks}"
                                         Shape="{StaticResource Rectangle}">
                        <syncfusion:NodeViewModel.Annotations>
                            <local:AnnotationCollection>
                                <syncfusion:AnnotationEditorViewModel TextHorizontalAlignment="Center"
                                                                      TextVerticalAlignment="Center" WrapText="Wrap"
                                                                      UnitWidth="100" 
                                                                      Content="Read Marks" 
                                                                      ViewTemplate="{StaticResource viewtemplate}"/>
                            </local:AnnotationCollection>
                        </syncfusion:NodeViewModel.Annotations>
                    </syncfusion:NodeViewModel>

                    <syncfusion:NodeViewModel x:Name="Marks85"  ID="Marks85" UnitWidth="110" UnitHeight="110" OffsetX="135" OffsetY="280" 
                                  ShapeStyle="{StaticResource Marks}"
                                         Shape="{StaticResource Diamond}">
                        <syncfusion:NodeViewModel.Annotations>
                            <local:AnnotationCollection>
                                <syncfusion:AnnotationEditorViewModel TextHorizontalAlignment="Center"
                                                                      TextVerticalAlignment="Center" 
                                                                      WrapText="Wrap" UnitWidth="75"                                                                     
                                                                      Content="Marks > 85"
                                                                      ViewTemplate="{StaticResource viewtemplate}"/>
                            </local:AnnotationCollection>
                        </syncfusion:NodeViewModel.Annotations>
                    </syncfusion:NodeViewModel>

                    <syncfusion:NodeViewModel x:Name="Marks70t085"  ID="Marks70t085" UnitWidth="110" UnitHeight="110" OffsetX="335" OffsetY="280" 
                                  ShapeStyle="{StaticResource Marks}"
                                         Shape="{StaticResource Diamond}">
                        <syncfusion:NodeViewModel.Annotations>
                            <local:AnnotationCollection>
                                <syncfusion:AnnotationEditorViewModel TextHorizontalAlignment="Center"
                                                                      TextVerticalAlignment="Center" 
                                                                      WrapText="Wrap" UnitWidth="75"                                                                     
                                                                      Content="Marks >= 70 or &lt;= 85"
                                                                      ViewTemplate="{StaticResource viewtemplate}"/>
                            </local:AnnotationCollection>
                        </syncfusion:NodeViewModel.Annotations>
                    </syncfusion:NodeViewModel>

                    <syncfusion:NodeViewModel x:Name="Marks40t070" ID="Marks40t070" UnitWidth="110" UnitHeight="110" OffsetX="535" OffsetY="280" 
                                  ShapeStyle="{StaticResource Marks1}"
                                         Shape="{StaticResource Diamond}">
                        <syncfusion:NodeViewModel.Annotations>
                            <local:AnnotationCollection>
                                <syncfusion:AnnotationEditorViewModel TextHorizontalAlignment="Center"
                                                                      TextVerticalAlignment="Center" 
                                                                      WrapText="Wrap" UnitWidth="75"                                                                     
                                                                      Content="Marks >= 40 or &lt;= 70"
                                                                      ViewTemplate="{StaticResource viewtemplate}"/>
                            </local:AnnotationCollection>
                        </syncfusion:NodeViewModel.Annotations>
                    </syncfusion:NodeViewModel>

                    <syncfusion:NodeViewModel x:Name="DisplayFail"  ID="DisplayFail" UnitWidth="130" UnitHeight="50" OffsetX="735" OffsetY="280" 
                                  ShapeStyle="{StaticResource DisplayFail}"
                                         Shape="{StaticResource Rectangle}">
                        <syncfusion:NodeViewModel.Annotations>
                            <local:AnnotationCollection>
                                <syncfusion:AnnotationEditorViewModel TextHorizontalAlignment="Center"
                                                                      TextVerticalAlignment="Center" 
                                                                      WrapText="Wrap" UnitWidth="75"                                                                     
                                                                      Content="Display Fail"
                                                                      ViewTemplate="{StaticResource viewtemplate}"/>
                            </local:AnnotationCollection>
                        </syncfusion:NodeViewModel.Annotations>
                    </syncfusion:NodeViewModel>

                    <syncfusion:NodeViewModel x:Name="DisplayGradeS"  ID="DisplayGradeS" UnitWidth="130" UnitHeight="50" OffsetX="135" OffsetY="410" 
                                  ShapeStyle="{StaticResource Marks}"
                                         Shape="{StaticResource Rectangle}">
                        <syncfusion:NodeViewModel.Annotations>
                            <local:AnnotationCollection>
                                <syncfusion:AnnotationEditorViewModel TextHorizontalAlignment="Center"
                                                                      TextVerticalAlignment="Center" 
                                                                      WrapText="Wrap" UnitWidth="75"                                                                     
                                                                      Content="Display grade = S"
                                                                      ViewTemplate="{StaticResource viewtemplate}"/>
                            </local:AnnotationCollection>
                        </syncfusion:NodeViewModel.Annotations>
                    </syncfusion:NodeViewModel>

                    <syncfusion:NodeViewModel x:Name="DisplayGradeA"  IsSelected="True" ID="DisplayGradeA" UnitWidth="130" UnitHeight="50" OffsetX="335" OffsetY="410" 
                                  ShapeStyle="{StaticResource Marks}"
                                         Shape="{StaticResource Rectangle}">
