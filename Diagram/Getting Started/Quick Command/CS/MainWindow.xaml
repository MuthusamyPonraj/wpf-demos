                            <local:AnnotationCollection>
                                <syncfusion:AnnotationEditorViewModel RotationReference="Page" HorizontalAlignment="Center" VerticalAlignment="Center" ViewTemplate="{StaticResource connectorviewtemplate}" Content="Yes"></syncfusion:AnnotationEditorViewModel>
                            </local:AnnotationCollection>
                        </syncfusion:ConnectorViewModel.Annotations>
                    </syncfusion:ConnectorViewModel>

                    <syncfusion:ConnectorViewModel SourceNodeID="Marks40t070" TargetNodeID="DisplayGradeB">
                        <syncfusion:ConnectorViewModel.Annotations>
                            <local:AnnotationCollection>
                                <syncfusion:AnnotationEditorViewModel RotationReference="Page" HorizontalAlignment="Center" VerticalAlignment="Center" ViewTemplate="{StaticResource connectorviewtemplate}" Content="Yes"></syncfusion:AnnotationEditorViewModel>
                            </local:AnnotationCollection>
                        </syncfusion:ConnectorViewModel.Annotations>
                    </syncfusion:ConnectorViewModel>


                    <syncfusion:ConnectorViewModel SourceNodeID="DisplayGradeS" TargetNodeID="Stop" >
                        <syncfusion:ConnectorViewModel.Segments>
                            <local:SegmentPoint>
                                <syncfusion:StraightSegment Point="135,480"/>
                                <syncfusion:StraightSegment Point="460,480"/>
                            </local:SegmentPoint>
                        </syncfusion:ConnectorViewModel.Segments>
                        <syncfusion:ConnectorViewModel.Annotations>
                            <local:AnnotationCollection>
                                <syncfusion:AnnotationEditorViewModel Content=""></syncfusion:AnnotationEditorViewModel>
                            </local:AnnotationCollection>
                        </syncfusion:ConnectorViewModel.Annotations>
                    </syncfusion:ConnectorViewModel>

                    <syncfusion:ConnectorViewModel SourceNodeID="DisplayGradeA" TargetNodeID="Stop">
                        <syncfusion:ConnectorViewModel.Segments>
                            <local:SegmentPoint>
                                <syncfusion:StraightSegment Point="335,480"/>
                                <syncfusion:StraightSegment Point="460,480"/>
                            </local:SegmentPoint>
                        </syncfusion:ConnectorViewModel.Segments>
                        <syncfusion:ConnectorViewModel.Annotations>
                            <local:AnnotationCollection>
                                <syncfusion:AnnotationEditorViewModel Content=""></syncfusion:AnnotationEditorViewModel>
                            </local:AnnotationCollection>
                        </syncfusion:ConnectorViewModel.Annotations>
                    </syncfusion:ConnectorViewModel>

                    <syncfusion:ConnectorViewModel SourceNodeID="DisplayGradeB" TargetNodeID="Stop" >
                        <syncfusion:ConnectorViewModel.Segments>
                            <local:SegmentPoint>
                                <syncfusion:StraightSegment Point="535,480"/>
                                <syncfusion:StraightSegment Point="460,480"/>
                            </local:SegmentPoint>
                        </syncfusion:ConnectorViewModel.Segments>
                        <syncfusion:ConnectorViewModel.Annotations>
                            <local:AnnotationCollection>
                                <syncfusion:AnnotationEditorViewModel Content=""></syncfusion:AnnotationEditorViewModel>
                            </local:AnnotationCollection>
                        </syncfusion:ConnectorViewModel.Annotations>
                    </syncfusion:ConnectorViewModel>

                    <syncfusion:ConnectorViewModel SourceNodeID="DisplayFail" TargetNodeID="Stop">
                        <syncfusion:ConnectorViewModel.Segments>
                            <local:SegmentPoint>
                                <syncfusion:StraightSegment Point="735,480"/>
                                <syncfusion:StraightSegment Point="460,480"/>
                            </local:SegmentPoint>
                        </syncfusion:ConnectorViewModel.Segments>
                        <syncfusion:ConnectorViewModel.Annotations>
                            <local:AnnotationCollection>
                                <syncfusion:AnnotationEditorViewModel Content=""></syncfusion:AnnotationEditorViewModel>
                            </local:AnnotationCollection>
                        </syncfusion:ConnectorViewModel.Annotations>
                    </syncfusion:ConnectorViewModel>
                </syncfusion:ConnectorCollection>
            </syncfusion:SfDiagram.Connectors>
        </syncfusion:SfDiagram>

        <Border x:Name="PropertyBorder" Width="310" Margin="3,0,0,0" Background="White" Grid.Column="1" Visibility="Collapsed">
            <Canvas>
                <TextBlock x:Name="Propertytb" Foreground="#0075C0" Text="Properties" FontSize="15" Canvas.Top="10" Canvas.Left="10" Width="150" Height="40" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBlock x:Name="shape" Height="25" FontSize="14" Text="Shape" Canvas.Top="60" Canvas.Left="10" />
                <syncfusion:ComboBoxAdv x:Name="shapechanged" syncfusion:SkinStorage.VisualStyle="Metro" Width="140" Height="30"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" SelectedIndex="0" Canvas.Left="140" Canvas.Top="60"  SelectionChanged="shapechanged_SelectionChanged">
                    <syncfusion:ComboBoxItemAdv  Height="35">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="20" Height="20" Source="{StaticResource MyImageSource}"/>
