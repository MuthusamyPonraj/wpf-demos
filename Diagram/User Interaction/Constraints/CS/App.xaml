<Application x:Class="UserInteraction_Constraints.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UserInteraction_Constraints"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Initialize Shapes-->
                <ResourceDictionary Source="/Syncfusion.SfDiagram.Wpf;component/Resources/BasicShapes.xaml"/>
                <ResourceDictionary Source="/Syncfusion.SfDiagram.Wpf;component/Resources/BindingStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="Node">
                <Label Content="Use NodeConstraints to restrict end-users from performing certain operations on Node." Height="60" FontSize="24" FontFamily="Segoe UI" FontWeight="400" Foreground="#323232"></Label>
            </DataTemplate>

            <DataTemplate x:Key="Connector">
                <Label Content="Use ConnectorConstraints to restrict end-users from performing certain operations on Connector." Height="60" FontSize="24" FontFamily="Segoe UI" FontWeight="400" Foreground="#323232"></Label>
            </DataTemplate>

            <Style TargetType="Path" x:Key="NodeStyle">
                <Setter Property="Fill" Value="Transparent"/>
                <Setter Property="Stretch" Value="Fill"/>
                <Setter Property="Stroke" Value="Transparent"/>
                <Setter Property="StrokeThickness" Value="0"/>
            </Style>
            
            <Style TargetType="Path" x:Key="DefaultStyle">
                <Setter Property="Fill" Value="#C7E6FF"/>
                <Setter Property="StrokeThickness" Value="1"/>
                <Setter Property="Stretch" Value="Fill"/>
                <Setter Property="Stroke" Value="#1587FF"/>                
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
