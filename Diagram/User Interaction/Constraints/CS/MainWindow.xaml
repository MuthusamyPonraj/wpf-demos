<Window x:Class="UserInteraction_Constraints.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInteraction_Constraints"
        xmlns:Syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:ViewModel="clr-namespace:UserInteraction_Constraints.ViewModel"
        mc:Ignorable="d"
        Title="Constraints" Height="650" Width="1050" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <ViewModel:ConstraintsDiagramVM></ViewModel:ConstraintsDiagramVM>
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="Syncfusion:Connector">
                <Setter Property="ConnectorGeometryStyle">
                    <Setter.Value>
                        <Style TargetType="Path">
                            <Setter Property="Stroke" Value="#1587FF"></Setter>
                            <Setter Property="StrokeThickness" Value="1"></Setter>
                        </Style>                        
                    </Setter.Value>
                </Setter>
                <Setter Property="TargetDecoratorStyle">
                    <Setter.Value>
                        <Style TargetType="Path">
                            <Setter Property="Fill" Value="#1587FF"></Setter>
                            <Setter Property="StrokeThickness" Value="1"></Setter>
                        </Style>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <!--Initialize Diagram-->

        <Syncfusion:SfDiagram Grid.Column="0" Constraints="{Binding Constraints}"
                              Nodes="{Binding Nodes}"
                              Connectors="{Binding Connectors}" 
                              SelectedItems="{Binding SelectedItems}"
                              ItemSelectedCommand="{Binding ItemSelectedCommand}"
                              HorizontalRuler="{Binding HorizontalRuler}"
                              VerticalRuler="{Binding VerticalRuler}"
                              SnapSettings="{Binding SnapSettings}"/>

        <!-- Properties Panel for Graph Constraints-->
        <Border Margin="10,0,0,0" Grid.Column="1" BorderBrush="Black">
            <StackPanel Background="#F4F4F4">
                <Label Margin="15,20,0,10" Content="Diagram Constraints" BorderBrush="Transparent" FontSize="18" FontFamily="Segoe UI" Foreground="Black" FontWeight="600"/>
                <Rectangle HorizontalAlignment="Stretch" Fill="#dddddd" Height="1.3" Margin="20,-11,20,0"></Rectangle>
                <CheckBox Content="Zooming" IsChecked="{Binding Zoom ,Mode=TwoWay}" VerticalContentAlignment="Center" Margin="20,20,0,0" FontSize="14"/>
                <CheckBox Content="Undo/Redo" IsChecked="{Binding UndoRedo ,Mode=TwoWay}" VerticalContentAlignment="Center" Margin="20,20,0,0" FontSize="14"/>
                <CheckBox Content="Editing" IsChecked="{Binding Edit ,Mode=TwoWay}" VerticalContentAlignment="Center" Margin="20,20,0,0" FontSize="14"/>
                <CheckBox Content="Context Menu" IsChecked="{Binding Menus ,Mode=TwoWay}" VerticalContentAlignment="Center" Margin="20,20,0,0" FontSize="14"/>
                <CheckBox Content="Selectable" IsChecked="{Binding Select ,Mode=TwoWay}" VerticalContentAlignment="Center" Margin="20,20,0,0" FontSize="14"/>
                <CheckBox Content="Draggable" IsChecked="{Binding Drag ,Mode=TwoWay}" VerticalContentAlignment="Center" Margin="20,20,0,0" FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
