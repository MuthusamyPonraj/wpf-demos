<Window x:Class="UserInteraction_KeyBoardInteraction.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInteraction_KeyBoardInteraction"
        xmlns:Syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:ViewModel="clr-namespace:UserInteraction_KeyBoardInteraction.ViewModel"
        mc:Ignorable="d"
        Title="Keyboard Interaction" Height="450" Width="800" WindowState="Maximized">
    <Window.Resources>
        <!-- Style for Connector-->
        
        <Style TargetType="Syncfusion:Connector">
            <Setter Property="ConnectorGeometryStyle">
                <Setter.Value>
                    <Style TargetType="Path">
                        <Setter Property="Stroke" Value="Black"></Setter>
                        <Setter Property="StrokeThickness" Value="1"></Setter>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="TargetDecoratorStyle">
                <Setter.Value>
                    <Style TargetType="Path">
                        <Setter Property="Fill" Value="Black"></Setter>
                        <Setter Property="StrokeThickness" Value="1"></Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <ViewModel:KeyBoardInteractionDiagramVM x:Key="datacontext"/>

    </Window.Resources>
    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!--Initialize Diagram-->
        <Syncfusion:SfDiagram x:Name="DiagramControl"
                              DataContext="{StaticResource datacontext}"
                              Grid.Column="0" 
                              DefaultConnectorType="{Binding DefaultConnectorType}"
                              Constraints="{Binding Constraints}"
                              Nodes="{Binding Nodes}"       
                              Connectors="{Binding Connectors}"
                              PageSettings="{Binding PageSettings}"
                              Theme="{Binding Theme}"
                              CommandManager="{Binding CommandManager}" 
                              HorizontalRuler="{Binding HorizontalRuler}"
                              VerticalRuler="{Binding VerticalRuler}"
                              SnapSettings="{Binding SnapSettings}"
                              ItemAddedCommand="{Binding ItemAddedCommand}"
                              Groups="{Binding Groups}"
                              SelectedItems="{Binding SelectedItems}"/>


        <Border Margin="0,0,0,0" Background="#F4F4F4" Grid.Column="1">

            <StackPanel Margin="20,20,20,0">
                <Label Content="Built-In Commands" BorderBrush="Transparent" FontSize="18" FontFamily="Segoe UI" Foreground="Black" FontWeight="600" Margin="0,0,10,0"/>
                <Rectangle HorizontalAlignment="Stretch" Fill="#dddddd" Height="1.3"  Grid.Row="1" Grid.Column="1" Margin="7,5,10,0"></Rectangle>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Label Content="Command" FontSize="16" Background="Transparent" FontWeight="Bold" Foreground="Black" Grid.Column="0" Grid.Row="0"/>
                    <Label Content="Keys" FontSize="16" Background="Transparent" FontWeight="Bold" Foreground="Black" Grid.Column="1" Grid.Row="0"/>
                    <Label Content="Select All" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="0" Grid.Row="1"/>
                    <Label Content="Ctrl + A" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="1" Grid.Row="1"/>
                    <Label Content="Cut" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="0" Grid.Row="2"/>
                    <Label Content="Ctrl + X" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="1" Grid.Row="2"/>
                    <Label Content="Copy" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="0" Grid.Row="3"/>
                    <Label Content="Ctrl + C" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="1" Grid.Row="3"/>
                    <Label Content="Paste" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="0" Grid.Row="4"/>
                    <Label Content="Ctrl + V" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="1" Grid.Row="4"/>
                    <Label Content="Undo" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="0" Grid.Row="5"/>
                    <Label Content="Ctrl + Z" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="1" Grid.Row="5"/>
                    <Label Content="Redo" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="0" Grid.Row="6"/>
                    <Label Content="Ctrl + Y" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="1" Grid.Row="6"/>
                    <Label Content="Delete" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="0" Grid.Row="7"/>
                    <Label Content="Delete" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="1" Grid.Row="7"/>

                </Grid>

                <Label Content="Custom Commands" BorderBrush="Transparent" FontSize="18" FontFamily="Segoe UI" Foreground="Black" FontWeight="600" Margin="0,20,10,0"/>
                <Rectangle HorizontalAlignment="Stretch" Fill="#dddddd" Height="1.3"  Grid.Row="1" Grid.Column="1" Margin="7,5,10,0"></Rectangle>
                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Label Content="Command" FontSize="16" Background="Transparent" FontWeight="Bold" Foreground="Black" Grid.Column="0" Grid.Row="0"/>
                    <Label Content="Keys" FontSize="16" Background="Transparent" FontWeight="Bold" Foreground="Black" Grid.Column="1" Grid.Row="0"/>

                    <Label Content="Group" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="0" Grid.Row="1"/>
                    <Label Content="Ctrl + G" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="1" Grid.Row="1"/>
                    <Label Content="Ungroup" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="0" Grid.Row="2"/>
                    <Label Content="Ctrl + U" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="1" Grid.Row="2"/>
                </Grid>

                <Label Content="Modified Commands" BorderBrush="Transparent" FontSize="18" FontFamily="Segoe UI" Foreground="Black" FontWeight="600" Margin="0,20,10,0"/>
                <Rectangle HorizontalAlignment="Stretch" Fill="#dddddd" Height="1.3"  Grid.Row="1" Grid.Column="1" Margin="7,5,10,0"></Rectangle>
                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Label Content="Command" FontSize="16" Background="Transparent" FontWeight="Bold" Foreground="Black" Grid.Column="0" Grid.Row="0"/>
                    <Label Content="Keys" FontSize="16" Background="Transparent" FontWeight="Bold" Foreground="Black" Grid.Column="1" Grid.Row="0"/>

                    <Label Content="Navigate to parent node" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="0" Grid.Row="1"/>
                    <Label Content="Up Arrow" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="1" Grid.Row="1"/>
                    <Label Content="Navigate to child node" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="0" Grid.Row="2"/>
                    <Label Content="Down Arrow" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="1" Grid.Row="2"/>
                    <Label Content="Navigate to previous child" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="0" Grid.Row="3"/>
                    <Label Content="Left Arrow" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="1" Grid.Row="3"/>
                    <Label Content="Navigate to next child" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="0" Grid.Row="4"/>
                    <Label Content="Right Arrow" FontSize="16" Background="Transparent" Foreground="Black" Grid.Column="1" Grid.Row="4"/>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</Window>
