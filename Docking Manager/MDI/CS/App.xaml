                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="{x:Type Grid}"  x:Key="BackgroundBlack">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="#FF535353"/>
                    </Setter.Value>
