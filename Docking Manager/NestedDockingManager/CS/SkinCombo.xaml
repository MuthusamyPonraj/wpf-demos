<UserControl x:Class="NestedDockingManagerDemo.SkinCombo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NestedDockingManagerDemo"
          xmlns:controls="clr-namespace:Syncfusion.Windows.Tools.Controls;assembly=Syncfusion.Shared.Wpf" >
    <Grid>
        <controls:ComboBoxAdv VerticalContentAlignment="Center"  x:Name="combo" SelectionChanged="ComboBoxAdv_SelectionChanged" HorizontalAlignment="Right"  Margin="0,0,8,0"  Width="200" Height="25" DefaultText="--Select Theme--">

            <controls:ComboBoxItemAdv Content="Default"></controls:ComboBoxItemAdv>
            <controls:ComboBoxItemAdv Content="Office2007Blue"></controls:ComboBoxItemAdv>
            <controls:ComboBoxItemAdv Content="Office2007Black"></controls:ComboBoxItemAdv>
            <controls:ComboBoxItemAdv Content="Office2007Silver"></controls:ComboBoxItemAdv>
            <controls:ComboBoxItemAdv Content="Office2010Blue"></controls:ComboBoxItemAdv>
            <controls:ComboBoxItemAdv Content="Office2010Black"></controls:ComboBoxItemAdv>
            <controls:ComboBoxItemAdv Content="Office2010Silver"></controls:ComboBoxItemAdv>
            <controls:ComboBoxItemAdv Content="Blend"></controls:ComboBoxItemAdv>
            <controls:ComboBoxItemAdv Content="VS2010"></controls:ComboBoxItemAdv>
            <controls:ComboBoxItemAdv Content="Metro"></controls:ComboBoxItemAdv>
            <controls:ComboBoxItemAdv Content="Transparent"></controls:ComboBoxItemAdv>
        </controls:ComboBoxAdv>
    </Grid>

</UserControl>
