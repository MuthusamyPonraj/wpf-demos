<UserControl x:Class="ScrollableAutoHiddenPanelDemo.Views.DocumentAreaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
             syncfusion:DockingManager.State="Document"  
              syncfusion:DockingManager.Header="Docking Manager" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <FlowDocumentScrollViewer VerticalScrollBarVisibility="Auto" 
                                              HorizontalScrollBarVisibility="Auto">
            <FlowDocument>
                <Paragraph  FontSize="14" FontFamily="Segoe UI" >
                    This sample illustrates the Scrollable Auto Hidden panel feature of the Docking Manager.
                                Dock panels that do not have focus can be automatically collapsed.
                                The collapsed dock panels are expanded when a user clicks or hovers 
                                the mouse cursor over these dock tabs and also we can scroll the autohidden tabs by enabling the scrollable support using EnableScrollableSidePanel property.
                </Paragraph>
            </FlowDocument>
        </FlowDocumentScrollViewer>
        <!--Remaining Client Area-->
    </Grid>
</UserControl>
