<sync:ChromelessWindow x:Class="GanttStyleProperties.MainWindow"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                       xmlns:local="clr-namespace:GanttStyleProperties"
                       xmlns:shared="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.Wpf"
                       xmlns:sync="http://schemas.syncfusion.com/wpf"
                       Title="Gantt Style Properties"
                       sync:LayoutControl.SetMetroMode="True"
                       Width="1300"
                       Height="720"
                       Icon="App.ico"
                       WindowStartupLocation="CenterScreen">

    <!--  Window DataContext Information  -->
    <sync:ChromelessWindow.DataContext>
        <local:ViewModel />
    </sync:ChromelessWindow.DataContext>

    <i:Interaction.Behaviors>
        <local:CurrentDateLineStyleChangeBehavior />
    </i:Interaction.Behaviors>

    <sync:LayoutControl HeaderText="Gantt Style Properties"
                        HeaderDescriptionText="This sample illustrates the core features of the Gantt control and different ways of customizing them."
                        LayoutMode="Metro"
                        UserOptionsVisibility="Collapsed">
        <sync:LayoutControl.GridView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="125" />
                </Grid.RowDefinitions>
                
                <!--Gantt Control information-->
                <sync:GanttControl x:Name="Gantt"
                                   ConnectorStroke="{Binding ElementName=connectorStroke,
                                                             Path=Brush}"
                                   GridHeaderBackground="{Binding ElementName=ClrGridHeaderBackground,
                                                                  Path=Brush}"
                                   GridHeaderForeground="{Binding ElementName=ClrGridHeaderForeground,
                                                                  Path=Brush}"
                                   ItemsSource="{Binding TaskCollection}"
                                   NonWorkingHoursBackground="{Binding ElementName=ClrChartBackground,
                                                                       Path=Brush,
                                                                       Mode=TwoWay}"
                                   ProgressIndicatorBackground="{Binding ElementName=ClrProgressBar,
                                                                         Path=Brush,
                                                                         Mode=TwoWay}"
                                   ScheduleBackground="{Binding ElementName=ClrScheduleBackground,
                                                                Path=Brush,
                                                                Mode=TwoWay}"
                                   ScheduleBorderBrush="{Binding ElementName=ClrScheduleBorder,
                                                                 Path=Brush,
                                                                 Mode=TwoWay}"
                                   ScheduleForeground="{Binding ElementName=ClrScheduleForeground,
                                                                Path=Brush,
                                                                Mode=TwoWay}"
                                   ShowChartLines="{Binding ElementName=gridlineCB,
                                                            Path=IsChecked,
                                                            Mode=TwoWay}"
                                   ShowNonWorkingHoursBackground="{Binding ElementName=visibleCB,
                                                                           Path=IsChecked,
                                                                           Mode=TwoWay}"
                                   TaskNodeBackground="{Binding ElementName=ClrTaskNodeBackground,
                                                                Path=Brush}"
                                   UseAutoUpdateHierarchy="False"
                                   VisualStyle="Metro">
                    <sync:GanttControl.TaskAttributeMapping>
                        <sync:TaskAttributeMapping TaskIdMapping="Id"
                                                TaskNameMapping="Name"
                                                StartDateMapping="StDate" 
                                                ChildMapping="ChildTask"
                                                FinishDateMapping="EndDate"
                                                DurationMapping="Duration"                                            
                                                ProgressMapping="Complete"
                                                ResourceInfoMapping="Resource"
                                                PredecessorMapping="Predecessor"/>
                    </sync:GanttControl.TaskAttributeMapping>
                </sync:GanttControl>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Margin="5"
                                   VerticalAlignment="Top"
                                   FontWeight="Bold"
                                   Foreground="#FF21374C"
                                   Text="Properties:" />
                    </StackPanel>
                    <StackPanel Grid.Row="1"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <GroupBox Grid.Row="1"
                                  Grid.Column="0"
                                  Margin="0,0,0,3"
                                  Header="Grid">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0"
                                           Grid.Column="0"
                                           Margin="5,10,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="#FF21374C"
                                           Text="Header Background:" />
                                <sync:ColorPicker x:Name="ClrGridHeaderBackground"
                                                  Grid.Row="0"
                                                  Grid.Column="1"
                                                  Width="100"
                                                  Height="20"
                                                  Margin="5,10,0,0"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Brush="#8A85EC" />
                                <TextBlock Grid.Row="1"
                                           Grid.Column="0"
                                           Margin="5,10,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="#FF21374C"
                                           Text="Header Foreground:" />
                                <sync:ColorPicker x:Name="ClrGridHeaderForeground"
                                                  Grid.Row="1"
                                                  Grid.Column="1"
                                                  Width="100"
                                                  Margin="5,10,0,0"
                                                  Height="20"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Brush="White"
                                                  BrushMode="Solid" />
                            </Grid>
                        </GroupBox>
                        <GroupBox Grid.Row="1"
                                  Grid.Column="1"
                                  Margin="10,0,0,3"
                                  Header="Schedule">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                               </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0"
                                           Grid.Column="0"
                                           Margin="0,5,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="#FF21374C"
                                           Text=" Background:" />
                                <sync:ColorPicker x:Name="ClrScheduleBackground"
                                                  Grid.Row="0"
                                                  Grid.Column="1"
                                                   Margin="5,3,0,0"
                                                  Width="100"
                                                  Height="20"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Brush="#8A85EC"
                                                  BrushMode="Solid" />
                                <TextBlock Grid.Row="1"
                                           Grid.Column="0"
                                            Margin="0,5,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="#FF21374C"
                                           Text=" Foreground:" />
                                <sync:ColorPicker x:Name="ClrScheduleForeground"
                                                  Grid.Row="1"
                                                  Grid.Column="1"
                                                  Width="100"
                                                  Height="20"
                                                   Margin="5,3,0,0"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Brush="White"
                                                  BrushMode="Solid" />
                                <TextBlock Grid.Row="2"
                                           Grid.Column="0"
                                            Margin="0,5,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="#FF21374C"
                                           Text=" Border:" />
                                <sync:ColorPicker x:Name="ClrScheduleBorder"
                                                  Grid.Row="2"
                                                  Grid.Column="1"
                                                  Width="100"
                                                  Height="20"
                                                   Margin="5,3,0,0"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Brush="White"
                                                  BrushMode="Solid" />
                            </Grid>
                        </GroupBox>
                        <GroupBox Grid.Row="1"
                                  Grid.Column="2"
                                  Margin="10,0,0,3"
                                  Header="Chart">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0"
                                           Grid.Column="0"
                                           Margin="0,5,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="#FF21374C"
                                           Text="Task Node Background:" />
                                <sync:ColorPicker x:Name="ClrTaskNodeBackground"
                                                  Grid.Row="0"
                                                  Grid.Column="1"
                                                  Width="100"
                                                  Height="20"
                                                  Margin="5,3,0,0"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Brush="#CEED6B"
                                                  BrushMode="Solid" />
                                <TextBlock Grid.Row="1"
                                           Grid.Column="0"
                                           Margin="0,5,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="#FF21374C"
                                           Text="Connector Stroke:" />
                                <sync:ColorPicker x:Name="connectorStroke"
                                                  Grid.Row="1"
                                                  Grid.Column="1"
                                                  Width="100"
                                                  Height="20"
                                                  Margin="5,3,0,0"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Brush="#000000"
                                                  BrushMode="Solid" />
                                <TextBlock Grid.Row="0"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="#FF21374C"
                                           Text="Non Working Hours: " />
                                <sync:ColorPicker x:Name="ClrChartBackground"
                                                  Grid.Row="0"
                                                  Grid.Column="4"
                                                  Width="100"
                                                  Height="20"
                                                  Margin="5,3,0,0"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Brush="#EBEDEE"
                                                  BrushMode="Solid" />
                                <TextBlock Grid.Row="1"
                                           Grid.Column="3"
                                           Margin="0,5,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="#FF21374C"
                                           Text="Progress Indicator:" />
                                <sync:ColorPicker x:Name="ClrProgressBar"
                                                  Grid.Row="1"
                                                  Grid.Column="4"
                                                  Width="100"
                                                  Height="20"
                                                  Margin="5,3,0,0"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Brush="Black"
                                                  BrushMode="Solid" />

                                <TextBlock Grid.Row="0"
                                           Grid.Column="7"
                                           VerticalAlignment="Center"
                                           Text="Show Non Working Hours" />
                                <CheckBox x:Name="visibleCB"
                                          Grid.Row="0"
                                          Grid.Column="6"
                                          Width="Auto"
                                          Height="Auto"
                                          Margin="2,0,4,0"
                                          VerticalAlignment="Center"
                                          IsChecked="True" />
                                <TextBlock Grid.Row="1"
                                           Grid.Column="7"
                                           VerticalAlignment="Center"
                                           Text="Show Chart Line" />
                                <CheckBox x:Name="gridlineCB"
                                          Grid.Row="1"
                                          Grid.Column="6"
                                          Width="Auto"
                                          Height="Auto"
                                          Margin="2,0,4,0"
                                          VerticalAlignment="Center"
                                          IsChecked="True" />
                                <TextBlock Grid.Row="2"
                                           Height="20"
                                           Margin="0,5,3,0"
                                           Text="Current DateLine Style" />
                                <ComboBox x:Name="CurrentDateLineCB"
                                          Grid.Row="2"
                                          Grid.Column="1"
                                          Width="100"
                                          Height="20"
                                          Margin="5,3,0,0"
                                          SelectedIndex="1">
                                    <ComboBoxItem>Default</ComboBoxItem>
                                    <ComboBoxItem>Dashed Lines</ComboBoxItem>
                                    <ComboBoxItem>Dotted Lines</ComboBoxItem>
                                    <ComboBoxItem>Dashed With Dotted Lines</ComboBoxItem>
                                </ComboBox>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </Grid>
        </sync:LayoutControl.GridView>
    </sync:LayoutControl>
</sync:ChromelessWindow>
