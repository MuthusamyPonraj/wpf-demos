<syncfusion:ChromelessWindow x:Class="DragDropGrid.Window1"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                             Icon="App.ico"
                             syncfusion:LayoutControl.SetMetroMode="True">

    <syncfusion:LayoutControl HeaderDescriptionText="This sample illustrates column drag and drop support in GridControl."
                              HeaderText="Column Drag and Drop Demo"
                              LayoutMode="Metro"
                              syncfusion:LayoutControl.SetMetroMode="True"
                              UserOptionsVisibility="Collapsed">

        <syncfusion:LayoutControl.GridView>
            <ScrollViewer CanContentScroll="True"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <syncfusion:GridControl x:Name="grid" syncfusion:LayoutControl.SetMetroMode="True" />
            </ScrollViewer>
        </syncfusion:LayoutControl.GridView>

    </syncfusion:LayoutControl>
</syncfusion:ChromelessWindow>
