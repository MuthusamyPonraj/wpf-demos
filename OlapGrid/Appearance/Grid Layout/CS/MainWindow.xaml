<sfutils:SampleWindow x:Class="GridLayout.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:sfshared="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.WPF"
                      xmlns:olapgrid="clr-namespace:Syncfusion.Windows.Grid.Olap;assembly=Syncfusion.OlapGrid.WPF"
                      xmlns:viewModel="clr-namespace:GridLayout.ViewModel"
                      xmlns:sfutils="clr-namespace:SampleUtils;assembly=Syncfusion.OlapSampleUtils"
                      sfshared:SkinStorage.VisualStyle="Metro"
                      Title="Grid Layout" Icon="App.ico" Height="600" Width="940" MinHeight="500" MinWidth="600" 
                      WindowState="Maximized" WindowStartupLocation="CenterScreen" ResizeMode="CanResize">

    <Grid>
        <Grid.DataContext>
            <viewModel:ViewModel />
        </Grid.DataContext>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF119EDA">
            <TextBlock Text="This sample illustrates about customizing the layout appearance of OlapGrid." 
                       VerticalAlignment="Center" Foreground="White" Margin="5 0"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Margin="5" Header="OlapGrid" BorderThickness="1" BorderBrush="DarkGray">
                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="Bold"/>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>
                <olapgrid:OlapGrid Name="olapGrid1" Margin="5" ShowHeaderCellsToolTip="True"
                                   OlapDataManager="{Binding GridDataManager}"/>
            </GroupBox>

            <GridSplitter Name="spliterVertical" Grid.Column="0" Width="1" Margin="0 10 0 5" Background="#FF119EDA" VerticalAlignment="Stretch" HorizontalAlignment="Right" />

            <GroupBox Grid.Column="1" Margin="5" Header="Properties" BorderThickness="1" BorderBrush="DarkGray">
                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="Bold"/>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>

                <StackPanel Margin="5">
                    <TextBlock Margin="0 10" Text="Grid Layout" FontWeight="SemiBold"></TextBlock>
                    <ComboBox Margin="0 10" ItemsSource="{Binding GridLayout}" SelectedIndex="0"
                              SelectedItem="{Binding ElementName=olapGrid1, Path=Layout}"/>
                </StackPanel>
            </GroupBox>
        </Grid>
    </Grid>
</sfutils:SampleWindow>