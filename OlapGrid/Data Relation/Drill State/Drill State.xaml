<FlowDocument PagePadding="13" AllowDrop="True" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
   
    <Paragraph FontFamily="Cambria" FontSize="14">This sample illustrates different ways to drill members in OlapGrid.
    </Paragraph>
    <Paragraph TextAlignment="Center">
        <Image Source="images/DrillStateDemo.png" Stretch="None" />
    </Paragraph>
    <Paragraph TextAlignment="Center" FontFamily="Cambria" FontWeight="Bold" FontSize="14">Drill State in OlapGrid</Paragraph>
	
    <BlockUIContainer>
<TextBlock Style="{DynamicResource HeaderTextStyle}">Features:</TextBlock>
</BlockUIContainer>

    <List Margin="20,20,0,0">
        <ListItem>
            <Paragraph FontFamily="Cambria" FontSize="14">Expand All - Expands all the members available in the dimension.</Paragraph><Paragraph/>
        </ListItem>

        <ListItem>
            <Paragraph FontFamily="Cambria" FontSize="14">Collapse All - Collapses all the members available in the dimension.</Paragraph><Paragraph/>
        </ListItem>

        <ListItem>
            <Paragraph FontFamily="Cambria" FontSize="14">Expand To Level - Expands all the members up to a level mentioned under the "DrillUpDownLevel"
            property available in the dimension.</Paragraph><Paragraph/>
        </ListItem>

        <ListItem>
            <Paragraph FontFamily="Cambria" FontSize="14">Collapse To Level - Collapses all the members up to a level mentioned under the "DrillUpDownLevel"
            property available in the dimension.</Paragraph><Paragraph/>
        </ListItem>

        <ListItem>
            <Paragraph FontFamily="Cambria" FontSize="14">Expand Specific Member - Expand the specific member mentioned under the "DrillUpDownMember"
            property, up to a level mentioned under the "DrillUpDownLevel" property available
            in the dimension.</Paragraph><Paragraph/>
        </ListItem>

        <ListItem>
            <Paragraph FontFamily="Cambria" FontSize="14">Collapse Specific Member - Collapse the specific member mentioned under the "DrillUpDownMember"
            property, up to a level mentioned under the "DrillUpDownLevel" property available
            in the dimension.</Paragraph><Paragraph/>
        </ListItem>

        <ListItem>
            <Paragraph FontFamily="Cambria" FontSize="14">EnableRowHeaderContextMenu - Enables the context menu for row header showing
            different sorts of expand and collapse option.</Paragraph><Paragraph/>
        </ListItem>

        <ListItem>
            <Paragraph FontFamily="Cambria" FontSize="14">EnableColumnHeaderContextMenu - Enables the context menu for column header showing
            different sorts of expand and collapse option.</Paragraph>
        </ListItem>
    </List>
</FlowDocument>