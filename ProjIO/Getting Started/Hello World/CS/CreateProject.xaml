<Window x:Class="EssentialProjIOSamples.CreateProject"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Create Project"
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="354" Height="214" >
    <Grid>
        <Image VerticalAlignment="Top" Height="82" Name="image1"/>

        <TextBlock TextAlignment="Justify" FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,77,0,1" >
           
            <TextBlock.Background>
                 <LinearGradientBrush EndPoint="0.5,-0.04" StartPoint="0.5,1.04">
                    <GradientStop Color="#FFD9E9F7" Offset="0"/>
                    <GradientStop Color="#FFEFF8FF" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Background>
            <TextBlock.Text>
        Click the Create button to view the project xml document generated by Essential ProjIO. 
            </TextBlock.Text>
        </TextBlock>

        <Button Click="btnCreate_Click" HorizontalAlignment="Right" Margin="0,0,12,17" VerticalAlignment="Bottom" Width="100" Height="25" BorderBrush="LightBlue">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,-0.04" StartPoint="0.5,1.04">
                    <GradientStop Color="#FFD9E9F7" Offset="0"/>
                    <GradientStop Color="#FFEFF8FF" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            <StackPanel Orientation="Horizontal" >
                <TextBlock Text="Create Project" Margin="3" HorizontalAlignment="Right" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
    </Grid>
</Window>
