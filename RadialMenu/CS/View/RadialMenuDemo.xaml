                                        <TextBlock Name="Undotext1" Text="Undo"/>
                                    </StackPanel>
                                </Border>
                            </syncfusion:SfRadialMenuItem.Header>
                        <syncfusion:SfRadialMenuItem CheckMode="None" MenuMouseOverBackgroundColor="Transparent"/>
                        <syncfusion:SfRadialMenuItem CheckMode="None" MenuMouseOverBackgroundColor="Transparent"/>
                        <syncfusion:SfRadialMenuItem CheckMode="None" MenuMouseOverBackgroundColor="Transparent"/>
