                            <syncfusion:SfRadialColorItem ToolTipService.ToolTip="Plum" Click="Color" Color="#FF630331"/>
                            <syncfusion:SfRadialColorItem ToolTipService.ToolTip="Dark Red" Click="Color" Color="#FF800000"/>
