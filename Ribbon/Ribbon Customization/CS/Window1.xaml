<syncfusion:RibbonWindow x:Class="RibbonSample.Window1" x:Name="ribbonwindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
    Loaded="ribbonwindow_Loaded" Icon="App.ico" Office2010Icon="/Resources/syncfusion.png"
	xmlns:sample="clr-namespace:RibbonSample" syncfusion:SkinStorage.VisualStyle="Office2010Silver"
	WindowState="Normal"  SnapsToDevicePixels="True"
    Title="Untitled 1 - Ribbon Control"  WindowStartupLocation="CenterScreen" Height="635" Width="1087">

   
    <syncfusion:RibbonWindow.StatusBar>
        <syncfusion:RibbonStatusBar Grid.Row="2" Height="25">
            <Grid  Height="25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>

                </Grid.ColumnDefinitions>

                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10 0" Foreground="{Binding Path=Foreground, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:RibbonStatusBar}}}">Page : 1</TextBlock>
                <TextBlock VerticalAlignment="Center" Grid.Column="1" HorizontalAlignment="Left" Margin="10 0" Foreground="{Binding Path=Foreground, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:RibbonStatusBar}}}">Section : 1</TextBlock>
                <TextBlock VerticalAlignment="Center" Grid.Column="2" HorizontalAlignment="Left" Margin="10 0" Foreground="{Binding Path=Foreground, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:RibbonStatusBar}}}">Page 1 of 1</TextBlock>
                <TextBlock VerticalAlignment="Center" Grid.Column="4" HorizontalAlignment="Left" Margin="10 0" Foreground="{Binding Path=Foreground, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:RibbonStatusBar}}}">English (U.S.)</TextBlock>
                <syncfusion:RibbonButton SizeForm="ExtraSmall" Grid.Column="6" SmallIcon="Images/PageNumber.png" VerticalAlignment="Center" IsToggle="True" IsSelected="True"/>
                <syncfusion:RibbonButton SizeForm="ExtraSmall" Grid.Column="7" SmallIcon="Images/book_addressHS.png" VerticalAlignment="Center" IsToggle="True"/>
                <syncfusion:RibbonButton SizeForm="ExtraSmall" Grid.Column="8" SmallIcon="Images/Web.png" VerticalAlignment="Center" IsToggle="True"/>
            </Grid>
        </syncfusion:RibbonStatusBar>
    </syncfusion:RibbonWindow.StatusBar>

    <Grid>

        <Grid.RowDefinitions>
            <!--<RowDefinition Height="Auto"  />-->
            <RowDefinition Height="Auto"  />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" x:Name="ribbonGrid"  VerticalAlignment="Top">
            <syncfusion:Ribbon Name="MyRibbon"   EnableMoreCommands="False" BackStageColor="#FF2961B3">

                <syncfusion:Ribbon.TabPanelItem>
                    <syncfusion:RibbonButton SizeForm="ExtraSmall" SmallIcon="/Resources/Help16.png"/>
                </syncfusion:Ribbon.TabPanelItem>
                <!--Applicaton Menu-->
                <syncfusion:Ribbon.ApplicationMenu>
                    <syncfusion:ApplicationMenu Width="38" Height="38" syncfusion:Ribbon.KeyTip="F"
						ApplicationButtonImage="/Resources/syncfusion.png" IsPopupOpen="False">

                        <syncfusion:ApplicationMenu.ToolTip>
                            <syncfusion:ScreenTip MinWidth="150"  Description="Office Button" ImageSource="/Resources/AppMenuImage.png"  VerticalOffset="10">
                                <TextBlock TextWrapping="Wrap" Width="180">
								Click here to open, save or print, and to see everything you can do with your document
                                </TextBlock>
                            </syncfusion:ScreenTip>
                        </syncfusion:ApplicationMenu.ToolTip>
                        <!--Application Recent Document list Area-->
                        <syncfusion:ApplicationMenu.MenuItems>
                            <TextBlock MinWidth="300" FontWeight="Bold">Create New Outlook Item</TextBlock>
                            <Separator Padding="0"/>
                        </syncfusion:ApplicationMenu.MenuItems>
                        <syncfusion:SimpleMenuButton Label="New Mail Message" Icon="{StaticResource MailMessage}" syncfusion:Ribbon.KeyTip="M"/>
                        <syncfusion:SimpleMenuButton Label="Send" Icon="{StaticResource Send}" />
                        <Separator Margin="40,0,0,0"/>
                        <syncfusion:SimpleMenuButton Label="Save" syncfusion:RibbonCommandManager.SynchronizedItem="Save" Icon="{StaticResource QATSave}" syncfusion:Ribbon.KeyTip="S">
                        </syncfusion:SimpleMenuButton>
                        <syncfusion:SplitMenuButton Label="Save As" Icon="{StaticResource SaveAs}" syncfusion:Ribbon.KeyTip="Z">
                            <syncfusion:ApplicationMenuGroup Header="Save in another format" IconBarEnabled="False">
                                <syncfusion:SimpleMenuButton  Label="Save As" Description="Save a copy of the item to your computer in one of the several formates"	   Icon="{StaticResource SaveAs}"/>
                            </syncfusion:ApplicationMenuGroup>
                        </syncfusion:SplitMenuButton>
                        <syncfusion:SimpleMenuButton Label="Delete" Icon="{StaticResource Delete}" syncfusion:Ribbon.KeyTip="D" />
                        <syncfusion:SplitMenuButton Label="Move" Icon="{StaticResource MoveToFolder}" syncfusion:Ribbon.KeyTip="MO">
                            <syncfusion:ApplicationMenuGroup Header="Move this item to another folder">
                                <syncfusion:SimpleMenuButton Label="Inbox"  Icon="{StaticResource Inbox}"/>
                                <Separator Margin="20,0,0,0"/>
                                <syncfusion:SimpleMenuButton Label="Other Folder" Icon="{StaticResource Folder}"/>
                                <syncfusion:SimpleMenuButton Label="Copy to folder" Icon="{StaticResource CopyText}"/>
                            </syncfusion:ApplicationMenuGroup>
                        </syncfusion:SplitMenuButton>
                        <Separator Margin="40,0,0,0"/>
                        <syncfusion:SplitMenuButton Label="Print" Icon="{StaticResource Print}" syncfusion:Ribbon.KeyTip="PR">
                            <syncfusion:ApplicationMenuGroup Header="Preview and print">
                                <syncfusion:SimpleMenuButton Label="Print" Description="Select a printer, number of copies, and other printing options before printing."  Icon="{StaticResource Print}"/>
                                <syncfusion:SimpleMenuButton Label="Quick Print" syncfusion:RibbonCommandManager.SynchronizedItem="Quick Print" Description="Send the item directly to the default printer without making changes."  Icon="{StaticResource Print}"/>
                                <syncfusion:SimpleMenuButton Label="Print Preview" syncfusion:RibbonCommandManager.SynchronizedItem="Print Preview" Description="Preview and make changes to pages before printing."  Icon="{StaticResource Zoom}"/>
                                <syncfusion:SimpleMenuButton Label="Define Print Styles" Description="Change how an item prints by creating your own print styles."  Icon="{StaticResource Bookmark}"/>
                            </syncfusion:ApplicationMenuGroup>
                            <syncfusion:ApplicationMenuGroup Header="Page Setup">
                                <syncfusion:SimpleMenuButton Label="Memo Style" Icon="{StaticResource QuickParts}"/>
                            </syncfusion:ApplicationMenuGroup>
                        </syncfusion:SplitMenuButton>
                        <Separator Margin="40,0,0,0"/>
                        <syncfusion:SimpleMenuButton Label="Properties" Icon="{StaticResource Properties}" />
                        <syncfusion:SimpleMenuButton Label="Close" Icon="Resources/Close32.png" >
                        </syncfusion:SimpleMenuButton>
                        <!--Footer items-->
                        <syncfusion:ApplicationMenu.ApplicationItems>
                            <syncfusion:RibbonButton SizeForm = "Small" Label="Edit Options" SmallIcon="Resources/Options.png"/>
                        </syncfusion:ApplicationMenu.ApplicationItems>
                    </syncfusion:ApplicationMenu>
                </syncfusion:Ribbon.ApplicationMenu>

                <!-- Ribbon BackStage -->
                <syncfusion:Ribbon.BackStage>
                    <syncfusion:Backstage Name="RibbonBackStage" SelectedTabItemForeground="White">

                        <!--Back Stage Command button helps in executing simple commands like Save, Close, etc. Here we mentioned Save command.-->
                        <syncfusion:BackStageCommandButton Header="Save"  Command="Save" Icon="/Resources/Save16.png"/>

                        <!--Back Stage command button for Save As command.-->
                        <syncfusion:BackStageCommandButton Header="Save As" Command="SaveAs"  Icon="/Resources/Save16.png"/>

                        <!--BackStage Tab item helps to show some contents with header.-->
                        <syncfusion:BackstageTabItem Header="Info" >
                            <!--Back Stage tab item content can be of any type.-->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Information about Document 1" FontFamily="Segoe UI" FontSize="20" Margin="10"/>
                                    <Rectangle Grid.Row="1" Stroke="Gray" HorizontalAlignment="Stretch" StrokeThickness="1" StrokeDashArray="5"  Margin="10" Height="1"/>
                                    <Grid Grid.Row="2" Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Button Width="87" Height="80" Margin="5" BorderBrush="#FFA1A2A4" BorderThickness="1">
                                            <Button.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="#FFEEF0F2" Offset="1"/>
                                                    <GradientStop Color="#FFFEFEFE"/>
                                                </LinearGradientBrush>
                                            </Button.Background>
                                            <StackPanel>
                                                <Image Source="/SampleImages/security.png" Margin="2" Width="40"/>
                                                <TextBlock Text="Security" Margin="2"/>
                                            </StackPanel>

                                        </Button>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="3">
                                            <TextBlock Text="Permissions" Grid.Column="1" FontWeight="Bold" Margin="3"/>
                                            <TextBlock Text="Any one can open, copy and change any part of this document." Grid.Column="1" TextWrapping="Wrap" Margin="3"/>
                                        </StackPanel>
                                    </Grid>
                                    <Rectangle Grid.Row="3" Stroke="Gray" HorizontalAlignment="Stretch" StrokeThickness="1" StrokeDashArray="5"  Margin="10" Height="1"/>
                                    <Grid Grid.Row="4" Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Button Width="87" Height="80" Margin="5" BorderBrush="#FFA1A2A4" BorderThickness="1">
                                            <Button.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="#FFEEF0F2" Offset="1"/>
                                                    <GradientStop Color="#FFFEFEFE"/>
                                                </LinearGradientBrush>
                                            </Button.Background>
                                            <StackPanel>
                                                <Image Source="/SampleImages/sharing.png" Margin="2" Width="40"/>
                                                <TextBlock Text="Sharing" Margin="2"/>
                                            </StackPanel>

                                        </Button>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Top"  Margin="3">
                                            <TextBlock Text="Prepare for Sharing" Grid.Column="1" FontWeight="Bold" Margin="3"/>
                                            <TextBlock Text="Before sharing the file be aware that it contains author's name." Grid.Column="1" TextWrapping="Wrap" Margin="3"/>
                                        </StackPanel>
                                    </Grid>
                                    <Rectangle Grid.Row="5" Stroke="Gray" HorizontalAlignment="Stretch" StrokeThickness="1" StrokeDashArray="5"  Margin="10" Height="1"/>
                                    <Grid Grid.Row="6" Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Button Width="87" Height="80" Margin="5" BorderBrush="#FFA1A2A4" BorderThickness="1">
                                            <Button.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="#FFEEF0F2" Offset="1"/>
                                                    <GradientStop Color="#FFFEFEFE"/>
                                                </LinearGradientBrush>
                                            </Button.Background>
                                            <StackPanel>
                                                <Image Source="/SampleImages/versions.png" Margin="2" Width="40"/>
                                                <TextBlock Text="Versions" Margin="2"/>
                                            </StackPanel>

                                        </Button>
                                        <StackPanel Grid.Column="1"  VerticalAlignment="Top"  Margin="3">
                                            <TextBlock Text="Manage Versions" Grid.Column="1" FontWeight="Bold" Margin="3"/>
                                            <TextBlock Text="There are no previous versions of this file" Grid.Column="1" TextWrapping="Wrap" Margin="3"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <Border BorderThickness="0.5" BorderBrush="#FFBCBCBC" Margin="15" Grid.Column="1" HorizontalAlignment="Left" />
                                <Grid  Grid.Column="2">
                                    <Button VerticalAlignment="Top" Margin="20 10" HorizontalAlignment="Center" Click="Return">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Grid>
                                                                <Border Background="Gray" Opacity="0.1" x:Name="bor">
                                                                    <Border.BitmapEffect>
                                                                        <BlurBitmapEffect />
                                                                    </Border.BitmapEffect>
                                                                </Border>
                                                                <ContentPresenter Margin="3"/>
                                                            </Grid>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Opacity" TargetName="bor" Value="0.5"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                        <Image Source="/SampleImages/return.png" Width="186" Height="98" Stretch="Fill"/>
                                    </Button>
                                </Grid>
                            </Grid>

                        </syncfusion:BackstageTabItem>

                        <!--Back Stage tab item for Help content-->
                        <syncfusion:BackstageTabItem Header="Help">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Syncfusion User Interface Help" FontFamily="Segoe UI" FontSize="20" Margin="10"/>
                                    <Rectangle Grid.Row="1" Stroke="Gray" HorizontalAlignment="Stretch" StrokeThickness="1" StrokeDashArray="5"  Margin="10" Height="1"/>
                                    <Grid Grid.Row="2" Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Button Width="87" Height="80" Margin="5" BorderBrush="#FFA1A2A4" BorderThickness="1">
                                            <Button.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="#FFEEF0F2" Offset="1"/>
                                                    <GradientStop Color="#FFFEFEFE"/>
                                                </LinearGradientBrush>
                                            </Button.Background>
                                            <StackPanel>
                                                <Image Source="/SampleImages/help.png" Margin="2" Width="40"/>
                                                <TextBlock Text="Online Help" Margin="2"/>
                                            </StackPanel>

                                        </Button>
                                        <StackPanel Grid.Column="1"  VerticalAlignment="Top"  Margin="3">
                                            <TextBlock Text="Online Help" Grid.Column="1" FontWeight="Bold" Margin="3"/>
                                            <TextBlock Text="UG documents helps understanding the usage of our Syncfusion UI components." Grid.Column="1" TextWrapping="Wrap" Margin="3"/>
                                        </StackPanel>
                                    </Grid>
                                    <Rectangle Grid.Row="3" Stroke="Gray" HorizontalAlignment="Stretch" StrokeThickness="1" StrokeDashArray="5"  Margin="10" Height="1"/>
                                    <Grid Grid.Row="4" Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Button Width="87" Height="80" Margin="5" BorderBrush="#FFA1A2A4" BorderThickness="1">
                                            <Button.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="#FFEEF0F2" Offset="1"/>
                                                    <GradientStop Color="#FFFEFEFE"/>
                                                </LinearGradientBrush>
                                            </Button.Background>
                                            <StackPanel>
                                                <Image Source="/SampleImages/start.png" Margin="2" Width="40"/>
                                                <TextBlock Text="Getting Started" Margin="2"/>
                                            </StackPanel>

                                        </Button>
                                        <StackPanel Grid.Column="1"  VerticalAlignment="Top"  Margin="3">
                                            <TextBlock Text="Getting Started" Grid.Column="1" FontWeight="Bold" Margin="3"/>
                                            <TextBlock Text="A complete information on Syncfusion Ribbon control and its usage." Grid.Column="1" TextWrapping="Wrap" Margin="3"/>
                                        </StackPanel>
                                    </Grid>

                                </Grid>
                                <Border BorderThickness="0.5" BorderBrush="#FFBCBCBC" Margin="15" Grid.Column="1" HorizontalAlignment="Left" />
                                <Grid  Grid.Column="2">
                                    <Button VerticalAlignment="Top" Margin="20 10" HorizontalAlignment="Center" Click="Return">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Grid>
                                                                <Border Background="Gray" Opacity="0.1" x:Name="bor">
                                                                    <Border.BitmapEffect>
                                                                        <BlurBitmapEffect />
                                                                    </Border.BitmapEffect>
                                                                </Border>
                                                                <ContentPresenter Margin="3"/>
                                                            </Grid>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Opacity" TargetName="bor" Value="0.5"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                        <Image Source="/SampleImages/return.png" Width="186" Height="98" Stretch="Fill"/>
                                    </Button>
                                </Grid>
                                <!--<Image x:Name="blue1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Source="/SampleImages/Backstage.png" Grid.Column="2" Width="330" Height="160"/>
                                <Image x:Name="black1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Source="/SampleImages/Backstageblack.png" Grid.Column="2" Width="330" Height="160"/>-->
                                <!--<Image x:Name="silver1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Source="/SampleImages/Backstagesilver.png" Grid.Column="2" Width="330" Height="160"/>-->

                            </Grid>

                        </syncfusion:BackstageTabItem>

                        <!-- Back Stage command button for Options.-->
                        <syncfusion:BackStageCommandButton Header="Options"  Icon="Images/BlueLarge.png"/>

                        <!-- Back Stage command button for Exit.-->
                        <syncfusion:BackStageCommandButton Header="Exit"   Click="Exit" Icon="/SampleImages/exit.png"/>
                    </syncfusion:Backstage>
                </syncfusion:Ribbon.BackStage>


                <!--QAT toolbar-->
                <syncfusion:Ribbon.QuickAccessToolBar>
                    <syncfusion:QuickAccessToolBar>
                        <syncfusion:QuickAccessToolBar.QATMenuItems>
                            <syncfusion:RibbonButton Label="Save" syncfusion:RibbonCommandManager.SynchronizedItem="Save" />
                            <syncfusion:RibbonButton Label="Quick Print" syncfusion:RibbonCommandManager.SynchronizedItem="Quick Print"/>
                            <syncfusion:RibbonButton Label="Print Preview" syncfusion:RibbonCommandManager.SynchronizedItem="Print Preview"/>
                            <syncfusion:RibbonButton Label="Undo" syncfusion:RibbonCommandManager.SynchronizedItem="Undo"  />
                            <syncfusion:RibbonButton Label="Redo" syncfusion:RibbonCommandManager.SynchronizedItem="Redo" />
                            <syncfusion:RibbonButton Label="Paste" syncfusion:RibbonCommandManager.SynchronizedItem="Paste"/>
                        </syncfusion:QuickAccessToolBar.QATMenuItems>

                        <syncfusion:RibbonButton Label="Undo" SmallIcon="/Resources/Undo16.png" SizeForm="ExtraSmall"   
                                             ToolTip="Undo" syncfusion:RibbonCommandManager.SynchronizedItem="Undo" />
                        <syncfusion:RibbonButton Label="Redo" SmallIcon="/Resources/Redo16.png" SizeForm="ExtraSmall"
                                             ToolTip="Redo" syncfusion:RibbonCommandManager.SynchronizedItem="Redo"/>
                        <syncfusion:RibbonButton Command="ApplicationCommands.Save" SizeForm="ExtraSmall"
                                             syncfusion:RibbonCommandManager.SynchronizedItem="Save" SmallIcon="/Resources/Save16.png"/>
                     

                    </syncfusion:QuickAccessToolBar>
                </syncfusion:Ribbon.QuickAccessToolBar>

                <syncfusion:RibbonTab Caption="Home"  syncfusion:Ribbon.KeyTip="H" IsChecked="False">
                    <syncfusion:RibbonBar Header="Clipboard" Name="format_barClipboaurd" syncfusion:Ribbon.ShowInMoreCommands="False"  syncfusion:Ribbon.KeyTip="FN"
                                      CollapseImage="/Resources/Paste32.png" LauncherClick="OnLauncherClick">
                        <syncfusion:RibbonButton Margin="3,0,3,3" Width="44" Label="Paste" SizeForm="Large"
                                             LargeIcon="/Resources/Paste32.png"  syncfusion:RibbonCommandManager.SynchronizedItem="Paste" 
                                             syncfusion:Ribbon.KeyTip="CP">
                            <syncfusion:RibbonButton.ToolTip>
                                <syncfusion:ScreenTip Description="Paste (Ctrl+V)">
                                    <TextBlock Text="Paste the contents of clipboard." Width="130" HorizontalAlignment="Left" TextWrapping="Wrap"
                                                Foreground="#FF4C4C4C"/>
                                </syncfusion:ScreenTip>
                            </syncfusion:RibbonButton.ToolTip>
                        </syncfusion:RibbonButton>

                        <syncfusion:RibbonButton  Label="Cut" SizeForm="Small"  HorizontalAlignment="Left"
                                              SmallIcon="/Resources/Cut16.png"  syncfusion:Ribbon.KeyTip="CT">
                            <syncfusion:RibbonButton.ToolTip>
                                <syncfusion:ScreenTip Description="Cut (Ctrl+X)">
                                    <TextBlock Text="Cut the selection and put it on the clipboard." Width="130" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                                </syncfusion:ScreenTip>
                            </syncfusion:RibbonButton.ToolTip>
                        </syncfusion:RibbonButton>
                        
                        <syncfusion:RibbonButton  Label="Copy" SizeForm="Small"  SmallIcon="/Resources/Copy16.png"  
                                              syncfusion:Ribbon.KeyTip="CY" HorizontalAlignment="Left">
                            <syncfusion:RibbonButton.ToolTip>
                                <syncfusion:ScreenTip Description="Copy (Ctrl+C)">
                                    <TextBlock Text="Copy the selection and put it on the clipboard." Width="130" HorizontalAlignment="Left" TextWrapping="Wrap"
                                                Foreground="#FF4C4C4C"/>
                                </syncfusion:ScreenTip>
                            </syncfusion:RibbonButton.ToolTip>
                        </syncfusion:RibbonButton>
                        
                        <syncfusion:RibbonButton  Label="Format Painter" SizeForm="Small"  
                                              SmallIcon="/Resources/FormatPainter16.png"  
                                              syncfusion:Ribbon.KeyTip="CR" >
                            <syncfusion:RibbonButton.ToolTip>
                                <syncfusion:ScreenTip Description="Format painter (Ctrl+Shift+C)" HelpText="Press F1 for more help."
                                                      >
                                    <TextBlock Width="175" HorizontalAlignment="Left" TextWrapping="Wrap" Foreground="#FF4C4C4C">
                                        <Run Text="Copy formatting from one place and apply it to another."/>
                                        <LineBreak/>
                                        <LineBreak/>
                                        <Run Text="Double-click this button to apply the same formatting to multiple places in the document."/>
                                    </TextBlock>
                                </syncfusion:ScreenTip>
                            </syncfusion:RibbonButton.ToolTip>
                        </syncfusion:RibbonButton>
                    </syncfusion:RibbonBar>

                    <!-- Format Text - ForRibbon Bar for Basic Text-->
                    <syncfusion:RibbonBar IsLargeButtonPanel="False"  Name="barFont"  LauncherClick="OnLauncherClick"
                                          Header="Font" KeyTipOnCollapsed="ZF" syncfusion:Ribbon.KeyTip="HF" CollapseImage="{StaticResource FontColor}">
                        <syncfusion:ButtonPanel SeparatorVisibility="Collapsed" >
                            <syncfusion:RibbonComboBox Name="format_fontNameBox" syncfusion:Ribbon.ShowInMoreCommands="False" SelectionChanged="OnFontNameChanged"  IsEditable="True"  Width="110" syncfusion:Ribbon.KeyTip="FF" >
                                <syncfusion:RibbonComboBox.ToolTip>
                                <syncfusion:ScreenTip Description="Font (Ctrl+Shift+F)" 
                                                      >
                                    <TextBlock Width="165" Text="Change the font face." HorizontalAlignment="Left" TextWrapping="Wrap" Foreground="#FF4C4C4C">
                                       
                                    </TextBlock>
                                </syncfusion:ScreenTip>
                                </syncfusion:RibbonComboBox.ToolTip>
                            </syncfusion:RibbonComboBox>
                            <syncfusion:RibbonComboBox Name="format_fontSizeBox" syncfusion:Ribbon.ShowInMoreCommands="False" SelectionChanged="OnFontSizeChanged" IsEditable="True" Width="40" SelectedIndex="0" syncfusion:Ribbon.KeyTip="FZ">
                            </syncfusion:RibbonComboBox>
                        </syncfusion:ButtonPanel>
                        <syncfusion:ButtonPanel  Height="24" SeparatorVisibility="Collapsed"  >
                            <syncfusion:RibbonButton Padding="2" Height="22" Width="24"  Name="format_btnIncFontSize" SizeForm="ExtraSmall" SmallIcon="/Resources/GrowFont16.png" Command="EditingCommands.IncreaseFontSize" CommandTarget="{Binding ElementName=Editor}" syncfusion:Ribbon.KeyTip="IF"/>
                            <syncfusion:RibbonButton Padding="2" Height="22" Width="24"  Name="format_btnDecFontSize" SizeForm="ExtraSmall" SmallIcon="/Resources/ShrinkFont16.png" Command="EditingCommands.DecreaseFontSize" CommandTarget="{Binding ElementName=Editor}" syncfusion:Ribbon.KeyTip="DF"/>
                        </syncfusion:ButtonPanel>

                        <syncfusion:ButtonPanel Height="24">
                            <syncfusion:RibbonButton Padding="2" syncfusion:Ribbon.KeyTip="B" Height="22" Width="24" SizeForm="ExtraSmall" IsToggle="True" Command="EditingCommands.ToggleBold" CommandTarget="{Binding ElementName=Editor}" Name="format_btnBold" SmallIcon="/Resources/Bold16.png"/>
