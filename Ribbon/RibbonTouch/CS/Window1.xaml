<syncfusion:RibbonWindow x:Class="RibbonSample.Window1"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:sample="clr-namespace:RibbonSample"
                         xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                         x:Name="ribbonwindow"
                         Title="Untitled 1 - Ribbon Control"
                         Width="1087"
                         Height="635"
                         Icon="App.ico"
                         IsGlassActive="False"
                         Loaded="ribbonwindow_Loaded"
                         Office2010Icon="/Resources/syncfusion.png"
                         SnapsToDevicePixels="True"
                         TitleBarPatternImage="{Binding ElementName=patterncombo,
                                                        Path=SelectedItem.Tag}"
                         WindowStartupLocation="CenterScreen"
                         WindowState="Normal"
                         syncfusion:SkinStorage.EnableTouch="True"
                         syncfusion:SkinStorage.VisualStyle="Office2013">
    <Window.Resources>





        <DataTemplate x:Key="myTaskTemplate">
            <Grid Margin="0,5,5,5">
                <Rectangle Fill="Transparent" Stroke="Red" />
                <StackPanel Width="190"
                            Height="100"
                            Margin="1,1,1,1"
                            HorizontalAlignment="Left"
                            Background="White"
                            Orientation="Horizontal">


                    <Grid Height="120" Background="White">

                        <Image Grid.Row="0"
                               Margin="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom"
                               Source="/images/template.png" />

                        <TextBlock Margin="4,0,0,0"
                                   FontSize="16"
                                   Foreground="Red"
                                   Text="{Binding SNo}" />
                        <TextBlock Margin="0,20,0,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   FontSize="10"
                                   Foreground="DarkBlue"
                                   Text="{Binding ItemText}"
                                   TextAlignment="Center" />
                        <TextBlock Width="100"
                                   Margin="55,40,5,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   FontSize="3"
                                   Text="{Binding Description}"
                                   TextWrapping="Wrap" />


                    </Grid>

                </StackPanel>
            </Grid>
        </DataTemplate>





    </Window.Resources>

    <syncfusion:RibbonWindow.StatusBar>
        <syncfusion:RibbonStatusBar Grid.Row="2" Height="35">
            <Grid Height="35">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />

                </Grid.ColumnDefinitions>

                <TextBlock Margin="10 0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="{Binding Path=Foreground,
                                                Mode=OneWay,
                                                RelativeSource={RelativeSource FindAncestor,
                                                                               AncestorType={x:Type syncfusion:RibbonStatusBar}}}">
                    Slide :
                </TextBlock>
                <TextBlock Grid.Column="1"
                           Margin="0 0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           DataContext="{Binding ElementName=itempreview,
                                                 Path=SelectedItem}"
                           Foreground="{Binding Path=Foreground,
                                                Mode=OneWay,
                                                RelativeSource={RelativeSource FindAncestor,
                                                                               AncestorType={x:Type syncfusion:RibbonStatusBar}}}"
                           Text="{Binding SNo}" />
                <TextBlock Grid.Column="2"
                           Margin="10 0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="{Binding Path=Foreground,
                                                Mode=OneWay,
                                                RelativeSource={RelativeSource FindAncestor,
                                                                               AncestorType={x:Type syncfusion:RibbonStatusBar}}}">
                    of 10
                </TextBlock>
                <TextBlock Grid.Column="4"
                           Margin="10 0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="{Binding Path=Foreground,
                                                Mode=OneWay,
                                                RelativeSource={RelativeSource FindAncestor,
                                                                               AncestorType={x:Type syncfusion:RibbonStatusBar}}}">
                    English (U.S.)
                </TextBlock>
                <StackPanel Grid.Column="7" Orientation="Horizontal">

                    <RepeatButton x:Name="incrementButton" Click="incrementButton_Click">
                        <RepeatButton.Style>
                            <Style TargetType="{x:Type RepeatButton}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type RepeatButton}">

                                            <Viewbox Width="13" Height="13">
                                                <Grid Background="Transparent">
                                                    <Path Width="16"
                                                          Height="16"
                                                          Margin="0,0,0,0"
                                                          Data="M0,0L53.333,0 53.333,8.888 0,8.888z"
                                                          Fill="#FFFFFFFF"
                                                          RenderTransformOrigin="0.5,0.5"
                                                          Stretch="Uniform">
                                                        <Path.RenderTransform>
                                                            <TransformGroup>
                                                                <TransformGroup.Children>
                                                                    <RotateTransform Angle="0" />
                                                                    <ScaleTransform ScaleX="-1" ScaleY="-1" />
                                                                </TransformGroup.Children>
                                                            </TransformGroup>
                                                        </Path.RenderTransform>
                                                    </Path>
                                                </Grid>
                                            </Viewbox>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </RepeatButton.Style>
                    </RepeatButton>

                    <Slider x:Name="zoomSlider"
                            Width="100"
                            Margin="5 0 5 0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Maximum="50"
                            Minimum="10"
                            ValueChanged="Slider_ValueChanged_1"
                            Value="30">
                        <Slider.Style>
                            <Style TargetType="{x:Type Slider}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Slider}">
                                            <Grid>
                                                <Border x:Name="TrackBackground"
                                                        Grid.Row="1"
                                                        Height="2"
                                                        Margin="0,0"
                                                        VerticalAlignment="center"
                                                        Background="White"
                                                        BorderBrush="White"
                                                        BorderThickness="1"
                                                        CornerRadius="1">
                                                    <Canvas Margin="-6,-1">
                                                        <Rectangle x:Name="PART_SelectionRange"
                                                                   Height="2.0"
                                                                   Fill="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"
                                                                   Stroke="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}"
                                                                   StrokeThickness="1.0"
                                                                   Visibility="Hidden" />
                                                    </Canvas>
                                                </Border>
                                                <Track x:Name="PART_Track" Grid.Row="1">
                                                    <Track.Thumb>
                                                        <Thumb Foreground="White">
                                                            <Thumb.Style>
                                                                <Style TargetType="{x:Type Thumb}">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                                                <Rectangle Fill="{TemplateBinding Foreground}" Height="15" Width="3"/>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </Thumb.Style>
                                                        </Thumb>
                                                    </Track.Thumb>
                                                </Track>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Slider.Style>
                    </Slider>

                    <RepeatButton x:Name="decrementButton"
                                  Margin="0 0 5 0"
                                  Click="decrementButton_Click">
                        <RepeatButton.Style>
                            <Style TargetType="{x:Type RepeatButton}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type RepeatButton}">
                                            <Viewbox Width="13" Height="13">
                                                <Grid Background="Transparent">
                                                    <Path Width="16"
                                                          Height="16"
                                                          Margin="0,0,0,0"
                                                          Data="M19.833,0L32.501,0 32.501,19.833999 52.334,19.833999 52.334,32.500999 32.501,32.500999 32.501,52.333 19.833,52.333 19.833,32.500999 0,32.500999 0,19.833999 19.833,19.833999z"
                                                          Fill="#FFFFFFFF"
                                                          RenderTransformOrigin="0.5,0.5"
                                                          Stretch="Uniform">
                                                        <Path.RenderTransform>
                                                            <TransformGroup>
                                                                <TransformGroup.Children>
                                                                    <RotateTransform Angle="0" />
                                                                    <ScaleTransform ScaleX="-1" ScaleY="-1" />
                                                                </TransformGroup.Children>
                                                            </TransformGroup>
                                                        </Path.RenderTransform>
                                                    </Path>
                                                </Grid>
                                            </Viewbox>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </RepeatButton.Style>
                    </RepeatButton>
                    <TextBlock Margin="0 0 5 0"
                               VerticalAlignment="Center"
                               Text=" 100 %" />
                </StackPanel>


                <!--
                    <syncfusion:RibbonButton Grid.Column="6"
                    VerticalAlignment="Center"
                    IsSelected="True"
                    IsToggle="True"
                    SizeForm="ExtraSmall"
                    SmallIcon="Images/ReadMode.png" />
                    <syncfusion:RibbonButton Grid.Column="7"
                    VerticalAlignment="Center"
                    IsToggle="True"
                    SizeForm="ExtraSmall"
                    SmallIcon="Images/PrintLayout.png" />
                -->

            </Grid>
        </syncfusion:RibbonStatusBar>
    </syncfusion:RibbonWindow.StatusBar>

    <Grid>

        <Grid.RowDefinitions>
            <!--  <RowDefinition Height="Auto"  />  -->
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <syncfusion:Ribbon Name="MyRibbon"
                           BackStageColor="#D24726"
                           BackStageCornerImageVisibility="Collapsed"
                           BackStageHeader="FILE"
                           EnableMoreCommands="False">

            <!--
                <syncfusion:Ribbon.TabPanelItem>
                <syncfusion:RibbonButton SizeForm="ExtraSmall" SmallIcon="Resources/Smile16.png" />
                </syncfusion:Ribbon.TabPanelItem>
            -->

            <!--  Ribbon BackStage  -->
            <syncfusion:Ribbon.BackStage>
                <syncfusion:Backstage Name="RibbonBackStage">

                    <!--  Back Stage Command button helps in executing simple commands like Save, Close, etc. Here we mentioned Save command.  -->
                    <syncfusion:BackStageCommandButton Command="Save" Header="Save" />

                    <!--  Back Stage command button for Save As command.  -->
                    <syncfusion:BackStageCommandButton Command="SaveAs" Header="Save As" />

                    <!--  BackStage Tab item helps to show some contents with header.  -->
                    <syncfusion:BackstageTabItem Header="Info">
                        <!--  Back Stage tab item content can be of any type.  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Margin="30,10,10,10"
                                           FontFamily="Segoe UI"
                                           FontSize="30"
                                           FontWeight="Light"
                                           Text="Info" />

                                <Grid Grid.Row="2" Margin="27 10 10 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <syncfusion:RibbonButton Width="100"
                                                             Height="100"
                                                             Margin="5"
                                                             BorderBrush="#FFA1A2A4"
                                                             BorderThickness="1"
                                                             Label="Protect Presentation"
                                                             LargeIcon="/SampleImages/security.png"
                                                             SizeForm="Large"
                                                             SnapsToDevicePixels="True"
                                                             Style="{StaticResource TouchLargeRibbonButtonStyle}" />
                                    <StackPanel Grid.Column="1"
                                                Margin="3"
                                                VerticalAlignment="Top">
                                        <TextBlock Grid.Column="1"
                                                   Margin="3"
                                                   FontWeight="Bold"
                                                   Text="Protect Presentation" />
                                        <TextBlock Grid.Column="1"
                                                   Margin="3"
                                                   Text="Control what types of changes people can make to this presentation."
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="4" Margin="27 10 10 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <syncfusion:RibbonButton Width="100"
                                                             Height="100"
                                                             Margin="5"
                                                             BorderBrush="#FFA1A2A4"
                                                             BorderThickness="1"
                                                             Label="Check for Issues"
                                                             LargeIcon="/SampleImages/sharing.png"
                                                             SizeForm="Large"
                                                             SnapsToDevicePixels="True"
                                                             Style="{StaticResource TouchLargeRibbonButtonStyle}" />
                                    <StackPanel Grid.Column="1"
                                                Margin="3"
                                                VerticalAlignment="Top">
                                        <TextBlock Grid.Column="1"
                                                   Margin="3"
                                                   FontWeight="Bold"
                                                   Text="Inspect Presentation" />
                                        <TextBlock Grid.Column="1"
                                                   Margin="3"
                                                   Text="Before sharing the file be aware that it contains author's name."
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="6" Margin="27 10 10 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <syncfusion:RibbonButton Width="100"
                                                             Height="100"
                                                             Margin="5"
                                                             BorderBrush="#FFA1A2A4"
                                                             BorderThickness="1"
                                                             Label="Manage Versions"
                                                             LargeIcon="SampleImages/versions.png"
                                                             SizeForm="Large"
                                                             SnapsToDevicePixels="True"
                                                             Style="{StaticResource TouchLargeRibbonButtonStyle}" />
                                    <StackPanel Grid.Column="1"
                                                Margin="3"
                                                VerticalAlignment="Top">
                                        <TextBlock Grid.Column="1"
                                                   Margin="3"
                                                   FontWeight="Bold"
                                                   Text="Versions" />
                                        <TextBlock Grid.Column="1"
                                                   Margin="3"
                                                   Text="There are no previous versions of this file"
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                            <Border Grid.Column="1"
                                    Margin="15"
                                    HorizontalAlignment="Left"
                                    BorderBrush="#FFBCBCBC"
                                    BorderThickness="0.5" />
                            <Grid Grid.Column="2">
                                <Button Margin="20 10"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Click="Return">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid>
                                                            <Border x:Name="bor"
                                                                    Background="Gray"
                                                                    Opacity="0.1">
                                                                <Border.BitmapEffect>
                                                                    <BlurBitmapEffect />
                                                                </Border.BitmapEffect>
                                                            </Border>
                                                            <ContentPresenter Margin="3" />
                                                        </Grid>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="bor" Property="Opacity" Value="0.5" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                    <Image Width="186"
                                           Height="98"
                                           Source="/SampleImages/return.png"
                                           Stretch="Fill" />
                                </Button>
                            </Grid>
                        </Grid>

                    </syncfusion:BackstageTabItem>

                    <!--  Back Stage tab item for Help content  -->
                    <syncfusion:BackstageTabItem Header="Help">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Margin="30,10,10,10"
                                           FontFamily="Segoe UI"
                                           FontSize="30"
                                           FontWeight="Light"
                                           Text="Syncfusion User Interface Help" />

                                <Grid Grid.Row="2" Margin="27 10 10 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <syncfusion:RibbonButton Width="100"
                                                             Height="100"
                                                             Margin="5"
                                                             BorderBrush="#FFA1A2A4"
                                                             BorderThickness="1"
                                                             Label="Online Help"
                                                             LargeIcon="SampleImages/help.png"
                                                             SizeForm="Large"
                                                             SnapsToDevicePixels="True"
                                                             Style="{StaticResource TouchLargeRibbonButtonStyle}" />
                                    <StackPanel Grid.Column="1"
                                                Margin="3"
                                                VerticalAlignment="Top">
                                        <TextBlock Grid.Column="1"
                                                   Margin="3"
                                                   FontWeight="Bold"
                                                   Text="Online Help" />
                                        <TextBlock Grid.Column="1"
                                                   Margin="3"
                                                   Text="UG documents helps understanding the usage of our Syncfusion UI components."
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="4" Margin="27 10 10 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <syncfusion:RibbonButton Width="100"
                                                             Height="100"
                                                             Margin="5"
                                                             BorderBrush="#FFA1A2A4"
                                                             BorderThickness="1"
                                                             Label="Getting Started"
                                                             LargeIcon="/SampleImages/start.png"
                                                             SizeForm="Large"
                                                             SnapsToDevicePixels="True"
                                                             Style="{StaticResource TouchLargeRibbonButtonStyle}" />
                                    <StackPanel Grid.Column="1"
                                                Margin="3"
                                                VerticalAlignment="Top">
                                        <TextBlock Grid.Column="1"
                                                   Margin="3"
                                                   FontWeight="Bold"
                                                   Text="Getting Started" />
                                        <TextBlock Grid.Column="1"
                                                   Margin="3"
                                                   Text="A complete information on Syncfusion Ribbon control and its usage."
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>

                            </Grid>
                            <Border Grid.Column="1"
                                    Margin="15"
                                    HorizontalAlignment="Left"
                                    BorderBrush="#FFBCBCBC"
                                    BorderThickness="0.5" />
                            <Grid Grid.Column="2">
                                <Button Margin="20 10"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Click="Return">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid>
                                                            <Border x:Name="bor"
                                                                    Background="Gray"
                                                                    Opacity="0.1">
                                                                <Border.BitmapEffect>
                                                                    <BlurBitmapEffect />
                                                                </Border.BitmapEffect>
                                                            </Border>
                                                            <ContentPresenter Margin="3" />
                                                        </Grid>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="bor" Property="Opacity" Value="0.5" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                    <Image Width="186"
                                           Height="98"
                                           Source="/SampleImages/return.png"
                                           Stretch="Fill" />
                                </Button>
                            </Grid>

                        </Grid>

                    </syncfusion:BackstageTabItem>
                    <syncfusion:BackStageSeparator />
                    <!--  Back Stage command button for Options.  -->
                    <syncfusion:BackStageCommandButton Header="Options" />

                    <!--  Back Stage command button for Exit.  -->
                    <syncfusion:BackStageCommandButton Click="Exit" Header="Exit" />
                </syncfusion:Backstage>
            </syncfusion:Ribbon.BackStage>


            <!--  QAT toolbar  -->
            <syncfusion:Ribbon.QuickAccessToolBar>
                <syncfusion:QuickAccessToolBar>
                    <syncfusion:QuickAccessToolBar.QATMenuItems>
                        <syncfusion:RibbonButton Label="Save" syncfusion:RibbonCommandManager.SynchronizedItem="Save" />
                        <syncfusion:RibbonButton Label="Quick Print" syncfusion:RibbonCommandManager.SynchronizedItem="Quick Print" />
                        <syncfusion:RibbonButton Label="Print Preview" syncfusion:RibbonCommandManager.SynchronizedItem="Print Preview" />
                        <syncfusion:RibbonButton Label="Undo" syncfusion:RibbonCommandManager.SynchronizedItem="Undo" />
                        <syncfusion:RibbonButton Label="Redo" syncfusion:RibbonCommandManager.SynchronizedItem="Redo" />
                        <syncfusion:RibbonButton Label="Paste" syncfusion:RibbonCommandManager.SynchronizedItem="Paste" />
                    </syncfusion:QuickAccessToolBar.QATMenuItems>

                    <syncfusion:RibbonButton Label="Undo"
                                             SizeForm="ExtraSmall"
                                             SmallIcon="/Resources/Undo16.png"
                                             ToolTip="Undo"
                                             syncfusion:RibbonCommandManager.SynchronizedItem="Undo" />
                    <syncfusion:RibbonButton Label="Redo"
                                             SizeForm="ExtraSmall"
                                             SmallIcon="/Resources/Redo16.png"
                                             ToolTip="Redo"
                                             syncfusion:RibbonCommandManager.SynchronizedItem="Redo" />
                    <syncfusion:RibbonButton Command="ApplicationCommands.Save"
                                             SizeForm="ExtraSmall"
                                             SmallIcon="/Resources/Save16.png"
                                             syncfusion:RibbonCommandManager.SynchronizedItem="Save" />
                    <syncfusion:RibbonButton Label="QuickPrint" 
                                                 SizeForm="ExtraSmall"
                                                 syncfusion:RibbonCommandManager.SynchronizedItem="Quick Print" />
                    <syncfusion:RibbonButton Label="PrintPreview" 
                                                 SizeForm="ExtraSmall"
                                                 syncfusion:RibbonCommandManager.SynchronizedItem="Print Preview" />

                    <syncfusion:SplitButton Label="" SmallIcon="/images/icon.png">
                        <StackPanel>
                            <TextBlock Background="LightBlue"
                                       FontSize="14"
                                       Padding="5"
                                       Text="Optimize spacing between commands" />

                            <syncfusion:RibbonMenuItem x:Name="mousemenu"
                                                       Margin="0 10 0 0"
                                                       Click="RibbonMenuItem_Click">
                                <syncfusion:RibbonMenuItem.Header>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Text="Mouse" />
                                        <TextBlock Width="250"
                                                   Text="Standard ribbon and commands.optimize for use with ribbons."
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                </syncfusion:RibbonMenuItem.Header>
                                <syncfusion:RibbonMenuItem.Icon>
                                    <Image Source="/images/mouse.png" Stretch="Fill" />
                                </syncfusion:RibbonMenuItem.Icon>
                            </syncfusion:RibbonMenuItem>

                            <syncfusion:RibbonMenuItem x:Name="touchMenu" Click="RibbonMenuItem_Click_1">
                                <syncfusion:RibbonMenuItem.Header>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Text="Touch" />
                                        <TextBlock Width="250"
                                                   Text="Standard ribbon and commands.optimize for use with ribbons."
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                </syncfusion:RibbonMenuItem.Header>
                                <syncfusion:RibbonMenuItem.Icon>
                                    <Image Source="/images/touch.png" />
                                </syncfusion:RibbonMenuItem.Icon>

                            </syncfusion:RibbonMenuItem>
                        </StackPanel>
                    </syncfusion:SplitButton>


                </syncfusion:QuickAccessToolBar>
            </syncfusion:Ribbon.QuickAccessToolBar>

            <syncfusion:RibbonTab Caption="HOME"
                                  IsChecked="True"
                                  syncfusion:Ribbon.KeyTip="H">
                <syncfusion:RibbonBar Name="format_barClipboaurd"
                                      CollapseImage="/Resources/Paste32.png"
                                      Header="Clipboard"
                                      LauncherClick="OnLauncherClick"
                                      syncfusion:Ribbon.KeyTip="FN"
                                      syncfusion:Ribbon.ShowInMoreCommands="False">
                    <syncfusion:SplitButton Margin="3,0,3,3"
                                            Label="Paste"
                                            LargeIcon="/Resources/Paste32.png"
                                            SizeForm="Large"
                                            syncfusion:Ribbon.KeyTip="CP"
                                            syncfusion:RibbonCommandManager.SynchronizedItem="Paste">
                        <!--
                            <syncfusion:RibbonButton.ToolTip>
                            <syncfusion:ScreenTip Description="Paste (Ctrl+V)">
                            <TextBlock Width="130"
                            HorizontalAlignment="Left"
                            Foreground="#FF4C4C4C"
                            Text="Paste the contents of clipboard."
                            TextWrapping="Wrap" />
                            </syncfusion:ScreenTip>
                            </syncfusion:RibbonButton.ToolTip>
                        -->
                    </syncfusion:SplitButton>

                    <syncfusion:RibbonButton HorizontalAlignment="Left"
                                             Label="Cut"
                                             SizeForm="ExtraSmall"
                                             SmallIcon="/Resources/Cut16.png"
                                             syncfusion:Ribbon.KeyTip="CT">
                        <syncfusion:RibbonButton.ToolTip>
