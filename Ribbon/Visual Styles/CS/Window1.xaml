<syncfusion:RibbonWindow x:Class="RibbonSample.Window1"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:sample="clr-namespace:RibbonSample"
                         xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                         x:Name="ribbonwindow"
                         Title="Untitled 1 - Ribbon Control"
                         Width="1187"
                         Height="635"
                         Icon="App.ico"
                         IsGlassActive="False"
                         Loaded="ribbonwindow_Loaded"
                         Office2010Icon="/Resources/syncfusion.png"
                         SnapsToDevicePixels="True"
                         TitleBarPatternImage="{Binding ElementName=patterncombo,
                                                        Path=SelectedItem.Tag}"
                         WindowStartupLocation="CenterScreen"
                         WindowState="Normal">


    <syncfusion:RibbonWindow.StatusBar>
        <syncfusion:RibbonStatusBar Grid.Row="2" Height="25">
            <Grid Height="25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />

                </Grid.ColumnDefinitions>

                <TextBlock Margin="10 0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="{Binding Path=Foreground,
                                                Mode=OneWay,
                                                RelativeSource={RelativeSource FindAncestor,
                                                                               AncestorType={x:Type syncfusion:RibbonStatusBar}}}">
                    Page : 1
                </TextBlock>
                <TextBlock Grid.Column="1"
                           Margin="10 0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="{Binding Path=Foreground,
                                                Mode=OneWay,
                                                RelativeSource={RelativeSource FindAncestor,
                                                                               AncestorType={x:Type syncfusion:RibbonStatusBar}}}">
                    Section : 1
                </TextBlock>
                <TextBlock Grid.Column="2"
                           Margin="10 0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="{Binding Path=Foreground,
                                                Mode=OneWay,
                                                RelativeSource={RelativeSource FindAncestor,
                                                                               AncestorType={x:Type syncfusion:RibbonStatusBar}}}">
                    Page 1 of 1
                </TextBlock>
                <TextBlock Grid.Column="4"
                           Margin="10 0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="{Binding Path=Foreground,
                                                Mode=OneWay,
                                                RelativeSource={RelativeSource FindAncestor,
                                                                               AncestorType={x:Type syncfusion:RibbonStatusBar}}}">
                    English (U.S.)
                </TextBlock>
                <syncfusion:RibbonButton Grid.Column="6"
                                         VerticalAlignment="Center"
                                         IsSelected="True"
                                         IsToggle="True"
                                         SizeForm="ExtraSmall"
                                         SmallIcon="Images/ReadMode.png" />
                <syncfusion:RibbonButton Grid.Column="7"
                                         VerticalAlignment="Center"
                                         IsToggle="True"
                                         SizeForm="ExtraSmall"
                                         SmallIcon="Images/PrintLayout.png" />
                <syncfusion:RibbonButton Grid.Column="8"
                                         VerticalAlignment="Center"
                                         IsToggle="True"
                                         SizeForm="ExtraSmall"
                                         SmallIcon="Images/Web.png" />
            </Grid>
        </syncfusion:RibbonStatusBar>
    </syncfusion:RibbonWindow.StatusBar>

    <Grid>

        <Grid.RowDefinitions>
            <!--  <RowDefinition Height="Auto"  />  -->
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:Name="ribbonGrid"
              Grid.Row="0"
              VerticalAlignment="Top">
            <syncfusion:Ribbon Name="MyRibbon" syncfusion:Ribbon.IsAutoSizeFormEnabled="True"
                               BackStageCornerImageVisibility="Collapsed"
                               BackStageHeader="FILE"
                               EnableMoreCommands="False">

                <syncfusion:Ribbon.TabPanelItem>
                    <syncfusion:RibbonButton SizeForm="ExtraSmall" SmallIcon="Resources/Smile16.png" />
                </syncfusion:Ribbon.TabPanelItem>
              
                <!--  Ribbon BackStage  -->
                <syncfusion:Ribbon.BackStage>
                    <syncfusion:Backstage Name="RibbonBackStage">

                        <!--  Back Stage Command button helps in executing simple commands like Save, Close, etc. Here we mentioned Save command.  -->
                        <syncfusion:BackStageCommandButton Command="Save" Header="Save" />

                        <!--  Back Stage command button for Save As command.  -->
                        <syncfusion:BackStageCommandButton Command="SaveAs" Header="Save As" />

                        <!--  BackStage Tab item helps to show some contents with header.  -->
                        <syncfusion:BackstageTabItem Header="Info">
                            <!--  Back Stage tab item content can be of any type.  -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Margin="10"
                                               FontFamily="Segoe UI"
                                               FontSize="25"
                                               Text="Info" />

                                    <Grid Grid.Row="2" Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <syncfusion:RibbonButton SizeForm="Large" Width="87"
                                                Height="80" Label="Security" SnapsToDevicePixels="True" 
                                                Margin="5" LargeIcon="/SampleImages/security.png"
                                                BorderBrush="#FFA1A2A4"
                                                BorderThickness="1">



                                        </syncfusion:RibbonButton>
                                        <StackPanel Grid.Column="1"
                                                    Margin="3"
                                                    VerticalAlignment="Top">
                                            <TextBlock Grid.Column="1"
                                                       Margin="3"
                                                       FontWeight="Bold"
                                                       Text="Permissions" />
                                            <TextBlock Grid.Column="1"
                                                       Margin="3"
                                                       Text="Any one can open, copy and change any part of this document."
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Row="4" Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <syncfusion:RibbonButton  Width="87"
                                                Height="80" SnapsToDevicePixels="True"
                                                Margin="5" SizeForm="Large" Label="Sharing"
                                                BorderBrush="#FFA1A2A4" LargeIcon="/SampleImages/sharing.png"
                                                BorderThickness="1">

                                           

                                        </syncfusion:RibbonButton>
                                        <StackPanel Grid.Column="1"
                                                    Margin="3"
                                                    VerticalAlignment="Top">
                                            <TextBlock Grid.Column="1"
                                                       Margin="3"
                                                       FontWeight="Bold"
                                                       Text="Prepare for Sharing" />
                                            <TextBlock Grid.Column="1"
                                                       Margin="3"
                                                       Text="Before sharing the file be aware that it contains author's name."
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Row="6" Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <syncfusion:RibbonButton  Width="87" SnapsToDevicePixels="True" 
                                                Height="80" Label="Versions" SizeForm="Large"
                                                Margin="5" LargeIcon="SampleImages/versions.png"
                                                BorderBrush="#FFA1A2A4"
                                                BorderThickness="1">

                                          

                                        </syncfusion:RibbonButton>
                                        <StackPanel Grid.Column="1"
                                                    Margin="3"
                                                    VerticalAlignment="Top">
                                            <TextBlock Grid.Column="1"
                                                       Margin="3"
                                                       FontWeight="Bold"
                                                       Text="Manage Versions" />
                                            <TextBlock Grid.Column="1"
                                                       Margin="3"
                                                       Text="There are no previous versions of this file"
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <Border Grid.Column="1"
                                        Margin="15"
                                        HorizontalAlignment="Left"
                                        BorderBrush="#FFBCBCBC"
                                        BorderThickness="0.5" />
                                <Grid Grid.Column="2">
                                    <Button Margin="20 10"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Click="Return">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Grid>
                                                                <Border x:Name="bor"
                                                                        Background="Gray"
                                                                        Opacity="0.1">
                                                                    <Border.BitmapEffect>
                                                                        <BlurBitmapEffect />
                                                                    </Border.BitmapEffect>
                                                                </Border>
                                                                <ContentPresenter Margin="3" />
                                                            </Grid>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="bor" Property="Opacity" Value="0.5" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                        <Image Width="186"
                                               Height="98"
                                               Source="/SampleImages/return.png"
                                               Stretch="Fill" />
                                    </Button>
                                </Grid>
                            </Grid>

                        </syncfusion:BackstageTabItem>

                        <!--  Back Stage tab item for Help content  -->
                        <syncfusion:BackstageTabItem Header="Help">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Margin="10"
                                               FontFamily="Segoe UI"
                                               FontSize="20"
                                               Text="Syncfusion User Interface Help" />
                                  
                                    <Grid Grid.Row="2" Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <syncfusion:RibbonButton  Width="87"
                                                Height="80" SnapsToDevicePixels="True" 
                                                Margin="5" SizeForm="Large" LargeIcon="SampleImages/help.png"
                                                BorderBrush="#FFA1A2A4" Label="Online Help"
                                                BorderThickness="1">
                                          
                                         

                                        </syncfusion:RibbonButton>
                                        <StackPanel Grid.Column="1"
                                                    Margin="3"
                                                    VerticalAlignment="Top">
                                            <TextBlock Grid.Column="1"
                                                       Margin="3"
                                                       FontWeight="Bold"
                                                       Text="Online Help" />
                                            <TextBlock Grid.Column="1"
                                                       Margin="3"
                                                       Text="UG documents helps understanding the usage of our Syncfusion UI components."
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Grid>
                                   
                                    <Grid Grid.Row="4" Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <syncfusion:RibbonButton  Width="87" SnapsToDevicePixels="True" 
                                                Height="80" Label="Getting Started" SizeForm="Large"
                                                Margin="5" LargeIcon="/SampleImages/start.png"
                                                BorderBrush="#FFA1A2A4"
                                                BorderThickness="1">
                                           
                                          

                                        </syncfusion:RibbonButton>
                                        <StackPanel Grid.Column="1"
                                                    Margin="3"
                                                    VerticalAlignment="Top">
                                            <TextBlock Grid.Column="1"
                                                       Margin="3"
                                                       FontWeight="Bold"
                                                       Text="Getting Started" />
                                            <TextBlock Grid.Column="1"
                                                       Margin="3"
                                                       Text="A complete information on Syncfusion Ribbon control and its usage."
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Grid>

                                </Grid>
                                <Border Grid.Column="1"
                                        Margin="15"
                                        HorizontalAlignment="Left"
                                        BorderBrush="#FFBCBCBC"
                                        BorderThickness="0.5" />
                                <Grid Grid.Column="2">
                                    <Button Margin="20 10"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Click="Return">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Grid>
                                                                <Border x:Name="bor"
                                                                        Background="Gray"
                                                                        Opacity="0.1">
                                                                    <Border.BitmapEffect>
                                                                        <BlurBitmapEffect />
                                                                    </Border.BitmapEffect>
                                                                </Border>
                                                                <ContentPresenter Margin="3" />
                                                            </Grid>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="bor" Property="Opacity" Value="0.5" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                        <Image Width="186"
                                               Height="98"
                                               Source="/SampleImages/return.png"
                                               Stretch="Fill" />
                                    </Button>
                                </Grid>
                              
                            </Grid>

                        </syncfusion:BackstageTabItem>
                        <syncfusion:BackStageSeparator />
                        <!--  Back Stage command button for Options.  -->
                        <syncfusion:BackStageCommandButton Header="Options" />

                        <!--  Back Stage command button for Exit.  -->
                        <syncfusion:BackStageCommandButton Click="Exit" Header="Exit" />
                    </syncfusion:Backstage>
                </syncfusion:Ribbon.BackStage>


                <!--  QAT toolbar  -->
                <syncfusion:Ribbon.QuickAccessToolBar>
                    <syncfusion:QuickAccessToolBar>
                        <syncfusion:QuickAccessToolBar.QATMenuItems>
                            <syncfusion:RibbonButton Label="Save" syncfusion:RibbonCommandManager.SynchronizedItem="Save" />
                            <syncfusion:RibbonButton Label="Quick Print" syncfusion:RibbonCommandManager.SynchronizedItem="Quick Print" />
                            <syncfusion:RibbonButton Label="Print Preview" syncfusion:RibbonCommandManager.SynchronizedItem="Print Preview" />
                            <syncfusion:RibbonButton Label="Undo" syncfusion:RibbonCommandManager.SynchronizedItem="Undo" />
                            <syncfusion:RibbonButton Label="Redo" syncfusion:RibbonCommandManager.SynchronizedItem="Redo" />
                            <syncfusion:RibbonButton Label="Paste" syncfusion:RibbonCommandManager.SynchronizedItem="Paste" />
                        </syncfusion:QuickAccessToolBar.QATMenuItems>

                        <syncfusion:RibbonButton Label="Undo"
                                                 SizeForm="ExtraSmall"
                                                 SmallIcon="/Resources/Undo16.png"
                                                 syncfusion:RibbonCommandManager.SynchronizedItem="Undo"
                                                 ToolTip="Undo" />
                        <syncfusion:RibbonButton Label="Redo"
                                                 SizeForm="ExtraSmall"
                                                 SmallIcon="/Resources/Redo16.png"
                                                 syncfusion:RibbonCommandManager.SynchronizedItem="Redo"
                                                 ToolTip="Redo" />
                        <syncfusion:RibbonButton Command="ApplicationCommands.Save"
                                                 SizeForm="ExtraSmall"
                                                 SmallIcon="/Resources/Save16.png"
                                                 syncfusion:RibbonCommandManager.SynchronizedItem="Save" />
                        <syncfusion:RibbonButton Label="QuickPrint" SmallIcon="/Images/print-icon.png"
                                                 SizeForm="ExtraSmall" 
                                                 syncfusion:RibbonCommandManager.SynchronizedItem="Quick Print" />
                        <syncfusion:RibbonButton Label="PrintPreview" SmallIcon="/Images/printPreview.png"
                                                 SizeForm="ExtraSmall" 
                                                 syncfusion:RibbonCommandManager.SynchronizedItem="Print Preview" />

                    </syncfusion:QuickAccessToolBar>
                </syncfusion:Ribbon.QuickAccessToolBar>

                <syncfusion:RibbonTab Caption="Home" IsChecked="True"
                                      syncfusion:Ribbon.KeyTip="H">
                    <syncfusion:RibbonBar Name="format_barClipboaurd"
                                          CollapseImage="/Resources/Paste32.png"
                                          Header="Clipboard"
                                          LauncherClick="OnLauncherClick"
                                          syncfusion:Ribbon.KeyTip="FN"
                                          syncfusion:Ribbon.ShowInMoreCommands="False">
                        <syncfusion:RibbonButton Width="44"
                                                 Margin="3,0,3,3"
                                                 Label="Paste"
                                                 LargeIcon="/Resources/Paste32.png"
                                                 SizeForm="Large"
                                                 syncfusion:Ribbon.KeyTip="CP"
                                                 syncfusion:RibbonCommandManager.SynchronizedItem="Paste">
                            <syncfusion:RibbonButton.ToolTip>
                                <syncfusion:ScreenTip Description="Paste (Ctrl+V)">
                                    <TextBlock Width="130"
                                               HorizontalAlignment="Left"
                                               Foreground="#FF4C4C4C"
                                               Text="Paste the contents of clipboard."
                                               TextWrapping="Wrap" />
                                </syncfusion:ScreenTip>
                            </syncfusion:RibbonButton.ToolTip>
                        </syncfusion:RibbonButton>

                        <syncfusion:RibbonButton x:Name="cut" HorizontalAlignment="Left"
                                                 Label="Cut"
                                                 SizeForm="Small"
                                                 SmallIcon="/Resources/Cut16.png"
                                                 syncfusion:Ribbon.KeyTip="CT">
                            <syncfusion:RibbonButton.ToolTip>
                                <syncfusion:ScreenTip Description="Cut (Ctrl+X)">
                                    <TextBlock Width="130"
                                               HorizontalAlignment="Left"
                                               Text="Cut the selection and put it on the clipboard."
                                               TextWrapping="Wrap" />
                                </syncfusion:ScreenTip>
                            </syncfusion:RibbonButton.ToolTip>
                        </syncfusion:RibbonButton>

                        <syncfusion:RibbonButton HorizontalAlignment="Left" x:Name="copy"
                                                 Label="Copy"
                                                 SizeForm="Small"
                                                 SmallIcon="/Resources/Copy16.png"
                                                 syncfusion:Ribbon.KeyTip="CY">
                            <syncfusion:RibbonButton.ToolTip>
                                <syncfusion:ScreenTip Description="Copy (Ctrl+C)">
                                    <TextBlock Width="130"
                                               HorizontalAlignment="Left"
                                               Foreground="#FF4C4C4C"
                                               Text="Copy the selection and put it on the clipboard."
                                               TextWrapping="Wrap" />
                                </syncfusion:ScreenTip>
                            </syncfusion:RibbonButton.ToolTip>
                        </syncfusion:RibbonButton>

                        <syncfusion:RibbonButton Label="Format Painter" x:Name="formatpainter"
                                                 SizeForm="Small"
                                                 SmallIcon="/Resources/FormatPainter16.png"
                                                 syncfusion:Ribbon.KeyTip="CR">
                            <syncfusion:RibbonButton.ToolTip>
                                <syncfusion:ScreenTip Description="Format painter (Ctrl+Shift+C)" HelpText="Press F1 for more help.">
                                    <TextBlock Width="175"
                                               HorizontalAlignment="Left"
                                               Foreground="#FF4C4C4C"
                                               TextWrapping="Wrap">
                                        <Run Text="Copy formatting from one place and apply it to another." />
                                        <LineBreak />
                                        <LineBreak />
                                        <Run Text="Double-click this button to apply the same formatting to multiple places in the document." />
                                    </TextBlock>
                                </syncfusion:ScreenTip>
                            </syncfusion:RibbonButton.ToolTip>
                        </syncfusion:RibbonButton>
                    </syncfusion:RibbonBar>

                    <!--  Format Text - ForRibbon Bar for Basic Text  -->
                    <syncfusion:RibbonBar Name="barFont"
                                          CollapseImage="{StaticResource FontColor}"
                                          Header="Font"
                                          IsLargeButtonPanel="False"
                                          KeyTipOnCollapsed="ZF"
                                          LauncherClick="OnLauncherClick"
                                          syncfusion:Ribbon.KeyTip="HF">
                        <syncfusion:ButtonPanel SeparatorVisibility="Collapsed">
                            <syncfusion:RibbonComboBox Name="format_fontNameBox"
                                                       Width="110"
                                                       IsEditable="True"
                                                       SelectionChanged="OnFontNameChanged"
                                                       syncfusion:Ribbon.KeyTip="FF"
                                                       syncfusion:Ribbon.ShowInMoreCommands="False">
                                <syncfusion:RibbonComboBox.ToolTip>
                                    <syncfusion:ScreenTip Description="Font (Ctrl+Shift+F)">
                                        <TextBlock Width="165"
                                                   HorizontalAlignment="Left"
                                                   Foreground="#FF4C4C4C"
                                                   Text="Change the font face."
                                                   TextWrapping="Wrap" />
                                    </syncfusion:ScreenTip>
                                </syncfusion:RibbonComboBox.ToolTip>
                            </syncfusion:RibbonComboBox>
                            <syncfusion:RibbonComboBox Name="format_fontSizeBox"
                                                       Width="40"
                                                       IsEditable="True"
                                                       SelectedIndex="0"
                                                       SelectionChanged="OnFontSizeChanged"
                                                       syncfusion:Ribbon.KeyTip="FZ"
                                                       syncfusion:Ribbon.ShowInMoreCommands="False" />
                        </syncfusion:ButtonPanel>
                        <syncfusion:ButtonPanel Height="24" SeparatorVisibility="Collapsed">
                            <syncfusion:RibbonButton Name="format_btnIncFontSize"
                                                     Width="24"
                                                     Height="22"
                                                     Command="EditingCommands.IncreaseFontSize"
                                                     CommandTarget="{Binding ElementName=Editor}"
                                                     Padding="2"
                                                     SizeForm="ExtraSmall"
                                                     SmallIcon="/Resources/GrowFont16.png"
                                                     syncfusion:Ribbon.KeyTip="IF" />
                            <syncfusion:RibbonButton Name="format_btnDecFontSize"
                                                     Width="24"
                                                     Height="22"
                                                     Command="EditingCommands.DecreaseFontSize"
                                                     CommandTarget="{Binding ElementName=Editor}"
                                                     Padding="2"
                                                     SizeForm="ExtraSmall"
                                                     SmallIcon="/Resources/ShrinkFont16.png"
                                                     syncfusion:Ribbon.KeyTip="DF" />
                        </syncfusion:ButtonPanel>

                        <syncfusion:ButtonPanel Height="24">
                            <syncfusion:RibbonButton Name="format_btnBold"
                                                     Width="24"
                                                     Height="22"
                                                     Command="EditingCommands.ToggleBold"
                                                     CommandTarget="{Binding ElementName=Editor}"
                                                     IsToggle="True"
                                                     Padding="2"
                                                     SizeForm="ExtraSmall"
                                                     SmallIcon="/Resources/Bold16.png"
                                                     syncfusion:Ribbon.KeyTip="B" />
                            <syncfusion:RibbonButton Name="format_btnItalic"
                                                     Width="24"
                                                     Height="22"
                                                     Command="EditingCommands.ToggleItalic"
                                                     CommandTarget="{Binding ElementName=Editor}"
                                                     IsToggle="True"
                                                     Padding="2"
                                                     SizeForm="ExtraSmall"
                                                     SmallIcon="/Resources/Italic16.png"
                                                     syncfusion:Ribbon.KeyTip="I" />
                            <syncfusion:RibbonButton Name="format_btnUnderline"
                                                     Width="24"
                                                     Height="22"
                                                     Command="EditingCommands.ToggleUnderline"
                                                     CommandTarget="{Binding ElementName=Editor}"
                                                     Padding="2"
                                                     SizeForm="ExtraSmall"
                                                     SmallIcon="/Resources/Underline16.png"
                                                     syncfusion:Ribbon.KeyTip="U" />
                           
                        </syncfusion:ButtonPanel>
                        <syncfusion:ButtonPanel Height="24" SeparatorVisibility="Collapsed">
                            <syncfusion:SplitButton Padding="2" x:Name="highlighticon"
                                                    SizeForm="ExtraSmall"
                                                    SmallIcon="/Resources/TextHighlightColor16.png"
                                                    syncfusion:Ribbon.KeyTip="TH">
                                <syncfusion:ColorPickerPalette IsExpanded="True" MoreColorWindowOpening="ColorPickerPalette_MoreColorWindowOpening" />
                            </syncfusion:SplitButton>
                            <syncfusion:SplitButton Padding="2" x:Name="fontcolor"
                                                    SizeForm="ExtraSmall"
                                                    SmallIcon="/Resources/FontColor16.png"
                                                    syncfusion:Ribbon.KeyTip="FC">
                                <syncfusion:ColorPickerPalette IsExpanded="True"  MoreColorWindowOpening="ColorPickerPalette_MoreColorWindowOpening" />
                            </syncfusion:SplitButton>
                            <syncfusion:SplitButton Name="format_btnShading"
                                                    SizeForm="ExtraSmall"
                                                    SmallIcon="/Resources/Shading16.png"
                                                    syncfusion:Ribbon.KeyTip="FS">
                                <syncfusion:ColorPickerPalette Margin="3" IsExpanded="True" MoreColorWindowOpening="ColorPickerPalette_MoreColorWindowOpening" />
                            </syncfusion:SplitButton>
                            <syncfusion:SplitButton Name="format_btnBorder"
                                                    SizeForm="ExtraSmall"
                                                    SmallIcon="/Resources/OutsideBorders16.png"
                                                    syncfusion:Ribbon.KeyTip="BF" />
                        </syncfusion:ButtonPanel>
                      
                    </syncfusion:RibbonBar>

                    <!--  Format Text - For Ribbon Bar Paragraph  -->
                    <syncfusion:RibbonBar Name="Format_barParagraph"
                                          CollapseImage="{StaticResource Justify}"
                                          Header="Paragraph"
                                          IsLargeButtonPanel="False"
                                          KeyTipOnCollapsed="ZP"
                                          LauncherClick="OnLauncherClick"
                                          syncfusion:Ribbon.KeyTip="HP">
                        <syncfusion:ButtonPanel Height="24">
                            <syncfusion:SplitButton Name="format_btnbullet"
                                                    Width="37"
                                                    Height="22"
                                                    Padding="2"
                                                    SizeForm="ExtraSmall"
                                                    SmallIcon="/Resources/Bullets16.png"
                                                    syncfusion:Ribbon.KeyTip="FN" />
                            <syncfusion:SplitButton Name="format_btnNumbering"
                                                    Width="37"
                                                    Height="22"
                                                    Padding="2"
                                                    SizeForm="ExtraSmall"
                                                    SmallIcon="/Resources/Numbering16.png"
                                                    syncfusion:Ribbon.KeyTip="FB" />
                            <syncfusion:SplitButton Name="format_btnAlign"
                                                    Width="37"
