<syncfusion:ChromelessWindow x:Class="Localization.MainWindow" 
                           ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen" syncfusion:SkinStorage.VisualStyle="Metro"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  UseNativeChrome="True"
                           xmlns:local="clr-namespace:Localization"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                           xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                           Icon="App.ico" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="#1196CD" Padding="20,3,0,0">
            <TextBlock Text="Localization" Foreground="White" FontSize="20"/>
        </Border>
        <Grid Grid.Row="1">
            <syncfusion:SfSchedule Background="White" WorkEndHour="18" WorkStartHour="9" IsHighLightWorkingHours="True" Margin="20" ScheduleType="Month" x:Name="schedule"  TimeInterval="OneHour" />
        </Grid>
    </Grid>
</syncfusion:ChromelessWindow>