                <charts:SfChart.PrimaryAxis>
                    <charts:CategoryAxis Foreground="Transparent" ShowGridLines="True" Interval="0.2" TickLineSize="0"  ZoomFactor="0.1"></charts:CategoryAxis>
                </charts:SfChart.PrimaryAxis>

                <charts:SfChart.SecondaryAxis>
