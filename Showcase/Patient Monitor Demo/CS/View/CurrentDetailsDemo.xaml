                    <charts:ChartRowDefinition Height="1" BorderThickness="1" BorderStroke="#FF33789E"></charts:ChartRowDefinition>
                    <charts:ChartRowDefinition Height="1" BorderThickness="1" BorderStroke="#FF33789E"></charts:ChartRowDefinition>
                </charts:SfChart.RowDefinitions>


