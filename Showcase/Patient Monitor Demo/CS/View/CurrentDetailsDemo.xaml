                                     TickLineSize="0" SmallTickLineSize="0" >
                        </charts:NumericalAxis>
                    </charts:FastLineSeries.YAxis>
                </charts:FastLineSeries>

            </charts:SfChart>
            <Grid Grid.Column="1" Margin="-10,10,10,41" Background="#FFFFFFFF">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
