<UserControl x:Class="StockAnalysis.StockAnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
             xmlns:local="clr-namespace:StockAnalysis"
             xmlns:syncgrid="clr-namespace:Syncfusion.UI.Xaml.Grid;assembly=Syncfusion.SfGrid.WPF"
             mc:Ignorable="d" 
             x:Name="root" 
             xmlns:interactivity="http://schemas.microsoft.com/expression/2010/interactivity"
             d:DesignHeight="1000" d:DesignWidth="300">
    <!--<UserControl.DataContext>
        <local:StockViewModel></local:StockViewModel>
    </UserControl.DataContext>-->

    <UserControl.Resources>
        <local:StockViewModel x:Key="stockmodel" />
        <local:TimeStampConverter x:Key="timeConverter" />
        <local:ConcatConverter x:Key="concatConverter"/>
        
        
        <ControlTemplate x:Key="NavigationButton">
            <Border Margin="20,10,20,10">
                <!--<Ellipse Width="50" Height="50" Fill="Red" Stroke="Black" StrokeThickness="2" />-->
                <!--<Image x:Name="NavButton" Width="40" Height="40" Source="/Assets/Chart/info_icon.png"/>-->
            </Border>
        </ControlTemplate>

        <SolidColorBrush x:Key="LabelBarBackground">#dddddd</SolidColorBrush>
        <SolidColorBrush x:Key="UnSelectedRegion">#cfcfcf</SolidColorBrush>
        <SolidColorBrush x:Key="ThumbHandBrush">#363636</SolidColorBrush>
        <SolidColorBrush x:Key="ThumbEllipseBrush">#f3f3f3</SolidColorBrush>
        <SolidColorBrush x:Key="Borderbrush">#c6c6c6</SolidColorBrush>
        <local:FillConverter x:Key="fillConverter"/>
        <local:RotateConverter x:Key="rotateConverter"/>
        <DataTemplate x:Key="triangleIndicatorLarge">

            <Path RenderTransformOrigin="0.5,0.5" Data="F1M1464.78,374.21C1466.31,374.21,1466.94,375.538,1466.17,376.861L1435.89,429.439C1435.12,430.759,1433.87,430.823,1433.11,429.5L1402.82,376.827C1402.06,375.507,1402.69,374.21,1404.21,374.21L1464.78,374.21z" Stretch="Uniform" Fill="{Binding Converter={StaticResource fillConverter}}" Width="23" Height="23" Margin="0,0,0,0">
                <Path.RenderTransform>
                    <TransformGroup>
                        <TransformGroup.Children>
                            <RotateTransform Angle="{Binding Converter={StaticResource rotateConverter}}" />
                            <ScaleTransform ScaleX="1" ScaleY="1" />
                        </TransformGroup.Children>
                    </TransformGroup>
                </Path.RenderTransform>
            </Path>
        </DataTemplate>

        <DataTemplate x:Key="triangleIndicatorSmallHigh">
            <Path RenderTransformOrigin="0.5,0.5" Data="F1M1464.78,374.21C1466.31,374.21,1466.94,375.538,1466.17,376.861L1435.89,429.439C1435.12,430.759,1433.87,430.823,1433.11,429.5L1402.82,376.827C1402.06,375.507,1402.69,374.21,1404.21,374.21L1464.78,374.21z" Stretch="Uniform" Fill="#288E56" Width="14" Height="14">
                <Path.RenderTransform>
                    <TransformGroup>
                        <TransformGroup.Children>
                            <RotateTransform Angle="180" />
                            <ScaleTransform ScaleX="1" ScaleY="1" />
                        </TransformGroup.Children>
                    </TransformGroup>
                </Path.RenderTransform>
            </Path>
        </DataTemplate>
        <!--  cell style  -->
        <Style x:Key="cellStyle" TargetType="syncgrid:GridCell">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="syncgrid:GridCell">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="#A0B5B4"
                                    BorderThickness="0,0,0,1"
                                    Padding="3,0,0,0">
                                <ContentPresenter Margin="15,0,0,0"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                   />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Margin" Value="0,0,-1,0" />
        </Style>

        <!--  Header  -->

        <Style x:Key="headerStyle" TargetType="syncgrid:GridHeaderCellControl">
            <Setter Property="Margin" Value="0,0,-1,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="syncgrid:GridHeaderCellControl">
                        <Border Background="Transparent"
                                BorderBrush="#727272"
                                BorderThickness="1,0,0,1.5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="0" MinWidth="{Binding Path=ColumnOptionsWidth, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" />
                                </Grid.ColumnDefinitions>

                                <ContentPresenter Margin="15,0,0,0"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  />
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="18" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Path Width="13"
                                          Height="13"
                                          Data="F1M1464.78,374.21C1466.31,374.21,1466.94,375.538,1466.17,376.861L1435.89,429.439C1435.12,430.759,1433.87,430.823,1433.11,429.5L1402.82,376.827C1402.06,375.507,1402.69,374.21,1404.21,374.21L1464.78,374.21z"
                                          Fill="#FFBCBCBC"
                                          Stretch="Uniform"
                                          >
                                        <Path.RenderTransform>
                                            <TransformGroup>
                                                <TransformGroup.Children>
                                                    <RotateTransform Angle="0" />
                                                    <ScaleTransform ScaleX="1" ScaleY="1" />
                                                </TransformGroup.Children>
                                            </TransformGroup>
                                        </Path.RenderTransform>
                                    </Path>

                                    <Path Width="13"
                                          Height="13"
                                          Data="F1M1719.66,218.12L1735.66,246.166 1751.66,274.21 1719.66,274.21 1687.66,274.21 1703.66,246.166 1719.66,218.12z"
                                          Fill="#FFBCBCBC"
                                          Stretch="Uniform"
                                        >
                                        <Path.RenderTransform>
                                            <TransformGroup>
                                                <TransformGroup.Children>
                                                    <RotateTransform Angle="0" />
                                                    <ScaleTransform ScaleX="1" ScaleY="1" />
                                                </TransformGroup.Children>
                                            </TransformGroup>
                                        </Path.RenderTransform>
                                    </Path>
                                    <TextBlock Grid.Column="1"
                                               FontSize="10"
                                               Foreground="White"
                                               Text="{TemplateBinding SortNumber}"
                                               Visibility="{TemplateBinding SortNumberVisibility}" />
                                </Grid>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="triangleIndicatorSmallLow">
            <Path RenderTransformOrigin="0.5,0.5" Data="F1M1464.78,374.21C1466.31,374.21,1466.94,375.538,1466.17,376.861L1435.89,429.439C1435.12,430.759,1433.87,430.823,1433.11,429.5L1402.82,376.827C1402.06,375.507,1402.69,374.21,1404.21,374.21L1464.78,374.21z" Stretch="Uniform" Fill="#B74255" Width="14" Height="14">
                <Path.RenderTransform>
                    <TransformGroup>
                        <TransformGroup.Children>
                            <RotateTransform Angle="0" />
                            <ScaleTransform ScaleX="1" ScaleY="1" />
                        </TransformGroup.Children>
                    </TransformGroup>
                </Path.RenderTransform>
            </Path>
        </DataTemplate>
       

        <Style TargetType="Line" x:Key="lineStyle">
            <Setter Property="Stroke" Value="#000000"/>
            <Setter Property="StrokeThickness" Value="1.5"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="#82828B"></Setter>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="#F9F9F9"/>
        </Style>

        <Style TargetType="Line" x:Key="gridLineStyle">
            <Setter Property="Stroke" Value="#D3D3D3"/>
        </Style>

        <Style TargetType="Line" x:Key="tickLineStyle">
            <Setter Property="Visibility" Value="Visible"/>
        </Style>

        <!--<Style TargetType="syncfusion:SfTileViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="White"/>
        </Style>-->

        <Style TargetType="ItemsControl" x:Key="itemsPanelStyle">
            <Setter Property="Margin" Value="20"/>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Border Background="#2C2C2C" Padding="3" Width="150" Visibility="{Binding Visibility}"> 
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Margin="5" Grid.Row="0" Grid.ColumnSpan="2" FontSize="12" Foreground="White" Text="{Binding Converter={StaticResource concatConverter}}"/>
                                <ItemsControl Grid.Column="0" Grid.Row="1" FontSize="11" ItemsSource="{Binding LabelYValues}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="5">
                                                <TextBlock Foreground="#A6A689" Text="{Binding}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <ItemsControl Grid.Column="1" Grid.Row="1" FontSize="11" ItemsSource="{Binding YValues}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="5">
                                                <TextBlock Foreground="#A6A689" Text="{Binding}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <Rectangle Stroke="#A6A689" Height="1" Grid.Row="2" Grid.ColumnSpan="2" StrokeThickness="2" StrokeDashArray="2 2"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ticklineStyle" TargetType="Line">
            <Setter Property="StrokeThickness" Value="0" />
        </Style>
        <Style x:Key="higherBarLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Transparent"/>
        </Style>
    </UserControl.Resources>
    <Grid DataContext="{StaticResource stockmodel}" syncfusion:SkinStorage.VisualStyle="Metro">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

        <syncfusion:TileViewControl x:Name="tileView" 
                               SelectedIndex="{Binding SelectedIndex,Mode=TwoWay}"
                               Grid.Row="1"
                               Background="#E8EAEA"
                               BorderBrush="Transparent" BorderThickness="1" Loaded="tileView_Loaded_1" 
                              ItemsSource="{Binding Stocks}" 
                               MinimizedItemsOrientation="Left" ItemContainerStyle="{StaticResource tileitemstyle}" >
                    <syncfusion:TileViewControl.MaximizedItemTemplate>
                        <DataTemplate>
                            <Grid x:Name="mainGrid" Margin="0,-5,-3,-1">
                                

                                <!--  Chart View  -->
                                <Border Margin="0,0,-4,-5"
                                Background="#E5E5E5"
                                BorderBrush="#999999"
                                BorderThickness="1"
                                Visibility="{Binding Path=ChartVisibility,
                                                     Mode=TwoWay,
                                                     Source={StaticResource stockmodel}}">
                                    <Grid Background="White">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        
                                        <Border Grid.Row="0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0.7*"/>
                                            <RowDefinition Height="0.3*"/>
                                        </Grid.RowDefinitions>
                                        <chart:SfChart AreaBorderBrush="#D3D3D3" Margin="0,17,0,0" 
                                                   AreaBorderThickness="1" Background="White"
                                                   DataContext="{Binding SelectedStock,
                                                                         Mode=OneWay}">
                                            <chart:SfChart.Watermark>
                                                <chart:Watermark HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <chart:Watermark.Content>
                                                        <TextBlock HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="100"
                                           Foreground="Black"
                                           Opacity="0.1"
                                           Text="{Binding StockName}" />
                                                    </chart:Watermark.Content>
                                                </chart:Watermark>
                                            </chart:SfChart.Watermark>
                                            <chart:SfChart.Header>
                                                <TextBlock Height="25" />
                                            </chart:SfChart.Header>
                                            <chart:SfChart.Behaviors>
                                                <local:CustomCrossHairbehavior HorizontalLineStyle="{StaticResource lineStyle}"
                                                                           SummaryItemsStyle="{StaticResource itemsPanelStyle}"
                                                                           VerticalLineStyle="{StaticResource lineStyle}" />
                                                <local:ChartTechnicalIndicatorBehavior />

                                            </chart:SfChart.Behaviors>
                                            <chart:SfChart.PrimaryAxis>
                                                <chart:DateTimeCategoryAxis AxisLineStyle="{StaticResource gridLineStyle}"
                                                                EdgeLabelsDrawingMode="Hide" 
                                                                Foreground="#4F4F59" Interval="2"                                                      
                                                                LabelFormat="MMM-yyyy"
                                                                MajorGridLineStyle="{StaticResource gridLineStyle}"
                                                                MajorTickLineStyle="{StaticResource gridLineStyle}" 
                                                                ZoomPosition="{Binding ElementName=RangeNavigator, Path=ZoomPosition, Mode=TwoWay}"
                                                                ZoomFactor="{Binding ElementName=RangeNavigator, Path=ZoomFactor, Mode=TwoWay}"/>
                                            </chart:SfChart.PrimaryAxis>

                                            <chart:SfChart.SecondaryAxis>
                                                <chart:NumericalAxis Header="Test"
                                                                 MajorGridLineStyle="{StaticResource gridLineStyle}"
                                                                 MajorTickLineStyle="{StaticResource gridLineStyle}"
                                                                 Visibility="Collapsed" />
                                            </chart:SfChart.SecondaryAxis>


                                            <!--<chart:ColumnSeries Name="Series2"
                                                            Interior="#B74255"
                                                            ItemsSource="{Binding Datas}"
                                                            Label="Volume"
                                                            XBindingPath="TimeStamp"
                                                            YBindingPath="Volume" />-->

                                            <chart:HiLoOpenCloseSeries Name="Series1"
                                                                   Close="Last"
                                                                   High="High"
                                                                   ItemsSource="{Binding Datas}"
                                                                   Label="Price History"
                                                                   Low="Low"
                                                                   Open="Open"
                                                                   XBindingPath="TimeStamp"
                                                                   chart:ChartSeries.Spacing="0.2">
                                                <!--<chart:HiLoOpenCloseSeries.YAxis>
                                                <chart:NumericalAxis AxisLineStyle="{StaticResource gridLineStyle}"
                                                                     LabelFormat="#.00"
                                                                     PlotOffset="10"
                                                                     MajorGridLineStyle="{StaticResource gridLineStyle}"
                                                                     MajorTickLineStyle="{StaticResource gridLineStyle}"
                                                                     Visibility="Collapsed"
                                                                     chart:SfChart.Row="1" />
                                            </chart:HiLoOpenCloseSeries.YAxis>-->
                                            </chart:HiLoOpenCloseSeries>

                                        </chart:SfChart>
                                        <chart:SfDateTimeRangeNavigator Background="White" x:Name="RangeNavigator" BorderBrush="#d3d3d3" 
                                                                        BorderThickness="1,1,1,0" Grid.Row="1" ShowGridLines="False"
                                                                        HigherLabelStyle="{StaticResource higherBarLabelStyle}"
                                                                        HigherBarTickLineStyle="{StaticResource ticklineStyle}"
                                                                        ScrollbarVisibility="Collapsed" ItemsSource="{Binding Datas}"  
                                                                        XBindingPath="TimeStamp" ViewRangeStart="2009/2/1" ViewRangeEnd="2011/2/1" >
                                            <chart:SfDateTimeRangeNavigator.Intervals>
                                                <chart:Interval IntervalType="Year"/>
                                            </chart:SfDateTimeRangeNavigator.Intervals>
                                            <chart:SfDateTimeRangeNavigator.HigherLevelBarStyle>
                                                <chart:LabelBarStyle Position="Inside" SelectedLabelBrush="Transparent" />
                                            </chart:SfDateTimeRangeNavigator.HigherLevelBarStyle>
                                            <chart:SfDateTimeRangeNavigator.Content>
                                                <chart:SfChart AreaBorderBrush="#D3D3D3" Grid.Row="0"
                                                   AreaBorderThickness="0"
                                                   DataContext="{Binding SelectedStock,
                                                                         Mode=OneWay}">
                                                    <chart:SfChart.Resources>
                                                        <local:CustomTemplateConverter x:Key="converter"/>
                                                        <DataTemplate x:Key="cusTemp">
                                                            <Canvas>
                                                            <Rectangle Canvas.Left="{Binding RectX}" Canvas.Top="{Binding RectY}"  Height="{Binding Height}" Width="{Binding Width}" Fill="{Binding Item, Converter={StaticResource converter}}" Tag="{Binding Converter={StaticResource converter}}"/>
                                                            </Canvas>
                                                        </DataTemplate>
                                                    </chart:SfChart.Resources>
                                                    <chart:SfChart.Header>
                                                        <TextBlock Height="25" />
                                                    </chart:SfChart.Header>
                                                    <!--<chart:SfChart.Behaviors>-->
                                                        <!--<local:CustomCrossHairbehavior HorizontalLineStyle="{StaticResource lineStyle}"
                                                                           SummaryItemsStyle="{StaticResource itemsPanelStyle}"
                                                                           VerticalLineStyle="{StaticResource lineStyle}" />
                                                        <local:ChartTechnicalIndicatorBehavior />-->

                                                    <!--</chart:SfChart.Behaviors>-->
                                                    <chart:SfChart.PrimaryAxis>
                                                        <chart:CategoryAxis AxisLineStyle="{StaticResource gridLineStyle}" 
                                                                EdgeLabelsDrawingMode="Fit"
                                                                Foreground="#4F4F59" Visibility="Collapsed" ShowGridLines="False"
                                                                Interval="12"
                                                                LabelFormat="yyyy"
                                                                MajorGridLineStyle="{StaticResource gridLineStyle}"
                                                                MajorTickLineStyle="{StaticResource gridLineStyle}" />
                                                    </chart:SfChart.PrimaryAxis>

                                                    <chart:SfChart.SecondaryAxis>
                                                        <chart:NumericalAxis Header="Test" Visibility="Collapsed" ShowGridLines="False"
                                                                 MajorGridLineStyle="{StaticResource gridLineStyle}"
                                                                 MajorTickLineStyle="{StaticResource tickLineStyle}"
                                                                 />
                                                    </chart:SfChart.SecondaryAxis>


                                                    <chart:ColumnSeries CustomTemplate="{StaticResource cusTemp}" Name="Series2"
                                                            Interior="#B74255"
                                                            ItemsSource="{Binding Datas}"
                                                            Label="Volume"
                                                            XBindingPath="TimeStamp"
                                                            YBindingPath="Volume" />

                                                    <!--<chart:HiLoOpenCloseSeries Name="Series1"
                                                                   BearFillColor="#288E56"
                                                                   BullFillColor="#B74255"
                                                                   Close="Last"
                                                                   High="High"
                                                                   ItemsSource="{Binding Datas}"
                                                                   Label="Price History"
                                                                   Low="Low"
                                                                   Open="Open"
                                                                   XBindingPath="TimeStamp"
                                                                   chart:ChartSeries.Spacing="0.2">
                                                        <chart:HiLoOpenCloseSeries.YAxis>
                                                <chart:NumericalAxis AxisLineStyle="{StaticResource gridLineStyle}"
                                                                     LabelFormat="#.00"
                                                                     PlotOffset="10"
                                                                     MajorGridLineStyle="{StaticResource gridLineStyle}"
                                                                     MajorTickLineStyle="{StaticResource gridLineStyle}"
                                                                     Visibility="Collapsed"
                                                                     chart:SfChart.Row="1" />
                                            </chart:HiLoOpenCloseSeries.YAxis>
                                                    </chart:HiLoOpenCloseSeries>-->

                                                </chart:SfChart>
                                            </chart:SfDateTimeRangeNavigator.Content>
                                        </chart:SfDateTimeRangeNavigator>
                                    </Grid>
                                </Border>
                                    </Grid>
                                </Border>

                            </Grid>
                        </DataTemplate>
                    </syncfusion:TileViewControl.MaximizedItemTemplate>

            <syncfusion:TileViewControl.MinimizedItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#FFA5A5A5" 
                            BorderThickness="1"
                            Padding="10,8,2,3" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Margin="0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       FontSize="25"
                                       Foreground="Gray"
                                       Text="{Binding StockName}" />
                        <StackPanel Grid.Row="1" Orientation="Vertical">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0"
                                                HorizontalAlignment="Stretch"
                                                Orientation="Horizontal">
                                    <ContentPresenter Margin="2"
                                                          VerticalAlignment="Center"
                                                          Content="{Binding}"
                                                          ContentTemplate="{StaticResource triangleIndicatorLarge}" />
                                    <TextBlock VerticalAlignment="Center"
                                                   FontFamily="Segoe UI"
                                                   FontSize="20"
                                                   FontWeight="Light"
                                                   Foreground="#999999"
                                                   Text="{Binding PreviousClose}" />
                                </StackPanel>
                                <StackPanel Grid.Column="1"
                                                Margin="5,0,0,0"
                                                VerticalAlignment="Top">

                                    <StackPanel Orientation="Horizontal">
                                        <ContentPresenter Margin="2"
                                                              Content="{Binding}"
                                                              ContentTemplate="{StaticResource triangleIndicatorSmallHigh}" />
                                        <TextBlock Margin="2"
                                                       FontSize="10"
                                                       Foreground="#FF595959"
                                                       Text="High" />
                                        <TextBlock Margin="2"
                                                       FontSize="10"
                                                       Foreground="#318E5A"
                                                       Text="{Binding CurrentHigh}" />
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <ContentPresenter Margin="2"
                                                              Content="{Binding}"
                                                              ContentTemplate="{StaticResource triangleIndicatorSmallLow}" />
                                        <TextBlock Margin="2"
                                                       FontSize="10"
                                                       Foreground="#FF595959"
                                                       Text="Low" />
                                        <TextBlock Margin="2"
                                                       FontSize="10"
                                                       Foreground="#318E5A"
                                                       Text="{Binding CurrentLow}" />
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                    </Grid>
                </Border>
                </DataTemplate>
            </syncfusion:TileViewControl.MinimizedItemTemplate>
                <syncfusion:TileViewControl.ItemTemplate>
                        <DataTemplate>
                    <Border BorderBrush="#FFA5A5A5"
                            BorderThickness="1"
                            Padding="10,8,2,3">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock Margin="0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       FontSize="25"
                                       Foreground="Gray"
                                       Text="{Binding StockName}" />
                                    <StackPanel Grid.Row="1" Orientation="Vertical">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0"
                                                HorizontalAlignment="Stretch"
                                                Orientation="Horizontal">
                                        <ContentPresenter Margin="2"
                                                          VerticalAlignment="Center"
                                                          Content="{Binding}"
                                                          ContentTemplate="{StaticResource triangleIndicatorLarge}" />
                                        <TextBlock VerticalAlignment="Center"
                                                   FontFamily="Segoe UI"
                                                   FontSize="20"
                                                   FontWeight="Light"
                                                   Foreground="#999999"
                                                   Text="{Binding PreviousClose}" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1"
                                                Margin="5,0,0,0"
                                                VerticalAlignment="Top">

                                        <StackPanel Orientation="Horizontal">
                                            <ContentPresenter Margin="2"
                                                              Content="{Binding}"
                                                             
                                                              ContentTemplate="{StaticResource triangleIndicatorSmallHigh}" />
                                            <TextBlock Margin="2"
                                                       FontSize="10"
                                                       Foreground="#595D94"
                                                       Text="High" />
                                            <TextBlock Margin="2"
                                                       FontSize="10"
                                                       Foreground="#318E5A"
                                                       Text="{Binding CurrentHigh}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                                    <ContentPresenter Margin="2"
                                                              Content="{Binding}"
                                                              
                                                              ContentTemplate="{StaticResource triangleIndicatorSmallLow}" />
                                                    <TextBlock Margin="2"
                                                       FontSize="10"
                                                       Foreground="#595D94"
                                                       Text="Low" />
                                                    <TextBlock Margin="2"
                                                       FontSize="10"
                                                       Foreground="#318E5A"
                                                       Text="{Binding CurrentLow}" />
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>

                                </Grid>
                            </Border>
                        </DataTemplate>
                    </syncfusion:TileViewControl.ItemTemplate>
            
        </syncfusion:TileViewControl>
    </Grid>
    
</UserControl>
