<syncfusion:ChromelessWindow x:Class="WeatherAnalysis.MainWindow"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:local="clr-namespace:WeatherAnalysis"
                             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                             Title="WEATHER ANALYSIS"
                             MinWidth="1024"
                             MinHeight="650"
                             Icon="App.ico"
                             Template="{StaticResource ChromelessWindowTemplate}"
                             UseNativeChrome="True"
                             WindowStartupLocation="CenterScreen">

    <syncfusion:ChromelessWindow.DataContext>
        <local:ViewModel />
    </syncfusion:ChromelessWindow.DataContext>

    <syncfusion:ChromelessWindow.Resources>
        <local:BoolToVisibilityConverter x:Key="boolToVisibilityConverter" />
        <local:VisibilityToBoolConverter x:Key="visibilityToBoolConverter" />
        <local:StringToImageConverter x:Key="stringToImageConverter" />
    </syncfusion:ChromelessWindow.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3.5*" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2" />
                <RowDefinition Height="*" />
                <RowDefinition Height="2" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2.3*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border HorizontalAlignment="Stretch"
                                VerticalAlignment="Bottom"
                                Background="Transparent">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <TextBlock HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontFamily="Segoe UI"
                                           FontSize="42"
                                           FontWeight="Light"
                                           Foreground="#3A3A3A"
                                           Text="{Binding Temperature}" />
                                <TextBlock HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontFamily="Segoe UI"
                                           FontSize="42"
                                           FontWeight="Light"
                                           Foreground="#3A3A3A"
                                           Text="°c" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="1" Background="Transparent">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe UI"
                                           FontSize="16"
                                           Foreground="#72BF58"
                                           Text="{Binding SkyCondition}" />
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Border Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <Image x:Name="sampleImg"
                               Width="90"
                               Height="90"
                               HorizontalAlignment="Left"
                               Source="{Binding SkyCondition,
                                                Converter={StaticResource stringToImageConverter}}" />
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent">
                <Path Width="250"
                      Height="0.5"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Data="M434.33334,716.70599 L547.40271,716.70599"
                      Stretch="Fill"
                      Stroke="#FFD8D8D8"
                      StrokeThickness="0.5"
                      UseLayoutRounding="False" />
            </Border>

            <Border Grid.Row="2"
                    Height="90"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Background="Transparent">

                <Grid VerticalAlignment="Stretch">
                    <!--  Temp column definition added to adjust the margin of TextBlocks 2nd Row  -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.1*" />
                        <ColumnDefinition Width="10*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border Background="Transparent">
                            <StackPanel HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                <TextBlock HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontFamily="Segoe UI"
                                           FontSize="18"
                                           FontWeight="Light"
                                           Foreground="#3A3A3A"
                                           Padding="30"
                                           Text="NEWYORK" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                Padding="30,0,0,0">
                            <TextBlock HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       FontFamily="Segoe UI"
                                       FontSize="35"
                                       FontWeight="Light"
                                       Foreground="#3A3A3A"
                                       Text="{Binding CurrentTime}" />
                        </Border>

                        <Border Grid.Row="2" Background="Transparent">
                            <StackPanel HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                <TextBlock HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontFamily="Segoe UI"
                                           FontSize="16"
                                           Foreground="#72BF58"
                                           Padding="30"
                                           Text="{Binding CurrentDay}" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Row="3"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent">
                <Path Width="250"
                      Height="0.5"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Data="M434.33334,716.70599 L547.40271,716.70599"
                      Stretch="Fill"
                      Stroke="#FFD8D8D8"
                      StrokeThickness="0.5"
                      UseLayoutRounding="False" />
            </Border>

            <Border Grid.Row="4"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Background="Transparent">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2.3*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border HorizontalAlignment="Stretch"
                                VerticalAlignment="Bottom"
                                Background="Transparent">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <TextBlock HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="Segoe UI"
                                           FontSize="28"
                                           FontWeight="Light"
                                           Text="44%" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="1" Background="Transparent">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe UI"
                                           FontSize="16"
                                           Foreground="#72BF58"
                                           Text="Humidity" />
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Border Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <Image Width="90"
                               Height="90"
                               HorizontalAlignment="Left"
                               Source="/Images/img_Humidity.png" />
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Row="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Background="Transparent">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2.3*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border HorizontalAlignment="Stretch"
                                VerticalAlignment="Bottom"
                                Background="Transparent">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <TextBlock HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="Segoe UI Light"
                                           FontSize="28"
                                           Foreground="#3A3A3A"
                                           Text="{Binding DewPoint}" />
                                <TextBlock HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="Segoe UI Light"
                                           FontSize="28"
                                           Foreground="#3A3A3A"
                                           Text="%" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="1" Background="Transparent">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe UI Light"
                                           FontSize="16"
                                           Foreground="#72BF58"
                                           Text="Dew Point" />
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Border Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <Image Width="90"
                               Height="90"
                               HorizontalAlignment="Left"
                               Source="/Images/img_DewPoint.png" />
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Row="6"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Background="Transparent">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2.3*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border HorizontalAlignment="Stretch"
                                VerticalAlignment="Bottom"
                                Background="Transparent">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <TextBlock HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="Segoe UI"
                                           FontSize="28"
                                           FontWeight="Light"
                                           Foreground="#3A3A3A"
                                           Text="{Binding Wind}" />
                                <TextBlock HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="Segoe UI Light"
                                           FontSize="28"
                                           FontWeight="Light"
                                           Foreground="#3A3A3A"
                                           Text="mph" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="1" Background="Transparent">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe UI Light"
                                           FontSize="16"
                                           Foreground="#72BF58"
                                           Text="Wind" />
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Border Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <Image Width="90"
                               Height="90"
                               HorizontalAlignment="Left"
                               Source="/Images/img_Wind.png" />
                    </Border>
                </Grid>
            </Border>

        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="8*" />
            </Grid.RowDefinitions>

            <Grid Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="12*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="White">
                    <TextBlock Margin="10,0,0,0"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center"
                               Background="White"
                               FontFamily="Segoe UI"
                               FontSize="32"
                               FontWeight="Light"
                               Foreground="#3A3A3A"
                               Padding="25"
                               Text="{Binding CurrentDay}" />
                </Border>

                <RadioButton Name="chartButton"
                             Grid.Column="1"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"
                             Style="{StaticResource chartButtonKey}" />

                <RadioButton Name="gridButton"
                             Grid.Column="2"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"
                             IsChecked="True"
                             Style="{StaticResource gridButtonKey}" />

            </Grid>
            <ContentPresenter Name="ContentHolder"
                              Grid.Row="1"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch">
                <ContentPresenter.Content>
                    <Grid>
                        <local:GridView Visibility="{Binding IsChecked, ElementName=gridButton, Converter={StaticResource boolToVisibilityConverter}}" />
                        <local:ChartView Visibility="{Binding IsChecked, ElementName=chartButton, Converter={StaticResource boolToVisibilityConverter}}" />
                    </Grid>
                </ContentPresenter.Content>
            </ContentPresenter>
        </Grid>

    </Grid>
</syncfusion:ChromelessWindow>