<!--Using Syncfusion's ChromlessWindow for applying custom skins-->
<syncfusion:ChromelessWindow x:Class="CustomColor_Demo_2008.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" UseNativeChrome="True"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Icon="App.ico" DataContext="{Binding RelativeSource={RelativeSource Self}}" 
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Name="window1" Width="1000" Height="700" Loaded="window1_Loaded" 
    Title="Custom Color Demo" FontFamily="Calibri" WindowStartupLocation="CenterScreen">

  

 <!--Grid Definition with 2 rows and 2 columns-->
    <Grid Margin="10" x:Name="maingrid">       
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>       
        
        <!-- Skin Buttons -->
        <Grid Name="button"
              Background="#88FFFFFF" 
              Grid.Column="0">
            <StackPanel Margin="15" Orientation="Vertical"  
                        HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition ToolTip="combobox" 
                                       Height="5.0*"/>
                        <RowDefinition ToolTip="buttons" 
                                       Height="5.0*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!--ComboBox with System Colors-->
                    <StackPanel Orientation="Vertical" 
                                VerticalAlignment="Top" 
                                Grid.Row="0" 
                                Grid.Column="0">
                        <TextBlock FontFamily="Calibri" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Bottom" 
                                   FontSize="14">Select Color</TextBlock>
                        <ComboBox Name="colorItem" 
                                  Margin="0,7,0,0" 
                                  Width="100" 
                                  Height="25" 
                                  SelectionChanged="colorItem_SelectionChanged"/>
                        <ComboBox Visibility="Collapsed" 
                                  Name="colorItem1" 
                                  Margin="0,7,0,0" 
                                  Width="100"
                                  Height="25" 
                                  SelectionChanged="colorItem1_SelectionChanged"/>
                    </StackPanel>
                    
                    <!--Buttons for applying custom skins to whole window -->
                    <StackPanel Orientation="Vertical" 
                                VerticalAlignment="Center" 
                                Grid.Row="1" 
                                Grid.Column="1">
                        <Button Tag="Default" Name="defaults" 
                                Margin="0,60,0,0" 
                                Click="Button_Click" 
                                Width="100" Content="Default" 
                                Height="25">
                        </Button>
                        <Button Tag="Office2003" 
                                Name="office" 
                                Margin="0,5,0,0" 
                                Content="Office2003" 
                                Click="Button_Click"  
                                Width="100" 
                                Height="25" >
                        </Button>
                        <Button  Tag="Blend" Name="blend" 
                                 Margin="0,5,0,0" 
                                 Content="Blend" 
                                 Click="Button_Click"  
                                 Width="100" Height="25">
                        </Button>
                        <Button Tag="Office2007Blue" Name="blue" 
                                Margin="0,5,0,0" Content="Office2007Blue" 
                                Click="Button_Click"  
                                Width="100" Height="25">
                        </Button>
                        <Button Tag="Office2007Silver" Name="silver"
                                Margin="0,5,0,0" Content="Office2007Silver" 
                                Click="Button_Click" 
                                Width="100" Height="25">
                        </Button>
                        <Button Tag="Office2007Black" Name="black" 
                                Margin="0,5,0,0" Content="Office2007Black" 
                                Click="Button_Click"  
                                Width="100" Height="25" >
                        </Button>
                        <Button Tag="Office2010Blue" Name="blue2010" 
                                Margin="0,5,0,0" Content="Office2010Blue" 
                                Click="Button_Click"  
                                Width="100" Height="25">
                        </Button>
                        <Button Tag="Office2010Silver" Name="silver2010"
                                Margin="0,5,0,0" Content="Office2010Silver" 
                                Click="Button_Click" 
                                Width="100" Height="25">
                        </Button>
                        <Button Tag="Office2010Black" Name="black2010" 
                                Margin="0,5,0,0" Content="Office2010Black" 
                                Click="Button_Click"  
                                Width="100" Height="25" >
                        </Button>
                        <Button Tag="SyncOrange" Name="orange" 
                                Margin="0,5,0,0" Content="SyncOrange" 
                                Click="Button_Click"  
                                Width="100" Height="25" >
                        </Button>
                        <Button Tag="ShinyRed" Name="shinyred" 
                                Margin="0,5,0,0" Content="ShinyRed" 
                                Click="Button_Click"  
                                Width="100" Height="25" >
                        </Button>
                        <Button Tag="ShinyBlue" Name="shinyblue" 
                                Margin="0,5,0,0" Content="ShinyBlue" 
                                Click="Button_Click"  
                                Width="100" Height="25" >
                        </Button>
                        <Button Tag="VS2010" Name="vs2010" 
                                Margin="0,5,0,0" Content="VS2010" 
                                Click="Button_Click"  
                                Width="100" Height="25" >
                        </Button>
                        <Button Tag="Metro" Name="metro" 
                                Margin="0,5,0,0" Content="Metro" 
                                Click="Button_Click"  
                                Width="100" Height="25" >
                        </Button>
                        <Button Tag="Transparent" Name="transparent" 
                                Margin="0,5,0,0" Content="Transparent" 
                                Click="Button_Click"  
                                Width="100" Height="25" >
                        </Button>
                        <!-- Buttons for applying custom skins to Individual controls -->
                        <Button Tag="Default" Name="default1" 
                                Visibility="Collapsed" 
                                Margin="0,60,0,0" 
                                Click="Button_Click_1" 
                                Width="100" Content="Default" Height="25">
                        </Button>
                        <Button Tag="Office2003" Name="office1" 
                                Visibility="Collapsed" Margin="0,5,0,0"
                                Content="Office2003" 
                                Click="Button_Click_1"  
                                Width="100" Height="25" >
                        </Button>
                        <Button  Tag="Blend" Name="blend1"
                                 Visibility="Collapsed" Margin="0,5,0,0" 
                                 Content="Blend" 
                                 Click="Button_Click_1" 
                                 Width="100" Height="25">
                        </Button>
                        <Button Tag="Office2007Blue" Name="blue1" 
                                Visibility="Collapsed" Margin="0,5,0,0" 
                                Content="Office2007Blue"
                                Click="Button_Click_1"  
                                Width="100" Height="25">
                        </Button>
                        <Button Tag="Office2007Silver" Name="silver1"
                                Visibility="Collapsed" Margin="0,5,0,0" 
                                Content="Office2007Silver" 
                                Click="Button_Click_1" 
                                Width="100" Height="25">
                        </Button>
                        <Button Tag="Office2007Black" Name="black1" 
                                Visibility="Collapsed" Margin="0,5,0,0" 
                                Content="Office2007Black" 
                                Click="Button_Click_1"  
                                Width="100" Height="25" >
                        </Button>
                        <Button Tag="Office2010Blue" Name="Off2010blue" 
                                Visibility="Collapsed" Margin="0,5,0,0" 
                                Content="Office2010Blue"
                                Click="Button_Click_1"  
                                Width="100" Height="25">
                        </Button>
                        <Button Tag="Office2010Silver" Name="off2010silver"
                                Visibility="Collapsed" Margin="0,5,0,0" 
                                Content="Office2010Silver" 
                                Click="Button_Click_1" 
                                Width="100" Height="25">
                        </Button>
                        <Button Tag="Office2010Black" Name="off2010black" 
                                Visibility="Collapsed" Margin="0,5,0,0" 
                                Content="Office2010Black" 
                                Click="Button_Click_1"  
                                Width="100" Height="25" >
                        </Button>
                        <Button Tag="SyncOrange" Name="orange1" 
                                Visibility="Collapsed" Margin="0,5,0,0" 
                                Content="SyncOrange" 
                                Click="Button_Click_1"  
                                Width="100" Height="25" >
                        </Button>
                        <Button Tag="ShinyRed" Name="shinyred1" 
                                Margin="0,5,0,0" Content="ShinyRed" 
                                Click="Button_Click_1" Visibility="Collapsed"  
                                Width="100" Height="25" >
                        </Button>
                        <Button Tag="ShinyBlue" Name="shinyblue1" 
                                Margin="0,5,0,0" Content="ShinyBlue" 
                                Click="Button_Click_1" Visibility="Collapsed" 
                                Width="100" Height="25" >
                        </Button>
                        <Button Tag="VS2010" Name="vs20101" 
                                Margin="0,5,0,0" Content="VS2010" 
                                Click="Button_Click_1" Visibility="Collapsed" 
                                Width="100" Height="25" >
                        </Button>
                        <Button Tag="Metro" Name="metro1" 
                                Margin="0,5,0,0" Content="Metro" 
                                Click="Button_Click_1" Visibility="Collapsed" 
                                Width="100" Height="25" >
                        </Button>
                        <Button Tag="Transparent" Name="transparent1" 
                                Margin="0,5,0,0" Content="Transparent" 
                                Click="Button_Click_1" Visibility="Collapsed" 
                                Width="100" Height="25" >
                        </Button>
                        <Button Margin="0,5,0,0" Content="Exit" Name="exit" 
                                Click="exit_Click" 
                                Width="100" Height="25" >
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>

		<!--Controls Area-->
        <Border Name="border" BorderBrush="#AAFFFFFF" 
                BorderThickness="1" 
                Grid.Row="1" Grid.Column="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="5">
                
                <!--Task Bar-->
                    <syncfusion:TaskBar FontFamily="Calibri" 
                                        syncfusion:TaskBar.IsOpened="False" 
                                        FontSize="13" Name="taskbar" 
                                        GroupOrientation="Vertical"                                        
										syncfusion:TaskBar.Speed="2">
                        <syncfusion:TaskBar.GroupPadding>
                            <Thickness>5,5,5,5</Thickness>
                        </syncfusion:TaskBar.GroupPadding>

                        <syncfusion:TaskBar.GroupMargin>
                            <Thickness>5,5,5,5</Thickness>
                        </syncfusion:TaskBar.GroupMargin>

                        <syncfusion:TaskBarItem Name="TabControlTask" 
                                                Header="TabControlExt">

                            <StackPanel Orientation="Vertical">
								<!--TabControl-->
                                 <syncfusion:TabControlExt 
                                     Margin="5,10,5,5" 
                                     Height="130" 
                                     Name="tabcontrol">
                                    <syncfusion:TabItemExt 
                                        Header="Feature" 
                                        Image="/Image/DocIO.gif">
                                        <FlowDocumentScrollViewer 
                                            HorizontalScrollBarVisibility="Auto" 
                                            VerticalScrollBarVisibility="Auto">
                                            <FlowDocument 
                                                Name="featureDoc" 
                                                FontFamily="Calibri"
                                                FontSize="13">
                                                <Paragraph>
                                                    We can apply custom color to the application based on 
                                                    the Visualstyle we selected at last.
                                                </Paragraph>
                                            </FlowDocument>
                                        </FlowDocumentScrollViewer>
                                    </syncfusion:TabItemExt>
                                    <syncfusion:TabItemExt 
                                        Header="Tab Control" 
                                        Image="/Image/DocIO.gif">
                                        <FlowDocumentScrollViewer 
                                            HorizontalScrollBarVisibility="Auto" 
                                            VerticalScrollBarVisibility="Auto">
                                            <FlowDocument Name="featureDoc1" 
                                                          FontFamily="Calibri" 
                                                          FontSize="13">
                                                <Paragraph>
                                                    By using TabControlExt, an application can 
                                                    define multiple pages for the same area of a window.
                                                </Paragraph>
                                            </FlowDocument>
                                        </FlowDocumentScrollViewer>
                                    </syncfusion:TabItemExt>
                                </syncfusion:TabControlExt>
                                <CheckBox Margin="5" ToolTip="Please Uncheck after you tested" 
                                          Height="20" Unchecked="tabcheck_Unchecked" 
                                          Checked="tabcheck_Checked" Name="tabcheck">Custom Color 
                                    (Check if you want to apply color for individual control)
                                </CheckBox>
                            </StackPanel>
                        </syncfusion:TaskBarItem>

                        <syncfusion:TaskBarItem Name="TreeViewTask"  
                                                Header="TreeViewAdv">
                            <StackPanel Orientation="Vertical">
                            <!--TreeView-->
                                <syncfusion:TreeViewAdv Margin="5,10,5,5" 
                                                        Name="treeview" 
                                                        Height="130">
                                    <syncfusion:TreeViewItemAdv Margin="2" 
                                                                Header="Flowers" 
                                                                IsExpanded="True">
                                        <syncfusion:TreeViewItemAdv Header="Lily"/>
                                        <syncfusion:TreeViewItemAdv Header="Rose">
                                            <syncfusion:TreeViewItemAdv Header="Red Rose"/>
                                            <syncfusion:TreeViewItemAdv Header="White Rose"/>
                                        </syncfusion:TreeViewItemAdv>
                                        <syncfusion:TreeViewItemAdv Header="Lotus"/>
                                        <syncfusion:TreeViewItemAdv Header="Daisy"/>
                                        <syncfusion:TreeViewItemAdv Header="Jasmine"/>
                                    </syncfusion:TreeViewItemAdv>
                                </syncfusion:TreeViewAdv>
                                <CheckBox Margin="5" Unchecked="tabcheck_Unchecked" 
                                          ToolTip="Please uncheck after you tested" 
                                          Checked="tabcheck_Checked" Height="20" 
                                          Name="treecheck">Custom Color 
                                    (Check if you want to apply color 
                                    for individual control)</CheckBox>
                            </StackPanel>
                        </syncfusion:TaskBarItem>
                        
                        <syncfusion:TaskBarItem Name="ColorPickerTask" 
                                                Header="ColorPicker">
                            <StackPanel Orientation="Vertical">
                            <!--ColorPicker-->
                                <TextBlock Margin="5,10,5,5" Name="colorpick">ColorPicker control
                                </TextBlock>
                                <syncfusion:ColorPicker HorizontalAlignment="Left" 
                                                        Margin="5,10,5,5" 
                                                        ColorChanged="colorpicker_ColorChanged"                                                         
                                                        Name="colorpicker" Width="250" 
                                                        Height="25"/>
                                <CheckBox Margin="5" ToolTip="Please uncheck after you tested" 
                                          Unchecked="tabcheck_Unchecked" 
                                          Checked="tabcheck_Checked" 
                                          Height="20" 
                                          Name="colorcheck">Custom Color (Check if you 
                                    want to apply color for individual control)
                                </CheckBox>
                            </StackPanel>
                        </syncfusion:TaskBarItem>

                        <syncfusion:TaskBarItem Name="ClockTask"  Header="Clock">
                            <StackPanel Orientation="Vertical">
                            <!--Clock Control-->
                                <syncfusion:Clock Name="clockcontrol" Margin="5,10,5,5" 
                                                  VerticalAlignment="Center" 
                                                  HorizontalAlignment="Left" 
                                                  IsDigitalAmPmVisible="True">                                    
                                </syncfusion:Clock>
                                <CheckBox Margin="5" ToolTip="Please uncheck after you tested" 
                                          Height="20" Unchecked="tabcheck_Unchecked"
                                          Checked="tabcheck_Checked" Name="clockcheck">
                                    Custom Color (Check if you want to apply color for 
                                    individual control)</CheckBox>
                            </StackPanel>
                        </syncfusion:TaskBarItem>
                        
                        <syncfusion:TaskBarItem Name="CalendarTask" 
                                                Header="CalendarEdit">
                            <StackPanel Orientation="Vertical">
                            <!--Calendar Edit-->
                                <syncfusion:CalendarEdit Name="calendaredit" 
                                                         Margin="5,10,5,5" 
                                                         Width="270" Height="230" 
                                                         HorizontalAlignment="Left" 
                                                         VerticalAlignment="Center"/>
                                <CheckBox Margin="5" ToolTip="Please Uncheck after you tested" 
                                          Unchecked="tabcheck_Unchecked" 
                                          Checked="tabcheck_Checked"
                                          Height="20" Name="calendarcheck">
                                    Custom Color (Check if you want to apply color for 
                                    individual control)</CheckBox>
                            </StackPanel>
                        </syncfusion:TaskBarItem>

                        <syncfusion:TaskBarItem Name="EditorTask" 
                                                Header="Editors">
                        <!--Editor Controls-->
                            <StackPanel Orientation="Vertical">
                                <Grid Margin="5,10,5,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition ToolTip="Currency" 
                                                       Height="Auto"/>
                                        <RowDefinition ToolTip="Integer" 
                                                       Height="Auto"/>
                                        <RowDefinition ToolTip="Double" 
                                                       Height="Auto"/>
                                        <RowDefinition ToolTip="Percent"
                                                       Height="Auto"/>
                                        <RowDefinition ToolTip="Masked" 
                                                       Height="Auto"/>
                                        <RowDefinition ToolTip="UpDown" 
                                                       Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition ToolTip="TextBox" 
                                                          Width="Auto"/>
                                        <ColumnDefinition ToolTip="Control" 
                                                          Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Width="120" 
                                               FontSize="13" 
                                               Height="35" 
                                               Grid.Column="0" 
                                               Grid.Row="0" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center">Currency TextBox
                                    </TextBlock>
                                    <StackPanel Width="200" 
                                                Grid.Column="1" 
                                                Grid.Row="0"
                                                Height="35" 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">
                                        <syncfusion:CurrencyTextBox Name="currency" 
                                                                    CurrencyDecimalDigits="2" 
                                                                    CurrencySymbol="$" 
                                                                    HorizontalAlignment="Left"  
                                                                    FlowDirection="LeftToRight" 
                                                                    CurrencyDecimalSeparator="."  
                                                                    Height="30" Width="160" 
                                                                    CurrencyGroupSeparator="," 
                                                                    CurrencyGroupSizes="3"
                                                                    Value="350426480357"/>
                                    </StackPanel>

                                    <TextBlock Width="120" Grid.Column="0" 
                                               Grid.Row="1"  
                                               FontSize="13" Height="35"  
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center">Integer TextBox
                                    </TextBlock>
                                    <StackPanel Width="200" Grid.Column="1" 
                                                Grid.Row="1" Height="35" 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">
                                        <syncfusion:IntegerTextBox Name="integers" 
                                                                   NumberGroupSeparator="," 
                                                                   NumberGroupSizes="3"
                                                                   FlowDirection="LeftToRight"
                                                                   HorizontalAlignment="Left"
                                                        Height="30" Width="160"
                                                        Value="6879903380"/>
                                    </StackPanel>

                                    <TextBlock Width="120" 
                                               Grid.Column="0" 
                                               Grid.Row="2" 
                                               FontSize="13" Height="35"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center">Double TextBox
                                    </TextBlock>

                                    <StackPanel Width="200" Grid.Column="1" 
                                                Grid.Row="2" Height="35" 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">
                                        <syncfusion:DoubleTextBox Name="doubles" 
                                                                  NumberDecimalDigits="5" 
                                                                  NumberDecimalSeparator="." 
                                                                  NumberGroupSeparator=","  
                                                                  FlowDirection="LeftToRight" 
                                                                  NumberGroupSizes="3" 
                                                                  Height="30" Width="160"
                                                                  HorizontalAlignment="Left"
                                                                  Value="6343990"/>
                                    </StackPanel>

                                    <TextBlock Width="120" Grid.Column="0" 
                                               Grid.Row="3" FontSize="13" 
                                               Height="35" HorizontalAlignment="Center" 
                                               VerticalAlignment="Center">
                                        Percent TextBox
                                    </TextBlock>

                                    <StackPanel Width="200" 
                                                Grid.Column="1" 
                                                Grid.Row="3" 
                                                Height="35" 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">
                                        <syncfusion:PercentTextBox Name="percents"  
                                                                   PercentageSymbol="%" 
                                                                   PercentDecimalDigits="5" 
                                                                   PercentDecimalSeparator="." 
                                                                   HorizontalAlignment="Left"
                                                                   PercentGroupSeparator="," 
                                                                   PercentGroupSizes="3" 
                                                                   Height="30" Width="160"  
                                                                   PercentValue="998979"/>
                                    </StackPanel>

                                    <TextBlock Width="120" 
                                               FontSize="13" 
                                               Height="35" 
                                               Grid.Column="0" Grid.Row="4" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center">Masked TextBox
                                    </TextBlock>
                                    <StackPanel Width="200" 
                                                Grid.Column="1" 
                                                Grid.Row="4" 
                                                Height="35" 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">
                                        <syncfusion:MaskedTextBox Name="masked" 
                                                                  HorizontalAlignment="Left"                                                          
                                                                  Height="30" Width="160" 
                                                                  Mask="0000-00000000" 
                                                                  WatermarkText="Phone No"/>
                                    </StackPanel>

                                    <TextBlock Width="120" 
                                               Grid.Column="0" 
                                               Grid.Row="5" 
                                               FontSize="13" Height="35" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center">UpDown TextBox
                                    </TextBlock>

                                    <StackPanel Width="200" 
                                                Grid.Column="1" 
                                                Grid.Row="5" 
                                                Height="35" 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">
                                           <syncfusion:UpDown 
                                           FontSize="24"                                            
                                           Name="updown"                                            
                                           Height="30" 
                                           Width="200" HorizontalAlignment="Left"
                                           VerticalAlignment="Center"></syncfusion:UpDown>
                                    </StackPanel>
                                </Grid>

                                <CheckBox Margin="5" ToolTip="Please Uncheck after you tested" 
                                          Unchecked="tabcheck_Unchecked" 
                                          Checked="tabcheck_Checked" 
                                          Height="20" 
                                          Name="editcheck">Custom Color (Check if you want to apply 
                                    color for individual control)</CheckBox>
                            </StackPanel>
                        </syncfusion:TaskBarItem>
                        
                        <syncfusion:TaskBarItem Name="AutoCompleteTask" 
                                                Header="AutoComplete and DateTimeEdit">
                            <StackPanel Orientation="Vertical">
                                <Grid Margin="5,10,5,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition ToolTip="AutoComplete" 
                                                       Height="Auto"/>
                                        <RowDefinition ToolTip="DateTime" 
                                                       Height="Auto"/>
                                        <RowDefinition ToolTip="FontCombo" 
                                                       Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition ToolTip="TextBox" 
                                                          Width="Auto"/>
                                        <ColumnDefinition ToolTip="Control"
                                                          Width="Auto"/>
                                    </Grid.ColumnDefinitions>
									<!--AutoComplete Control-->
									<TextBlock Width="120" FontSize="13" 
                                               Height="35" 
                                               Grid.Column="0" 
                                               Grid.Row="0" HorizontalAlignment="Center" 
                                               VerticalAlignment="Center">AutoComplete
                                    </TextBlock>
                                    <StackPanel Width="200" Grid.Column="1" Grid.Row="0" 
                                                Height="35" HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">
                                    
                                   
                                     <syncfusion:AutoComplete Name="autocomplete" 
                                                              Source="Custom" 
                                                              IsAutoCompleteItem="True" 
                                                              HorizontalAlignment="Left"                                                         
                                                        Height="25" Width="180"/>
                                    </StackPanel>
									<!--FontListComboBox Control-->
									<TextBlock Width="120" FontSize="13" 
                                               Height="35" 
                                               Grid.Column="0" Grid.Row="1" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center">FontListComboBox
                                    </TextBlock>
                                    <StackPanel Width="200" Grid.Column="1" 
                                                Grid.Row="1" Height="35" 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">
                                        <syncfusion:FontListComboBox Name="fontcombo" 
                                                                     HorizontalAlignment="Left" 
                                                                     Height="25" 
                                                                     PopupDropDownHeight="180"
                                                                     Width="180"/>
                                    </StackPanel>
									<!--DateTimeEdit Control-->
									<TextBlock Width="120" 
                                               FontSize="13" 
                                               Height="35"
                                               Grid.Column="0" 
                                               Grid.Row="2" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center">DateTimeEdit</TextBlock>
                                    <StackPanel Width="200" Grid.Column="1" Grid.Row="2" 
                                                Height="35" HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">
                                        <syncfusion:DateTimeEdit Name="datetime" 
                                                                 HorizontalAlignment="Left" 
                                                                 FontSize="16" 
                                                                 VerticalContentAlignment="Center"                                                          
                                                                 Height="30" Width="200" 
                                                                 CustomPattern="dd.MMMM.yyyy h:m:s"/>
                                    </StackPanel>
                                </Grid>
                                <CheckBox Margin="5" ToolTip="Please uncheck after you tested" 
                                          Unchecked="tabcheck_Unchecked" Checked="tabcheck_Checked" 
                                          Height="20" Name="autocheck">Custom Color (Check if you want 
                                    to apply color for individual control)</CheckBox>
                            </StackPanel>
                        </syncfusion:TaskBarItem>

                        <syncfusion:TaskBarItem Name="FontListTask" Header="FontListBox">
                            <StackPanel Orientation="Vertical">
                           
                                <TextBlock Name="fonttext" Margin="5">Select FontFamily</TextBlock>
                                <ScrollViewer Name="scrolls" 
                                              Margin="5,10,5,5" 
                                              HorizontalAlignment="Left" 
                                              VerticalScrollBarVisibility="Auto" 
                                              Width="300" 
                                              Height="350"
                                              HorizontalScrollBarVisibility="Auto">

                                    <syncfusion:FontListBox 
                                                    SelectedFontFamily="Arial" 
                                                    SelectedFontFamilyChanged="fontlist_SelectedFontFamilyChanged"
                                                    Width="290" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                                    ScrollViewer.VerticalScrollBarVisibility="Auto" 
                                                    Name="fontlist"/>
                                </ScrollViewer>
                                <CheckBox Margin="5" ToolTip="Please uncheck after you tested" 
                                          Unchecked="tabcheck_Unchecked" Checked="tabcheck_Checked"
                                          Height="20" Name="fontcheck">Custom Color (Check if you want 
                                    to apply color for individual control)</CheckBox>
                            </StackPanel>
                        </syncfusion:TaskBarItem>
                        
                        <syncfusion:TaskBarItem Name="GroupBarTask" Header="GroupBar">
                            <StackPanel Orientation="Vertical">
                            <!--Group Bar-->
                                <syncfusion:GroupBar Name="groupbar" Margin="5" Height="270" 
                                                     VisualMode="Default" Width="300" 
                                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                 ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                    <syncfusion:GroupBarItem IsLastItem="True" ShowInGroupBar="True" 
                                                             IsExpanded="True" 
                                                             HeaderText="Mail Folders">
                                        <TreeView Margin="10,10,0,10" BorderThickness="0">
                                            <TreeViewItem Header="MailBox" IsExpanded="True">
                                                <TreeViewItem Header="Deleted Items"/>
                                                <TreeViewItem Header="Drafts"/>
                                                <TreeViewItem Header="Inbox"/>
                                                <TreeViewItem Header="Junk E-mail"/>
                                                <TreeViewItem Header="Outbox"/>
                                                <TreeViewItem Header="RSS Feeds"/>
                                                <TreeViewItem Header="SendItems"/>
                                                <TreeViewItem Header="Search Folders">
                                                    <TreeViewItem Header="Categorized Mail"/>
                                                    <TreeViewItem Header="Large Mail"/>
                                                    <TreeViewItem Header="Unread Mail"/>
