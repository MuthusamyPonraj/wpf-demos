<!--Window for applying custom skins-->
<Window x:Class="SkinManagerDemo_2008.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    DataContext="{Binding RelativeSource={RelativeSource Self}}" Icon="/Image/App.ico"
    Title="Real-Time Demo" syncfusion:SkinStorage.VisualStyle="Metro"
    Name="window"  Height="650" Width="792" WindowState="Maximized">


	<!--Root Grid Definition with 3 rows-->
	<Grid Name="GridMain">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Menu and ToolBar Area -->
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition  Height="Auto"/>
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>

			<!--Menu Area-->
			<Grid Name="MenuGrid"  Grid.Row="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				<Menu Name="menu" >

					<!--File Menu-->
					<MenuItem Header="_File">
						<MenuItem Header="New">
							<MenuItem Name="app" 
                                      Click="app_Click" 
                                      Header="Application"/>
						</MenuItem>
						<MenuItem Header="Open">
							<MenuItem Name="selitem" 
                                      Click="selitem_Click" 
                                      Header="Home"/>
							<MenuItem Name="selfolder" 
                                      Click="selfolder_Click" 
                                      Header="Today's Interview"/>
						</MenuItem>
						<MenuItem Name="save" 
                                  Header="Save"/>
						<Separator/>
						<MenuItem Name="pagesetup"  Header="Page Setup"/>
						<MenuItem Name="print"  Header="Print"/>
						<MenuItem Name="exit"  Header="Exit"/>
					</MenuItem>

					<!--Edit Menu-->
					<MenuItem Header="_Edit">
						<MenuItem Name="cut"  Header="Cut"/>
						<MenuItem Name="copy"  Header="Copy"/>
						<MenuItem Name="paste"  Header="Paste"/>
						<MenuItem Name="selectall"  Header="Select All"/>
					</MenuItem>

					<!--View Menu-->
					<MenuItem Header="_View">
						<MenuItem Name="software" Click="software_Click" Header="Software Jobs"/>
						<MenuItem Name="hardware" Click="hardware_Click" Header="Hardware Jobs"/>
						<MenuItem Name="callcenter" Click="callcenter_Click" Header="Call Center Jobs"/>
						<MenuItem Name="bpo" Click="bpo_Click" Header="BPO Jobs"/>
						<MenuItem Name="faculty" Click="faculty_Click" Header="Faculty Jobs"/>
						<MenuItem Name="other" Click="other_Click" Header="Other Jobs"/>
					</MenuItem>

					<!--Help Menu-->
					<MenuItem Header="_Help">
						<MenuItem Name="contactus"  Header="Contact Us"/>
						<MenuItem Name="aboutus"  Header="About Us"/>
					</MenuItem>
				</Menu>
			</Grid>

			<!--Toolbar-->
			<ToolBarTray Name="toolbar" Grid.Row="1" >
				<ToolBar Band="1" BandIndex="1">
					<Button Name="open" Click="open_Click" Margin="2,0,0,0" ToolTip="Open">
						<Button.Content>
							<StackPanel Orientation="Horizontal">
								<Image Margin="2" Source="/Image/open.png" Height="14" Width="14"/>
								<TextBlock Margin="2">Open</TextBlock>
							</StackPanel>
						</Button.Content>
					</Button>
					<Button Name="home" Click="home_Click" Margin="2,0,0,0" ToolTip="Home">
						<Button.Content>
							<StackPanel Orientation="Horizontal">
								<Image Margin="2" Source="/Image/home.gif" Height="14" Width="14"/>
								<TextBlock Margin="2">Home</TextBlock>
							</StackPanel>
						</Button.Content>
					</Button>
					<Button Name="save1"  Margin="2,0,0,0" ToolTip="Save">
						<Button.Content>
							<StackPanel Orientation="Horizontal">
								<Image Margin="2" Source="/Image/disk_blue.png" Height="14" Width="14"/>
								<TextBlock Margin="2">Save</TextBlock>
							</StackPanel>
						</Button.Content>
					</Button>
					<Separator/>
					<Button Name="cut1"  Margin="4,0,0,0" ToolTip="Cut">
						<Button.Content>
							<StackPanel Orientation="Horizontal">
								<Image Margin="2" Source="/Image/cut.gif" Height="14" Width="14"/>
								<TextBlock Margin="2">Cut</TextBlock>
							</StackPanel>
						</Button.Content>
					</Button>
					<Button Name="copy1"  Margin="2,0,0,0" ToolTip="Copy">
						<Button.Content>
							<StackPanel Orientation="Horizontal">
								<Image Margin="2" Source="/Image/copy.png" Height="14" Width="14"/>
								<TextBlock Margin="2">Copy</TextBlock>
							</StackPanel>
						</Button.Content>
					</Button>
					<Button Name="pase"  Margin="2,0,0,0" ToolTip="Paste">
						<Button.Content>
							<StackPanel Orientation="Horizontal">
								<Image Margin="2" Source="/Image/paste.png" Height="14" Width="14"/>
								<TextBlock Margin="2">Paste</TextBlock>
							</StackPanel>
						</Button.Content>
					</Button>
					<Separator/>
					<ComboBox Name="selected" 
                              Margin="4,0,0,0" 
                              Width="100"  
                              Height="25">
						<ComboBoxItem Tag="1" 
                                      Content="Software" 
                                      Selected="ComboBoxItem_Selected"></ComboBoxItem>
						<ComboBoxItem Tag="2" 
                                      Content="Hardware" 
                                      Selected="ComboBoxItem_Selected"></ComboBoxItem>
						<ComboBoxItem Tag="3" 
                                      Content="Call Center" 
                                      Selected="ComboBoxItem_Selected"></ComboBoxItem>
						<ComboBoxItem Tag="4" 
                                      Content="BPO" 
                                      Selected="ComboBoxItem_Selected"></ComboBoxItem>
						<ComboBoxItem Tag="5" 
                                      Content="Faculty" 
                                      Selected="ComboBoxItem_Selected"></ComboBoxItem>
						<ComboBoxItem Tag="6" 
                                      Content="Others" 
                                      Selected="ComboBoxItem_Selected"></ComboBoxItem>
					</ComboBox>
					<Button Margin="2,0,0,0"
                            ToolTip="Help">
						<Button.Content>
							<Image Source="/Image/help.gif" 
                                   Height="14" 
                                   Width="14"/>
						</Button.Content>
					</Button>
				</ToolBar>
			</ToolBarTray>
		</Grid>

		<!-- Main Area -->
		<Border  BorderBrush="#67FFFFFF" 
                 BorderThickness="1" 
                 Grid.Row="1" >
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="2.0*"/>
					<ColumnDefinition Width="6.0*"/>
					<ColumnDefinition Width="2.0*"/>
				</Grid.ColumnDefinitions>

				<!-- Left Panel -->
				<Border Margin="2" Name="BorderLeft"  
                        BorderBrush="#99000000" 
                        BorderThickness="1" 
                        Grid.Column="0">
					<ScrollViewer Name="scrollviewer1" 
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto" >
						<StackPanel  Orientation="Vertical">
							<GroupBox Header="Job Category" Margin="5,10,10,10">
								<TreeView Name="treeview" Margin="2">
									<TreeViewItem IsExpanded="True" Header="Category" >
										<TreeViewItem Tag="0" 
                                                      Selected="TreeViewItem_Selected" 
                                                      Header="Software" />
										<TreeViewItem Tag="1" 
                                                      Selected="TreeViewItem_Selected"
                                                      Header="Hardware"/>
										<TreeViewItem Tag="2" 
                                                      Selected="TreeViewItem_Selected" 
                                                      Header="Call Center"/>
										<TreeViewItem Tag="3" 
                                                      Selected="TreeViewItem_Selected" 
                                                      Header="BPO"/>
										<TreeViewItem Tag="4" 
                                                      Selected="TreeViewItem_Selected" 
                                                      Header="Faculty"/>
										<TreeViewItem Tag="5" 
                                                      Selected="TreeViewItem_Selected" 
                                                      Header="Others"/>
									</TreeViewItem>
								</TreeView>
							</GroupBox>
							<Expander Header="Show Job"
                                      IsExpanded="True"
                                      Margin="5,10,10,10">
								<StackPanel>
									<RadioButton Margin="4" 
                                                 Name="rbAllJob" 
                                                 Content="All Vacancies" 
                                                 Checked="ShowJob_Checked">
									</RadioButton>
									<RadioButton Margin="4"  
                                                 Name="rbTodayJob" 
                                                 Content="Today's Interview" 
                                                 Checked="ShowJob_Checked">
									</RadioButton>
								</StackPanel>
							</Expander>
							<Expander Header="Edit Columns" 
                                      IsExpanded="True" 
                                      Margin="5,10,10,10">
                                <StackPanel>
                                    <CheckBox Margin="4" 
                                              IsChecked="True" 
                                              Content="Job Id" >
                                    </CheckBox>
                                    <CheckBox Margin="4" 
                                              IsChecked="True" 
                                              Content="Company ID">
                                    </CheckBox>
                                    <CheckBox Margin="4" 
                                              IsChecked="True" 
                                              Content="Job Description">
                                    </CheckBox>
                                    <CheckBox Margin="4" 
                                              IsChecked="True"
                                              Content="No. of Vacancies">
                                    </CheckBox>
                                    <CheckBox Margin="4" 
                                              IsChecked="True" 
                                              Content="Date of Interview">
                                    </CheckBox>
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

				<!-- Main Panel -->
				<Border Margin="1,1,1,1" 
                        Grid.Column="1" 
                        Grid.Row="0" 
                        Name="BorderMiddle"                          
                        BorderBrush="#99000000" 
                        BorderThickness="1">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="5.0*"/>
							<RowDefinition Height="5.0*"/>
						</Grid.RowDefinitions>
						<Border Margin="10" Name="BorderApplication" 
                                BorderBrush="#99000000" 
                                BorderThickness="1" 
                                Grid.Row="0">
							<ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                          VerticalScrollBarVisibility="Auto">
								<Grid>
									<Grid.RowDefinitions>
										<RowDefinition />
										<RowDefinition />
									</Grid.RowDefinitions>
									<Label BorderBrush="#99000000" Grid.Row="0" 
                                           BorderThickness="1" FontWeight="Bold" 
                                           FontSize="14">Application</Label>
                                    <Grid Margin="10" Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="9.0*"/>
                                            <RowDefinition Height="1.0*"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="1" 
                                                    Orientation="Horizontal">
                                            <StackPanel  Margin="10,10,1,10" 
                                                         Orientation="Vertical">
                                                <TextBlock Margin="6" Height="22" 
                                                           VerticalAlignment="Center">Name of 
                                                    the Candidate</TextBlock>
                                                <TextBlock Height="23" Margin="6" 
                                                           VerticalAlignment="Center">Name 
                                                    of University</TextBlock>
                                                <TextBlock Height="23"  Margin="6" 
                                                           VerticalAlignment="Center">Date of Birth
                                                </TextBlock>
                                                <TextBlock Height="23"  Margin="6" 
                                                           VerticalAlignment="Center">Address for Communication
                                                </TextBlock>
                                                <TextBlock Height="23" Margin="6" 
                                                           VerticalAlignment="Center">Job Category</TextBlock>
                                                <TextBlock Height="23"  Margin="6">Technical Skills</TextBlock>
                                            </StackPanel>
                                            <StackPanel  Margin="3,10,10,10" 
                                                         HorizontalAlignment="Left" 
                                                         Orientation="Vertical" >
                                                <TextBox HorizontalAlignment="Left"  
                                                         Height="23" 
                                                         Width="200" Margin="6" 
                                                         Name="textboxname"/>
                                                <TextBox HorizontalAlignment="Left" 
                                                         Height="23"  
                                                         Width="200" Margin="6" />
                                                <TextBox HorizontalAlignment="Left" 
                                                         Height="23"  
                                                         Width="200" Margin="6" />
                                                <TextBox HorizontalAlignment="Left" 
                                                         Height="23"  
                                                         Width="200" Margin="6" />
                                                <StackPanel Grid.Row="9">
                                                    <ComboBox HorizontalAlignment="Left" Name="category" 
                                                              Margin="6" Width="150"  Height="23">
                                                        <ComboBoxItem>Software</ComboBoxItem>
                                                        <ComboBoxItem>Hardware</ComboBoxItem>
                                                        <ComboBoxItem>Call Center</ComboBoxItem>
                                                        <ComboBoxItem>BPO</ComboBoxItem>
                                                        <ComboBoxItem>Faculties</ComboBoxItem>
                                                        <ComboBoxItem>Others</ComboBoxItem>
                                                    </ComboBox>
                                                    <!--<ListBox HorizontalAlignment="Left" Name="category" 
                                                              Margin="6" Width="150"  Height="50">
                                                        <ListBoxItem>Software</ListBoxItem>
                                                        <ListBoxItem>Hardware</ListBoxItem>
                                                        <ListBoxItem>Call Center</ListBoxItem>
                                                        <ListBoxItem>BPO</ListBoxItem>
                                                        <ListBoxItem>Faculties</ListBoxItem>
                                                        <ListBoxItem>Others</ListBoxItem>
                                                    </ListBox>-->
                                                </StackPanel>
                                                <StackPanel Grid.Row="10"
                                                            Orientation="Horizontal">
													<WrapPanel  Orientation="Vertical" >
														<CheckBox  Margin="5">.NET</CheckBox>
														<CheckBox Margin="5">Java</CheckBox>
														<CheckBox  Margin="5" >J2EE</CheckBox>
														<CheckBox Margin="5" >Visual Basic</CheckBox>
													</WrapPanel>
													<WrapPanel  Orientation="Vertical" >
														<CheckBox  Margin="5">COBOL</CheckBox>
														<CheckBox  Margin="5">C</CheckBox>
														<CheckBox  Margin="5" >C++</CheckBox>
														<CheckBox Margin="5" >Pascal</CheckBox>
													</WrapPanel>
												</StackPanel>
											</StackPanel>
											<StackPanel  Margin="10,10,1,10" Orientation="Vertical">
												<TextBlock Height="23" Margin="6">Highest Qualification
												</TextBlock>
												<TextBlock Height="23" Margin="6">Percentage Scored
												</TextBlock>
												<TextBlock Height="23" Margin="6">Gender
												</TextBlock>
												<TextBlock Height="23" Margin="6">Mobile No.
												</TextBlock>
												<TextBlock Height="23" Margin="6">Years of Experience
												</TextBlock>
												<TextBlock Height="23"  Margin="6">Area of Interest in Sports
												</TextBlock>
											</StackPanel>
											<StackPanel  Margin="3,10,10,10" 
                                                         Orientation="Vertical">
												<TextBox HorizontalAlignment="Left" 
                                                         Height="23"  
                                                         Width="200"
                                                         Margin="6" Name="textbox"/>
												<TextBox HorizontalAlignment="Left" 
                                                         Height="23" 
                                                         Width="200" Margin="6" />
												<WrapPanel Grid.Row="7" Orientation="Horizontal" 
                                                           Height="23" >
													<RadioButton  Margin="6,0,6,4" 
                                                                  Name="male">Male
													</RadioButton>
													<RadioButton  Margin="6,0,6,4" 
                                                                  Name="female">Female
													</RadioButton>
												</WrapPanel>
												<TextBox HorizontalAlignment="Left" 
                                                         Height="23"  
                                                         Width="200" Margin="6" />
												<TextBox HorizontalAlignment="Left" 
                                                         Height="23"  
                                                         Width="200" Margin="6" />
												<WrapPanel  Orientation="Vertical" >
													<CheckBox  Name="cricket" Margin="5">Cricket
													</CheckBox>
													<CheckBox  Name="vollyball" Margin="5">Volleyball
													</CheckBox>
													<CheckBox  Margin="5" Name="basketball">Basketball
													</CheckBox>
													<CheckBox  Margin="5" Name="others">Others
													</CheckBox>
												</WrapPanel>
											</StackPanel>
											<StackPanel HorizontalAlignment="Center">
												<Button Content="Ok" 
                                                        Width="50"
                                                        Height="25" 
                                                        Name="ok"/>
                                                <ToggleButton Content="Cancel" 
                                                        Width="70" Margin="6"
                                                        Height="25" 
                                                        Name="cancel"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </ScrollViewer>
                        </Border>
                        <Border Margin="10" Name="BorderDetails" BorderBrush="#99000000" 
                                BorderThickness="1" Grid.Row="1">
							<Grid >
								<Grid.RowDefinitions>
									<RowDefinition Height="15*"/>
									<RowDefinition Height="85*"/>
								</Grid.RowDefinitions>
								<Label Grid.Row="0" BorderBrush="#99000000" 
                                       BorderThickness="1" 
                                       FontWeight="Bold" FontSize="14">Interview Details</Label>
								<Border Grid.Row="1">
									<ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                              VerticalScrollBarVisibility="Auto">
										<StackPanel>
											<TabControl Name="tab"  >
												<!-- Software Tab-->
												<TabItem Width="80">
													<TabItem.Header>
														Software
													</TabItem.Header>
													<StackPanel Orientation="Vertical">
														<TextBlock Margin="0,30,0,0" 
                                                               HorizontalAlignment="Center"
                                                               FontWeight="Bold" FontSize="18">Interview for
                                                        Software Engineers</TextBlock>
														<ListView Name="listview1" Margin="0,30,0,0" 
                                                              ItemsSource="{Binding GameCollection}">
															<ListView.View>
																<GridView >
																	<GridViewColumn 
                                                            Width="50" 
                                                            Header="Job ID" 
                                                            DisplayMemberBinding="{Binding JobID}"/>
                                                                    <GridViewColumn 
                                                                Width="140"
                                                                Header="Company ID" 
                                                                DisplayMemberBinding="{Binding CompanyID}"/>
                                                                    <GridViewColumn 
                                                                Width="140" 
                                                                Header="Job Description" 
                                                                DisplayMemberBinding="{Binding JD}"/>
                                                                    <GridViewColumn 
                                                                Width="140" 
                                                                Header="No. of Vacancy" 
                                                                DisplayMemberBinding="{Binding Vacancy}"/>
                                                                    <GridViewColumn 
                                                                Width="140" 
                                                                Header="Date of Interview" 
                                                                DisplayMemberBinding="{Binding Date}"/>
                                                                </GridView>
                                                            </ListView.View>
                                                            <ListView.ContextMenu>
                                                                <ContextMenu>
                                                                    <MenuItem Header="Cut"/>
                                                                    <MenuItem Header="Copy"/>
                                                                    <MenuItem Header="Paste"/>
                                                                </ContextMenu>
                                                            </ListView.ContextMenu>
                                                        </ListView>
                                                    </StackPanel>
                                                </TabItem>

												<!-- Hardware Tab-->
												<TabItem Width="80">
													<TabItem.Header>
														Hardware
													</TabItem.Header>
													<StackPanel Orientation="Vertical">
														<TextBlock Margin="0,30,0,0" 
                                                               HorizontalAlignment="Center" 
                                                               FontWeight="Bold" FontSize="18">Interview 
                                                        for Hardware Engineers</TextBlock>
                                                        <ListView Name="listview2" Margin="0,30,0,0" 
                                                              ItemsSource="{Binding GameCollection}">
                                                            <ListView.View>
                                                                <GridView >
                                                                    <GridViewColumn 
                                                                    Width="50" 
                                                                    Header="Job ID" 
                                                                    DisplayMemberBinding="{Binding JobID1}"/>
                                                                    <GridViewColumn 
                                                                    Width="140" 
                                                                    Header="Company ID" 
                                                                    DisplayMemberBinding="{Binding CompanyID1}"/>
                                                                    <GridViewColumn 
                                                                    Width="140" 
                                                                    Header="Job Description" 
                                                                    DisplayMemberBinding="{Binding JD1}"/>
                                                                    <GridViewColumn 
                                                                    Width="140" 
                                                                    Header="No. of Vacancy" 
                                                                    DisplayMemberBinding="{Binding Vacancy1}"/>
                                                                    <GridViewColumn 
                                                                    Width="140" 
                                                                    Header="Date of Interview" 
                                                                    DisplayMemberBinding="{Binding Date1}"/>
                                                                </GridView>
                                                            </ListView.View>
                                                            <ListView.ContextMenu>
                                                                <ContextMenu>
                                                                    <MenuItem Header="Cut"/>
                                                                    <MenuItem Header="Copy"/>
                                                                    <MenuItem Header="Paste"/>
                                                                </ContextMenu>
                                                            </ListView.ContextMenu>
                                                        </ListView>
                                                    </StackPanel>
                                                </TabItem>

                                                <!-- Call Center Tab-->
                                                <TabItem Width="85">
                                                    <TabItem.Header>
                                                        Call Center
                                                    </TabItem.Header>
                                                    <StackPanel Orientation="Vertical">
                                                        <TextBlock Margin="0,30,0,0"
                                                               HorizontalAlignment="Center" 
                                                               FontWeight="Bold" FontSize="18">
                                                        Interview for Call Centers</TextBlock>
                                                        <ListView Name="listview3" Margin="0,30,0,0" 
                                                              ItemsSource="{Binding GameCollection}">
                                                            <ListView.View>
                                                                <GridView >
                                                                    <GridViewColumn
                                                                    Width="50" 
                                                                    Header="Job ID" 
                                                                    DisplayMemberBinding="{Binding JobID2}"/>
                                                                    <GridViewColumn 
                                                                    Width="140" 
                                                                    Header="Company ID" 
                                                                    DisplayMemberBinding="{Binding CompanyID2}"/>
                                                                    <GridViewColumn 
                                                                    Width="140" 
                                                                    Header="Job Description" 
                                                                    DisplayMemberBinding="{Binding JD2}"/>
                                                                    <GridViewColumn 
                                                                    Width="140" 
                                                                    Header="No. of Vacancy" 
                                                                    DisplayMemberBinding="{Binding Vacancy2}" />
                                                                    <GridViewColumn 
                                                                    Width="140" 
                                                                    Header="Date of Interview" 
                                                                    DisplayMemberBinding="{Binding Date2}"/>
                                                                </GridView>
                                                            </ListView.View>
                                                            <ListView.ContextMenu>
                                                                <ContextMenu>
                                                                    <MenuItem Header="Cut"/>
                                                                    <MenuItem Header="Copy"/>
                                                                    <MenuItem Header="Paste"/>
                                                                </ContextMenu>
                                                            </ListView.ContextMenu>
                                                        </ListView>
                                                    </StackPanel>
                                                </TabItem>

                                                <!-- BPOs Tab-->
                                                <TabItem Width="50">
                                                    <TabItem.Header>
                                                        BPO
                                                    </TabItem.Header>
                                                    <StackPanel Orientation="Vertical">
                                                        <TextBlock Margin="0,30,0,0" 
                                                               HorizontalAlignment="Center" 
                                                               FontWeight="Bold" FontSize="18">Interview 
                                                        for BPOs</TextBlock>
                                                        <ListView Name="listview4" 
                                                              Margin="0,30,0,0" 
                                                              ItemsSource="{Binding GameCollection}">
                                                            <ListView.View>
                                                                <GridView >
                                                                    <GridViewColumn 
                                                                    Width="50" 
                                                                    Header="Job ID" 
                                                                    DisplayMemberBinding="{Binding JobID3}"/>
                                                                    <GridViewColumn 
                                                                    Width="140" 
                                                                    Header="Company ID" 
                                                                    DisplayMemberBinding="{Binding CompanyID3}"/>
                                                                    <GridViewColumn 
                                                                    Width="140" 
                                                                    Header="Job Description" 
                                                                    DisplayMemberBinding="{Binding JD3}"/>
                                                                    <GridViewColumn 
                                                                    Width="140"
                                                                    Header="No. of Vacancy" 
                                                                    DisplayMemberBinding="{Binding Vacancy3}"/>
                                                                    <GridViewColumn 
                                                                    Width="140" 
                                                                    Header="Date of Interview" 
                                                                    DisplayMemberBinding="{Binding Date3}"/>
                                                                </GridView>
                                                            </ListView.View>
                                                            <ListView.ContextMenu>
                                                                <ContextMenu>
                                                                    <MenuItem Header="Cut"/>
                                                                    <MenuItem Header="Copy"/>
                                                                    <MenuItem Header="Paste"/>
                                                                </ContextMenu>
                                                            </ListView.ContextMenu>
                                                        </ListView>
                                                    </StackPanel>
                                                </TabItem>

                                                <!-- Faculties Tab -->
                                                <TabItem Width="75">
                                                    <TabItem.Header>
                                                        Faculty
                                                    </TabItem.Header>
                                                    <StackPanel Orientation="Vertical">
                                                        <TextBlock Margin="0,30,0,0" 
                                                               HorizontalAlignment="Center" 
                                                               FontWeight="Bold" FontSize="18">Interview 
                                                        for Faculties</TextBlock>
                                                        <ListView Name="listview5" Margin="0,30,0,0" 
                                                              ItemsSource="{Binding GameCollection}">
                                                            <ListView.View>
                                                                <GridView >
                                                                    <GridViewColumn 
                                                                    Width="50" 
                                                                    Header="Job ID"                                                                                 
                                                                    DisplayMemberBinding="{Binding JobID4}"  />
                                                                    <GridViewColumn 
                                                                    Width="140" 
                                                                    Header="Company ID" 
                                                                    DisplayMemberBinding="{Binding CompanyID4}" />
                                                                    <GridViewColumn 
                                                                    Width="140" 
                                                                    Header="Job Description" 
                                                                    DisplayMemberBinding="{Binding JD4}" />
                                                                    <GridViewColumn 
                                                                    Width="140" 
                                                                    Header="No. of Vacancy" 
                                                                    DisplayMemberBinding="{Binding Vacancy4}" />
                                                                    <GridViewColumn 
                                                                    Width="140" Header="Date of Interview" 
                                                                    DisplayMemberBinding="{Binding Date4}" />
                                                                </GridView>
                                                            </ListView.View>
                                                            <ListView.ContextMenu>
                                                                <ContextMenu>
                                                                    <MenuItem Header="Cut"/>
                                                                    <MenuItem Header="Copy"/>
                                                                    <MenuItem Header="Paste"/>
                                                                </ContextMenu>
                                                            </ListView.ContextMenu>
                                                        </ListView>
                                                    </StackPanel>
                                                </TabItem>

                                                <!-- General Tab -->
                                                <TabItem Width="75">
                                                    <TabItem.Header>
                                                        Others
                                                    </TabItem.Header>
                                                    <StackPanel Orientation="Vertical">
                                                        <TextBlock 
                                                        Margin="0,30,0,0"                                                  
                                                        HorizontalAlignment="Center" 
                                                        FontWeight="Bold" 
                                                        FontSize="18">General Interviews
                                                        </TextBlock>
                                                        <ListView Name="listview6" 
                                                              Margin="0,30,0,0" 
                                                              ItemsSource="{Binding GameCollection}">
                                                            <ListView.View>
                                                                <GridView >
