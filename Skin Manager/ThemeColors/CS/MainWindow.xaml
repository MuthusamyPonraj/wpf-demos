<shared:ChromelessWindow x:Class="ThemeColorsDemo.MainWindow" UseNativeChrome="True"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Icon="App.ico" shared:SkinStorage.VisualStyle="Metro"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" WindowStartupLocation="CenterScreen"
        Title="Theme Colors" Height="790" Width="1360" xmlns:shared="http://schemas.syncfusion.com/wpf"
        xmlns:local="clr-namespace:ThemeColorsDemo" SnapsToDevicePixels="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                
            </Grid.ColumnDefinitions>
            <Border BorderThickness="0 0 0 1" BorderBrush="Black" Grid.ColumnSpan="3"/>
            <Image Source="ThemeColors.png" Margin="10"/>
            <StackPanel Grid.Column="1">
                <TextBlock Text="Syncfusion Theme Colors Swatch" Margin="5 10 0 1" FontSize="25"/>
                <TextBlock Text="Direct access to our theme brushes" Margin="5 0 5 10"/>
            </StackPanel>           
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="Black" BorderThickness="0 0 1 0">
                <TextBlock Text="Brushes" FontWeight="Bold" Margin="5"/>
            </Border>
            <local:ThemeColorTexts Grid.Row="1"/>
        </Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Grid.Column="1"
                  CanContentScroll="True" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>               
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0 0 1 0" >
                    <TextBlock Text="Office 2007 Blue" FontWeight="Bold" Margin="5"/>
                </Border>
                <local:ThemeColorItems Grid.Column="1" Grid.Row="1" shared:SkinStorage.VisualStyle="Office2007Blue"/>
                <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0 0 1 0">
                    <TextBlock Text="Office 2007 Black" FontWeight="Bold" Margin="5"/>
                </Border>
                <local:ThemeColorItems Grid.Column="2" Grid.Row="1" shared:SkinStorage.VisualStyle="Office2007Black"/>
                <Border Grid.Column="3" BorderBrush="Black" BorderThickness="0 0 1 0">
                    <TextBlock Text="Office 2007 Silver" FontWeight="Bold" Margin="5"/>
                </Border>
                <local:ThemeColorItems Grid.Column="3" Grid.Row="1" shared:SkinStorage.VisualStyle="Office2007Silver"/>
                <Border Grid.Column="4" BorderBrush="Black" BorderThickness="0 0 1 0">
                    <TextBlock Text="Office 2003" FontWeight="Bold" Margin="5"/>
                </Border>
                <local:ThemeColorItems Grid.Column="4" Grid.Row="1" shared:SkinStorage.VisualStyle="Office2003"/>
                <Border Grid.Column="5" BorderBrush="Black" BorderThickness="0 0 1 0">
                    <TextBlock Text="Office 2010 Blue" FontWeight="Bold" Margin="5"/>
                </Border>
                <local:ThemeColorItems Grid.Column="5" Grid.Row="1" shared:SkinStorage.VisualStyle="Office2010Blue"/>
                <Border Grid.Column="6" BorderBrush="Black" BorderThickness="0 0 1 0">
                    <TextBlock Text="Office 2010 Black" FontWeight="Bold" Margin="5"/>
                </Border>
                <local:ThemeColorItems Grid.Column="6" Grid.Row="1" shared:SkinStorage.VisualStyle="Office2010Black"/>
                <Border Grid.Column="7" BorderBrush="Black" BorderThickness="0 0 1 0">
                    <TextBlock Text="Office 2010 Silver" FontWeight="Bold" Margin="5"/>
                </Border>
                <local:ThemeColorItems Grid.Column="7" Grid.Row="1" shared:SkinStorage.VisualStyle="Office2010Silver"/>
                <Border Grid.Column="8" BorderBrush="Black" BorderThickness="0 0 1 0">
                    <TextBlock Text="Blend" FontWeight="Bold" Margin="5"/>
                </Border>
                <local:ThemeColorItems Grid.Column="8" Grid.Row="1" shared:SkinStorage.VisualStyle="Blend"/>
                <Border Grid.Column="9" BorderBrush="Black" BorderThickness="0 0 1 0">
                    <TextBlock Text="VS2010" FontWeight="Bold" Margin="5"/>
                </Border>
                <local:ThemeColorItems Grid.Column="9" Grid.Row="1" shared:SkinStorage.VisualStyle="VS2010"/>
                <Border Grid.Column="10" BorderBrush="Black" BorderThickness="0 0 1 0">
                    <TextBlock Text="Metro" FontWeight="Bold" Margin="5"/>
                </Border>
                <local:ThemeColorItems Grid.Column="10" Grid.Row="1" shared:SkinStorage.VisualStyle="Metro"/>
                <Border Grid.Column="11" BorderBrush="Black" BorderThickness="0 0 1 0">
                    <TextBlock Text="Transparent" FontWeight="Bold" Margin="5"/>
                </Border>
                <local:ThemeColorItems Grid.Column="11" Grid.Row="1" shared:SkinStorage.VisualStyle="Transparent">
                    <local:ThemeColorItems.Background>
                        <ImageBrush ImageSource="TransparentBackground.jpg"/>
                    </local:ThemeColorItems.Background>                  
                </local:ThemeColorItems>
            </Grid>
        </ScrollViewer>
    </Grid>
</shared:ChromelessWindow>
