<syncfusion:ChromelessWindow x:Class="CheckedTreeViewDemo.Window1" UseNativeChrome="True"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
        WindowStartupLocation="CenterScreen" xmlns:sblayout="clr-namespace:SampleLayout.WPF;assembly=Syncfusion.SampleLayout.WPF" 
        xmlns:local="clr-namespace:CheckedTreeView"
    Title="CheckedTreeView Demo" Width="750" Icon="App.Ico"
    Height="620" FontFamily="Calibri" FontSize="13" >
    <syncfusion:ChromelessWindow.DataContext>
        <local:ViewModel/>
    </syncfusion:ChromelessWindow.DataContext>
    <syncfusion:ChromelessWindow.Resources>
        
        <Style TargetType="syncfusion:TreeViewItemAdv" x:Key="2">
            <Setter Property="IsExpanded" Value="True"/>
            <Setter Property="LeftImageSource" Value="Images\bullet.png"/>
        </Style>

        <HierarchicalDataTemplate x:Key="1" DataType="{x:Type local:Model}" ItemsSource="{Binding Models}">
            <CheckBox Content="{Binding Caption}" IsChecked="{Binding Path=IsChecked,Mode=TwoWay}"/>
        </HierarchicalDataTemplate>
        
    </syncfusion:ChromelessWindow.Resources>
    
    <Grid>
        <Grid >

            <sblayout:SampleLayoutControl HideEventsLog="True" IsTabStop="False"   Header="CheckedTreeView" x:Name="Sblayout"
                                          Description="The TreeViewAdv Control is used to display data in a hierarchical order. TreeViewItem is a container of visual elements generated by the ItemTemplate. In this sample HierarchicalDataTemplate having CheckBoxControl is assigned to the TreeViewItem's ItemTemplate property.">
                <sblayout:SampleLayoutControl.PropertyViewContent>
                    <sblayout:GroupBoxAdv Header="User Options" IsTabStop="False">
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                               
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="90" ></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Grid.Row="0" FontWeight="Normal" Text="Show RootLines" Margin="3"/>
                            <CheckBox Name="chkrootline" Grid.Row="0" IsChecked="True" 
                                      Margin="3"   Grid.Column="1" VerticalAlignment="Center"/>
                         
                            <TextBlock Grid.Column="0" Grid.Row="1" FontWeight="Normal" Text="Allow MultiSelect" Margin="3"/>
                            <CheckBox Name="chkmultiselect" Grid.Row="1" IsChecked="True" 
                                      Margin="3"   Grid.Column="1" VerticalAlignment="Center"/>
                       
                            <TextBlock Grid.Column="0" Grid.Row="2" FontWeight="Normal" Text="Allow DragDrop" Margin="3"/>
                            <CheckBox Name="chkdragdrop" Grid.Row="2"
                                      Margin="3"   Grid.Column="1" VerticalAlignment="Center"/>
                 
                                               
                            <TextBlock Grid.Column="0" FontWeight="Normal" Grid.Row="4" Text="Animation Type" Margin="3" 
                                       VerticalAlignment="Center"/>
                            <ComboBox Name="Cmboanimationtype" Grid.Row="4"  Margin="3"
                                      SelectedIndex="0"  VerticalContentAlignment="Center" 
                                      VerticalAlignment="Center"  Grid.Column="1">
                                <syncfusion:AnimationType>Fade</syncfusion:AnimationType>
                                <syncfusion:AnimationType>Slide</syncfusion:AnimationType>
                                <syncfusion:AnimationType>None</syncfusion:AnimationType>
                            </ComboBox>
                            
                         
                        </Grid>
                    </sblayout:GroupBoxAdv>
                </sblayout:SampleLayoutControl.PropertyViewContent>


                <Grid>

                    <syncfusion:TreeViewAdv Background="Transparent" BorderThickness="0"   x:Name="treeview" HorizontalAlignment="Stretch"
                                            AnimationType="{Binding Path=SelectedItem,ElementName=Cmboanimationtype}" 
                                            ItemsSource="{Binding Models}" 
                                            ItemContainerStyle="{StaticResource 2}"    ItemTemplate="{StaticResource 1}"
                                            ShowRootLines="{Binding ElementName=chkrootline,Path=IsChecked}" 
                                            AllowMultiSelect="{Binding ElementName=chkmultiselect,Path=IsChecked}" 
                                            AllowDragDrop="{Binding ElementName=chkdragdrop,Path=IsChecked}">
                    </syncfusion:TreeViewAdv>
                    

                </Grid>


            </sblayout:SampleLayoutControl>
        </Grid>

    </Grid>
</syncfusion:ChromelessWindow>