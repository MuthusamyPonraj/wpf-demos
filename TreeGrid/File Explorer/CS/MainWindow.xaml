<syncfusion:ChromelessWindow x:Class="FileExplorer.MainWindow"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:I="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:local="clr-namespace:FileExplorer"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                             x:Name="Window"
                             Width="1024"
                             Height="710"
                             syncfusion:SkinStorage.MetroBrush="Transparent"
                             syncfusion:SkinStorage.VisualStyle="Metro"
                             AllowsTransparency="True"
                             Icon="Images/Windows_Explorer_Icon.png"
                             ResizeMode="CanResizeWithGrip"
                             ShowIcon="False"
                             WindowStartupLocation="CenterScreen"
                             mc:Ignorable="d">

    <!--  Window DataContext Definition  -->
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>

    <Window.Resources>

        <Style TargetType="syncfusion:TreeGridCell">
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style TargetType="syncfusion:TreeGridExpanderCell">
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style TargetType="syncfusion:TreeGridHeaderCell">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
        <local:TemplateImageConverter x:Key="templateImageConverter" />
    </Window.Resources>

    <Grid Margin="0 -30 0 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>

        <Grid x:Name="HeaderGrid"
              Grid.Row="0"
              Height="30"
              VerticalAlignment="Top">
            <Border BorderBrush="LightGray" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0"
                                IsHitTestVisible="False"
                                Orientation="Vertical">
                        <TextBlock Margin="12,5,5,5"
                                   FontFamily="Segoe UI Light"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Text="File Explorer" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="1"
                Margin="5"
                BorderBrush="#FFDCDCDC"
                BorderThickness="0,0,0,0">
            <ItemsControl Name="item"
                          ItemTemplate="{StaticResource ResourceKey=MyItemTemplate}"
                          ItemsSource="{Binding DriveDetails}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Border>

        <Border Grid.Row="2"
                BorderBrush="#FFDCDCDC"
                BorderThickness="0,1,0,1">

            <syncfusion:SfTreeGrid x:Name="treeGrid"
                                   Margin="20,0,20,0"
                                   AutoGenerateColumns="False"
                                   NavigationMode="Row">

                <I:Interaction.Behaviors>
                    <local:RequestTreeItemsBehavior />
                </I:Interaction.Behaviors>

                <syncfusion:SfTreeGrid.Columns>
                    <syncfusion:TreeGridTextColumn Width="200"
                                                   HeaderText="Name"
                                                   HorizontalHeaderContentAlignment="Left"
                                                   MappingName="ShortName"
                                                   SetCellBoundValue="True">
                        <syncfusion:TreeGridTextColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />

                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Column="0" Source="{Binding Converter={StaticResource templateImageConverter}}" />
                                    <TextBlock Grid.Column="1"
                                               Margin="2"
                                               Text="{Binding Path=Value}" />
                                </Grid>
                            </DataTemplate>
                        </syncfusion:TreeGridTextColumn.CellTemplate>
                    </syncfusion:TreeGridTextColumn>
                    <syncfusion:TreeGridTextColumn Width="200"
                                                   HeaderText="Date Modified"
                                                   HorizontalHeaderContentAlignment="Left"
                                                   MappingName="DateModified" />
                    <syncfusion:TreeGridTextColumn Width="200"
                                                   HeaderText="Type"
                                                   HorizontalHeaderContentAlignment="Left"
                                                   MappingName="FileType" />
                    <syncfusion:TreeGridTextColumn Width="100"
                                                   HeaderText="Size"
                                                   HorizontalHeaderContentAlignment="Left"
                                                   MappingName="Size" />
                    <syncfusion:TreeGridTextColumn Width="200"
                                                   HeaderText="Path"
                                                   HorizontalHeaderContentAlignment="Left"
                                                   MappingName="FullName" />
                    <syncfusion:TreeGridTextColumn Width="200"
                                                   HeaderText="Date Created"
                                                   HorizontalHeaderContentAlignment="Left"
                                                   MappingName="DateCreated" />
                </syncfusion:SfTreeGrid.Columns>
            </syncfusion:SfTreeGrid>
        </Border>

        <Border Grid.Row="3"
                BorderBrush="#FFDCDCDC"
                BorderThickness="0">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0"
                            Width="100"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Image Width="50"
                           Height="65"
                           Source="{Binding SelectedItem.FileType,
                                            ElementName=treeGrid,
                                            Converter={StaticResource imageConverter}}" />
                </StackPanel>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Margin="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontFamily="Verdana"
                               FontSize="11"
                               FontWeight="Bold"
                               Text="Folder Name:  " />
                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               Margin="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontFamily="Verdana"
                               FontSize="11"
                               Text="{Binding SelectedItem.ShortName,
                                              ElementName=treeGrid}" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Margin="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontFamily="Verdana"
                               FontSize="11"
                               FontWeight="Bold"
                               Text="Folder Type:  " />
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Margin="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontFamily="Verdana"
                               FontSize="11"
                               Text="{Binding SelectedItem.FileType,
                                              ElementName=treeGrid}" />
                </Grid>
                <Grid Grid.Column="5" Margin="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Margin="5"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontFamily="Verdana"
                               FontSize="11"
                               FontWeight="Bold"
                               Text="Size:  " />
                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               Margin="5"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontFamily="Verdana"
                               FontSize="11"
                               Text="{Binding SelectedItem.Size,
                                              ElementName=treeGrid}" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Margin="5"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontFamily="Verdana"
                               FontSize="11"
                               FontWeight="Bold"
                               Text="Date Modified:  " />
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Margin="5"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontFamily="Verdana"
                               FontSize="11"
                               Text="{Binding SelectedItem.DateModified,
                                              ElementName=treeGrid}" />
                </Grid>
            </Grid>
        </Border>

    </Grid>
</syncfusion:ChromelessWindow>