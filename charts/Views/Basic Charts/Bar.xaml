<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.BarChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:BarChartViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>

        <DataTemplate x:Key="labelTemplate">
            <TextBlock FontSize="14" Text="{Binding LabelContent}" />
        </DataTemplate>

        <Style x:Key="AxisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

        <Style x:Key="AxisStyle1" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="0.5" />
        </Style>
    </democommon:DemoControl.Resources>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="BarChart"
            Margin="10">

            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,0,0,20"
                    FontFamily="Segoe UI"
                    FontSize="18">
                    Mostly used metals in the world
                </TextBlock>
            </chart:SfChart.Header>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    Header="Metals"
                    LabelTemplate="{StaticResource labelTemplate}"
                    LabelPlacement="BetweenTicks"
                    ShowGridLines="False"/>
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource AxisStyle1}"
                    Header="Percentage"
                    Interval="5"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    Maximum="25"
                    Minimum="0" />
            </chart:SfChart.SecondaryAxis>

            <chart:BarSeries
                ColorModel="{StaticResource CustomColor}"
                EnableAnimation="True"
                ItemsSource="{Binding CategoricalDatas}"
                Label="Metals"
                Palette="Custom"
                XBindingPath="Category"
                YBindingPath="Value">
                <chart:BarSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        AdornmentsPosition="Top"
                        ShowLabel="True"
                        ShowMarker="True">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,10,0">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontFamily="Segoe UI"
                                        FontSize="20"
                                        Foreground="White"
                                        Text="{Binding}" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:BarSeries.AdornmentsInfo>
            </chart:BarSeries>

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
