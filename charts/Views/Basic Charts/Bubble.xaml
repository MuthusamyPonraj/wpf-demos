<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.BubbleChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:BubbleChartViewModel />
    </democommon:DemoControl.DataContext>
    <democommon:DemoControl.Resources>

        <DataTemplate x:Key="headerTemplate">
            <TextBlock
                Margin="5"
                FontSize="16"
                Text="{Binding}" />
        </DataTemplate>

        <DataTemplate x:Key="labelTemplate">
            <TextBlock
                FontSize="14"
                Text="{Binding Path=LabelContent}" />
        </DataTemplate>

        <Style x:Key="AxisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

        <DataTemplate x:Key="bubbleTooltipTemplate">
            <Border
                Padding="4"
                Background="#FFFFFFFF"
                BorderBrush="#FF808080"
                BorderThickness="1"
                CornerRadius="3">
                <StackPanel>
                        <TextBlock
                            FontSize="15"
                            Foreground="#FF666666"
                            Text="{Binding YData}" />
                </StackPanel>
            </Border>
        </DataTemplate>
    </democommon:DemoControl.Resources>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="BubbleChart"
            Margin="10"
            HorizontalAlignment="Center">

            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,0,0,10"
                    FontFamily="Segoe UI"
                    FontSize="18">
                    World Country Details
                </TextBlock>
            </chart:SfChart.Header>

            <chart:SfChart.PrimaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    Header="Literacy Rate"
                    HeaderTemplate="{StaticResource headerTemplate}"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    ShowGridLines="False"
                    PlotOffset="35" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    Header="GDP Growth Rate"
                    HeaderTemplate="{StaticResource headerTemplate}"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    Minimum="0"
                    PlotOffset="30" />
            </chart:SfChart.SecondaryAxis>

            <chart:BubbleSeries
                x:Name="BubbleSeries"
                ColorModel="{StaticResource CustomColor}"
                EnableAnimation="True"
                ItemsSource="{Binding BubbleData}"
                Label="Label"
                LegendIcon="Circle"
                Palette="Custom"
                Size="Size"
                ShowTooltip="True"
                TooltipTemplate="{StaticResource bubbleTooltipTemplate}"
                XBindingPath="Value1"
                YBindingPath="Value">
            </chart:BubbleSeries>
        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
