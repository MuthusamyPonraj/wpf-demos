<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.ColumnChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.Resources>
        <local:ColumnChartViewModel x:Key="viewModel" />
        <DataTemplate x:Key="labelTemplate">
            <TextBlock FontSize="14" Text="{Binding LabelContent}" />
        </DataTemplate>

        <Style x:Key="AxisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

        <Style x:Key="AxisStyle1" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="0.5" />
        </Style>
    </democommon:DemoControl.Resources>


    <Grid DataContext="{StaticResource viewModel}">
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        <chart:SfChart
            x:Name="columnChart"
            Margin="10"
            VerticalAlignment="Bottom">

            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,-10,0,15"
                    FontFamily="Segoe UI"
                    FontSize="18">
                    Sneakers Sold by Brand for three Months
                </TextBlock>
            </chart:SfChart.Header>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    AxisLineStyle="{StaticResource AxisStyle1}"
                    Header="Brand"
                    LabelPlacement="BetweenTicks"
                    LabelTemplate="{StaticResource labelTemplate}"
                    ShowGridLines="False"
                    MajorTickLineStyle="{StaticResource AxisStyle}" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    Header="Number of items sold(in %)"
                    Interval="5"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    Maximum="40"
                    Minimum="0" />
            </chart:SfChart.SecondaryAxis>

            <chart:ColumnSeries
                ColorModel="{StaticResource CustomColor}"
                EnableAnimation="True"
                ItemsSource="{Binding SneakersDetail}"
                Label="Sneakers sold"
                Palette="Custom"
                XBindingPath="Brand"
                YBindingPath="ItemsCount">
                <chart:ColumnSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        AdornmentsPosition="Top"
                        ShowLabel="True"
                        ShowMarker="True">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock
                                        Margin="0,50,0,0"
                                        FontFamily="Segoe UI"
                                        FontSize="20"
                                        Foreground="White"
                                        Text="{Binding}" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:ColumnSeries.AdornmentsInfo>
            </chart:ColumnSeries>

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
