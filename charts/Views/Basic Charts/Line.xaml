<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.LineChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:LineChartViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <DataTemplate x:Key="ylabelTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="13" Text="{Binding LabelContent}" />
                <TextBlock FontSize="13" Text="%" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="legend">
            <StackPanel Orientation="Horizontal">
                <Grid Margin="20,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Rectangle
                        Width="10"
                        Height="10"
                        Fill="{Binding Interior}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        FontSize="12"
                        Text="{Binding Label}" />
                </Grid>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="xLabelTemplate">
            <TextBlock FontSize="13" Text="{Binding LabelContent}" />
        </DataTemplate>

        <DataTemplate x:Key="yheadertemplate">
            <TextBlock Margin="0,0,0,15" Text="Efficiency" />
        </DataTemplate>

        <DataTemplate x:Key="xheadertemplate">
            <TextBlock Margin="0,10,0,0" Text="Year" />
        </DataTemplate>

        <Style x:Key="AxisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>
    </democommon:DemoControl.Resources>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="lineChart"
            Margin="10"
            ColorModel="{StaticResource CustomColor}"
            Palette="Custom">

            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI"
                    FontSize="18"
                    Text="Efficiency of oil-fired power production" />
            </chart:SfChart.Header>

            <chart:SfChart.Legend>
                <chart:ChartLegend
                    HorizontalContentAlignment="Center"
                    DockPosition="Bottom"
                    ItemTemplate="{StaticResource legend}" />
            </chart:SfChart.Legend>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    HeaderTemplate="{StaticResource xheadertemplate}"
                    AxisLineStyle="{StaticResource AxisStyle}"
                    LabelFormat="yyyy"
                    LabelTemplate="{StaticResource xLabelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    PlotOffset="15"
                    LabelPlacement="BetweenTicks"
                    ShowGridLines="False"
                    ShowTrackBallInfo="True" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    HorizontalAlignment="Center"
                    AxisLineStyle="{StaticResource AxisStyle}"
                    HeaderTemplate="{StaticResource yheadertemplate}"
                    Interval="10"
                    LabelTemplate="{StaticResource ylabelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    Maximum="60"
                    Minimum="0"/>
            </chart:SfChart.SecondaryAxis>

            <chart:LineSeries
                EnableAnimation="True"
                ItemsSource="{Binding DataPoints}"
                Label="Germany"
                ShowTooltip="True"
                XBindingPath="Year"
                YBindingPath="Germany">
                <chart:LineSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        ShowLabel="True"
                        ShowMarker="True"
                        Symbol="Custom">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid IsHitTestVisible="False">
                                    <Ellipse
                                        Width="13"
                                        Height="13"
                                        Fill="#0BB4C2"
                                        Stroke="{Binding Background, ElementName=lineChart}"
                                        StrokeThickness="3" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:LineSeries.AdornmentsInfo>
            </chart:LineSeries>
            <chart:LineSeries
                EnableAnimation="True"
                ItemsSource="{Binding DataPoints}"
                Label="England"
                ShowTooltip="True"
                XBindingPath="Year"
                YBindingPath="England">
                <chart:LineSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        ShowLabel="True"
                        ShowMarker="True"
                        Symbol="Custom">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid IsHitTestVisible="False">
                                    <Ellipse
                                        Width="13"
                                        Height="13"
                                        Fill="#874DAF"
                                        Stroke="{Binding Background, ElementName=lineChart}"
                                        StrokeThickness="3" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:LineSeries.AdornmentsInfo>
            </chart:LineSeries>

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
