<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.RangeColumnChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:RangeColumnChartViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <DataTemplate x:Key="labelTemplate">
            <TextBlock FontSize="14" Text="{Binding LabelContent}" />
        </DataTemplate>

        <Style x:Key="AxisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="0.5" />
        </Style>
    </democommon:DemoControl.Resources>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="RangeColumnChart"
            Margin="10"
            VerticalAlignment="Stretch">
            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,0,0,10"
                    FontFamily="Segoe UI"
                    FontSize="18">
                    Finance Deployment
                </TextBlock>
            </chart:SfChart.Header>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    FontSize="16"
                    Header="Year"
                    LabelFormat="yyyy"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    ShowTrackBallInfo="True" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    FontSize="16"
                    Header="Data"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}" />
            </chart:SfChart.SecondaryAxis>

            <chart:RangeColumnSeries
                ColorModel="{StaticResource CustomColor}"
                EnableAnimation="True"
                High="High"
                ItemsSource="{Binding FinancialDatas}"
                Label="Financial Deployment in Each Year"
                Low="Low"
                Palette="Custom"
                ShowTooltip="True"
                XBindingPath="Time">
                <chart:RangeColumnSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        Margin="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        AdornmentsPosition="TopAndBottom"
                        LabelPosition="Inner"
                        ShowLabel="True">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock
                                        FontFamily="Segoe UI"
                                        FontSize="15"
                                        Foreground="White"
                                        Text="{Binding}" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:RangeColumnSeries.AdornmentsInfo>
            </chart:RangeColumnSeries>

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
