<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.ScatterChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:ScatterChartViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <DataTemplate x:Key="labelTemplate">
            <TextBlock FontSize="12" Text="{Binding LabelContent}" />
        </DataTemplate>

        <Style x:Key="AxisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>
    </democommon:DemoControl.Resources>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart x:Name="scatterchart" Margin="10">
            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,0,0,20"
                    FontFamily="Segoe UI"
                    FontSize="18"
                    Text="Faithful Eruptions" />
            </chart:SfChart.Header>

            <chart:SfChart.PrimaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    Interval="0.5"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    ShowGridLines="False"
                    Maximum="5.5"
                    Minimum="1.5"
                    ShowTrackBallInfo="True">
                    <chart:NumericalAxis.Header>
                        <TextBlock
                            Margin="5"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            Text="Eruption Duration(Min)" />
                    </chart:NumericalAxis.Header>
                </chart:NumericalAxis>
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    FontSize="16"
                    Interval="10"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    Maximum="100"
                    Minimum="40">
                    <chart:NumericalAxis.Header>
                        <TextBlock
                            Margin="5"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            Text="Waiting Time Between Eruptions(Min)" />
                    </chart:NumericalAxis.Header>
                </chart:NumericalAxis>
            </chart:SfChart.SecondaryAxis>

            <chart:ScatterSeries
                ColorModel="{StaticResource CustomColor}"
                EnableAnimation="True"
                ItemsSource="{Binding DataPoints}"
                Palette="Custom"
                ScatterHeight="9"
                ScatterWidth="9"
                ShowTooltip="True"
                XBindingPath="Eruptions"
                YBindingPath="WaitingTime" />

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
