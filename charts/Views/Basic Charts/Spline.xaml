<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.SplineChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:SplineChartViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <DataTemplate x:Key="legend">
            <StackPanel Orientation="Horizontal">
                <Grid Margin="20,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Ellipse
                        Width="15"
                        Height="15"
                        Fill="{Binding Interior}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        FontSize="16"
                        Text="{Binding Label}" />
                </Grid>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="labelTemplate">
            <TextBlock FontSize="14" Text="{Binding LabelContent}" />
        </DataTemplate>

        <Style x:Key="AxisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

        <Style x:Key="AxisStyle1" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="0.5" />
        </Style>

        <DataTemplate x:Key="yheadertemplate">
            <TextBlock Margin="0,0,0,15" Text="Temperature (In Fahrenheit)" />
        </DataTemplate>

        <DataTemplate x:Key="xheadertemplate">
            <TextBlock Margin="0,10,0,0" Text="Months" />
        </DataTemplate>
    </democommon:DemoControl.Resources>
    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="SplineChart"
            Margin="10"
            ColorModel="{StaticResource CustomColor}"
            FontSize="22"
            Palette="Custom">

            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,0,0,20"
                    FontFamily="Segoe UI"
                    FontSize="18">
                    Average High/Low temperature
                </TextBlock>
            </chart:SfChart.Header>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    AxisLineStyle="{StaticResource AxisStyle1}"
                    HeaderTemplate="{StaticResource xheadertemplate}"
                    LabelFormat="yyyy"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    PlotOffset="30"
                    ShowGridLines="False"
                    ShowTrackBallInfo="True" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    HeaderTemplate="{StaticResource yheadertemplate}"
                    Interval="10"
                    LabelFormat="0°F"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    Maximum="80"
                    Minimum="30" />
            </chart:SfChart.SecondaryAxis>

            <chart:SfChart.Legend>
                <chart:ChartLegend
                    Margin="0,10,0,0"
                    DockPosition="Bottom"
                    ItemTemplate="{StaticResource legend}" />
            </chart:SfChart.Legend>

            <chart:SplineSeries
                EnableAnimation="True"
                ItemsSource="{Binding List}"
                Label="India"
                ShowTooltip="True"
                XBindingPath="XValue"
                YBindingPath="YValue1">
                <chart:SplineSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo>
                        <chart:ChartAdornmentInfo.SymbolTemplate>
                            <DataTemplate>
                                <Grid IsHitTestVisible="False">
                                    <Ellipse
                                        Width="13"
                                        Height="13" 
                                        Fill="#0BB4C2"
                                        Stroke="{Binding Background, ElementName=SplineChart}"
                                        StrokeThickness="3" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.SymbolTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:SplineSeries.AdornmentsInfo>
            </chart:SplineSeries>
            <chart:SplineSeries
                EnableAnimation="True"
                ItemsSource="{Binding List}"
                Label="Germany"
                ShowTooltip="True"
                XBindingPath="XValue"
                YBindingPath="YValue2">
                <chart:SplineSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo>
                        <chart:ChartAdornmentInfo.SymbolTemplate>
                            <DataTemplate>
                                <Grid IsHitTestVisible="False">
                                    <Ellipse
                                        Width="13"
                                        Height="13" 
                                        Fill="#874DAF"
                                        Stroke="{Binding Background, ElementName=SplineChart}"
                                        StrokeThickness="3" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.SymbolTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:SplineSeries.AdornmentsInfo>
            </chart:SplineSeries>
        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
