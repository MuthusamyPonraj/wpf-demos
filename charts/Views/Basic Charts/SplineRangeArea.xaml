<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.SplineRangeAreaChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:SplineRangeAreaChartViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <DataTemplate x:Key="headerTemplate">
            <TextBlock
                Margin="5"
                FontSize="16"
                Text="{Binding}" />
        </DataTemplate>

        <DataTemplate x:Key="legend">
            <StackPanel Orientation="Horizontal">
                <Grid Margin="10,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Rectangle
                        Width="15"
                        Height="15"
                        Fill="{Binding Interior}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="10,5,5,0"
                        FontSize="16"
                        Text="{Binding Path=Label}" />
                </Grid>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="labelTemplate">
            <TextBlock
                Margin="5"
                FontSize="14"
                Text="{Binding Path=LabelContent}" />
        </DataTemplate>

        <Style x:Key="AxisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="0.5" />
        </Style>

        <Style x:Key="AxisStyle1" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="0.5" />
        </Style>

    </democommon:DemoControl.Resources>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="SplineRangeAreaChart"
            Margin="10"
            HorizontalAlignment="Center"
            AreaBorderThickness="0"
            ColorModel="{StaticResource CustomColor}"
            Palette="Custom">

            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,20,0,10"
                    FontFamily="Segoe UI"
                    FontSize="18">
                    Wheat Production - 2017
                </TextBlock>
            </chart:SfChart.Header>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    AxisLineStyle="{StaticResource AxisStyle1}"
                    Header="Month"
                    HeaderTemplate="{StaticResource headerTemplate}"
                    LabelPlacement="BetweenTicks"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    ShowGridLines="False" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    Header="Production (In metric tons)"
                    HeaderTemplate="{StaticResource headerTemplate}"
                    Interval="30"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    Maximum="100"
                    Minimum="10"
                    ShowGridLines="False" />
            </chart:SfChart.SecondaryAxis>

            <chart:SplineRangeAreaSeries
                x:Name="SplineRangeAreaSeries"
                High="HighMetric"
                ItemsSource="{Binding Products}"
                Label="Expenditures"
                Low="LowMetric"
                ShowTooltip="True"
                Stroke="#0BB4C2"
                StrokeThickness="3"
                XBindingPath="Month">
                <chart:SplineRangeAreaSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        AdornmentsPosition="TopAndBottom"
                        ShowLabel="True"
                        Symbol="Ellipse">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Ellipse
                                        Width="30"
                                        Height="30"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Fill="White"
                                        Stroke="#0BB4C2"
                                        StrokeThickness="2" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="Segoe UI"
                                        FontSize="12"
                                        Foreground="#FF585858"
                                        Text="{Binding}"
                                        TextWrapping="Wrap" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:SplineRangeAreaSeries.AdornmentsInfo>
            </chart:SplineRangeAreaSeries>

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
