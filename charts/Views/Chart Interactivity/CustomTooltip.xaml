<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.CustomTooltip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="http://schemas.syncfusion.com/wpf"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    OptionsSize="300">

    <democommon:DemoControl.DataContext>
        <local:CustomToolTipViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <democommon:EnumDisplayNameConverter x:Key="enumDisplayNameConverter" />

        <!--  Template Axis Labels  -->
        <DataTemplate x:Key="labelTemplate">
            <TextBlock FontSize="12" Text="{Binding LabelContent}" />
        </DataTemplate>

        <DataTemplate x:Key="tooltipTemplate">
            <Border BorderBrush="Black" BorderThickness="1">
                <Grid Height="50">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*" />
                        <RowDefinition Height="0.5*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Rectangle
                        Grid.RowSpan="2"
                        Grid.ColumnSpan="3"
                        Fill="White" />
                    <Image
                        Grid.RowSpan="2"
                        Grid.Column="0"
                        Margin="3"
                        HorizontalAlignment="Left"
                        Source="{Binding Item.ImagePath}" />
                    <TextBlock
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Margin="3,3,6,3"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="Black"
                        Text="{Binding Item.CompanyName}"
                        TextAlignment="Center" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="Black"
                        Text="Rank :"
                        TextAlignment="Left" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="3,3,6,3"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="Black"
                        Text="{Binding Item.Rank}"
                        TextAlignment="Left" />
                </Grid>
            </Border>
        </DataTemplate>

        <Style x:Key="axisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

    </democommon:DemoControl.Resources>

    <democommon:DemoControl.Options>
        <WrapPanel>
            <StackPanel Margin="5">
                <TextBlock
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="Horizontal Alignment" />
                <ComboBox
                    x:Name="horizontalAlign"
                    Margin="5"
                    VerticalAlignment="Center"
                    IsEditable="False"
                    ItemsSource="{democommon:EnumValuesExtension Type=HorizontalAlignment}"
                    SelectedIndex="1" >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource enumDisplayNameConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="Vertical Alignment" />
                <ComboBox
                    x:Name="verticalAlign"
                    Margin="5"
                    VerticalAlignment="Center"
                    IsEditable="False"
                    ItemsSource="{democommon:EnumValuesExtension Type=VerticalAlignment}"
                    SelectedIndex="0" >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource enumDisplayNameConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="Initial Show Delay" />

                <TextBlock
                    x:Name="initialShowDelay"
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="{Binding ElementName=initialDelaySlider, Path=Value}" />


                <Slider
                    x:Name="initialDelaySlider"
                    Width="250"
                    Height="40"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Focusable="False"
                    IsSnapToTickEnabled="True"
                    Maximum="10000"
                    Minimum="0"
                    TickPlacement="None"
                    Ticks="0, 500,1000,1500,2000,2500,3000,3500,4000,                      4500, 5000, 5500, 6000, 6500, 7000, 7500, 8000, 8500, 9000, 9500, 10000" />
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="Show Duration" />

                <TextBlock
                    x:Name="showDuration"
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="{Binding ElementName=showDurationSlider, Path=Value}" />

                <Slider
                    x:Name="showDurationSlider"
                    Width="250"
                    Height="40"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    Focusable="False"
                    IsSnapToTickEnabled="True"
                    Maximum="10000"
                    Minimum="0"
                    TickPlacement="None"
                    Ticks="0, 500, 1000,1500,2000,2500,3000,3500,4000,                      4500, 5000, 5500, 6000, 6500, 7000, 7500, 8000, 8500, 9000, 9500, 10000"
                    Value="1000" />
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="Horizontal Offset" />
                <TextBox
                    x:Name="horizOffset"
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="{Binding HorizontalOffset, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="Vertical Offset" />
                <TextBox
                    x:Name="VerizOffset"
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="{Binding VerticalOffset, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="Tooltip Animation" />
                <CheckBox
                    x:Name="tooltipAnime"
                    Margin="5"
                    VerticalAlignment="Center"
                    IsChecked="True" />
            </StackPanel>
        </WrapPanel>
    </democommon:DemoControl.Options>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="sampleChart"
            Margin="10"
            FontSize="20">

            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,0,0,20"
                    FontFamily="Seoge UI"
                    FontSize="18"
                    Text="Top brand cars YTD in 2013" />
            </chart:SfChart.Header>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    AxisLineStyle="{StaticResource axisStyle}"
                    FontSize="16"
                    Header="Cars"
                    ShowGridLines="False"
                    LabelPlacement="BetweenTicks"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource axisStyle}" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource axisStyle}"
                    FontSize="16"
                    Header="YTD"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource axisStyle}"
                    Maximum="1400"
                    Minimum="0" />
            </chart:SfChart.SecondaryAxis>

            <!--  Using TooltipTemplate property to bind tooltip value  -->
            <chart:BarSeries
                x:Name="sampleSeries"
                chart:ChartSeriesBase.Spacing="0.3"
                chart:ChartTooltip.EnableAnimation="{Binding ElementName=tooltipAnime, Path=IsChecked, Mode=TwoWay}"
                chart:ChartTooltip.HorizontalAlignment="{Binding ElementName=horizontalAlign, Path=SelectedItem, Converter={StaticResource enumDisplayNameConverter}, Mode=TwoWay}"
                chart:ChartTooltip.HorizontalOffset="{Binding HorizontalOffset, TargetNullValue=10, Mode=TwoWay}"
                chart:ChartTooltip.InitialShowDelay="{Binding ElementName=initialDelaySlider, Path=Value, Mode=TwoWay}"
                chart:ChartTooltip.ShowDuration="{Binding ElementName=showDurationSlider, Path=Value, Mode=TwoWay}"
                chart:ChartTooltip.VerticalAlignment="{Binding ElementName=verticalAlign, Path=SelectedItem, Converter={StaticResource enumDisplayNameConverter}, Mode=TwoWay}"
                chart:ChartTooltip.VerticalOffset="{Binding VerticalOffset, TargetNullValue=10, Mode=TwoWay}"
                ColorModel="{StaticResource CustomColor}"
                EnableAnimation="True"
                ItemsSource="{Binding CompanyDetails}"
                Palette="Custom"
                ShowTooltip="True"
                TooltipTemplate="{StaticResource tooltipTemplate}"
                XBindingPath="CompanyName"
                YBindingPath="YTD" />

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
