<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.ZoomPanBehavior"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="http://schemas.syncfusion.com/wpf"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.Resources>

        <!--  Template for Axis Labels  -->
        <DataTemplate x:Key="labelTemplate">
            <TextBlock FontSize="12" Text="{Binding LabelContent}" />
        </DataTemplate>

        <DataTemplate x:Key="postfixLabelTemplate">
            <TextBlock Text="%" />
        </DataTemplate>

        <Style x:Key="axisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

    </democommon:DemoControl.Resources>

    <democommon:DemoControl.DataContext>
        <local:LoadDetailViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="ZoomBehaviorChart"
            Margin="10"
            ColorModel="{StaticResource CustomColor}"
            IsManipulationEnabled="True"
            Palette="Custom">

            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,0,0,20"
                    FontFamily="Seoge UI"
                    FontSize="18"
                    Text="Server CPU Load" />
            </chart:SfChart.Header>

            <chart:SfChart.Behaviors>
                <chart:ChartZoomPanBehavior
                    EnableMouseWheelZooming="True"
                    EnablePanning="True"
                    EnablePinchZooming="True"
                    EnableSelectionZooming="False"
                    EnableZoomingToolBar="True"
                    HorizontalPosition="Right"
                    ResetOnDoubleTap="True"
                    ToolBarItemHeight="30"
                    ToolBarItemMargin="5"
                    ToolBarItemWidth="30"
                    ZoomMode="XY" />
            </chart:SfChart.Behaviors>

            <chart:SfChart.PrimaryAxis>
                <chart:DateTimeAxis
                    AxisLineStyle="{StaticResource axisStyle}"
                    FontSize="13"
                    LabelFormat="MMM, yyyy"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource axisStyle}">
                    <chart:DateTimeAxis.Header>
                        <TextBlock
                            HorizontalAlignment="Left"
                            FontSize="13"
                            Text="Date" />
                    </chart:DateTimeAxis.Header>
                </chart:DateTimeAxis>
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource axisStyle}"
                    FontSize="13"
                    MajorTickLineStyle="{StaticResource axisStyle}"
                    PostfixLabelTemplate="{StaticResource postfixLabelTemplate}">
                    <chart:NumericalAxis.Header>
                        <TextBlock
                            VerticalAlignment="top"
                            FontSize="13"
                            Text="CPU Load" />
                    </chart:NumericalAxis.Header>
                </chart:NumericalAxis>
            </chart:SfChart.SecondaryAxis>

            <chart:FastLineSeries
                EnableAnimation="True"
                ItemsSource="{Binding LoadDetails}"
                StrokeLineJoin="Round"
                XBindingPath="Date"
                YBindingPath="Load" />

        </chart:SfChart>

    </Grid>
</democommon:DemoControl>