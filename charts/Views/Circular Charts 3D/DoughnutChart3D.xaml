<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.DoughnutChart3D"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:interact="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">


    <democommon:DemoControl.DataContext>
        <local:PieChart3DViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <local:PieChart3DColorConverter x:Key="colorConv" />

        <!--  Adornment Label Template  -->
        <DataTemplate x:Key="labelTemplate1">
            <Grid>
                <Rectangle
                    Fill="{Binding Converter={StaticResource colorConv}}"
                    Stroke="White"
                    StrokeThickness="1" />
                <TextBlock
                    Margin="6,3,6,3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="12"
                    Text="{Binding Item.Amount, StringFormat={}{0}%}" />
            </Grid>
        </DataTemplate>

        <!--  ToolTip Template  -->
        <DataTemplate x:Key="TooltipTemplate">
            <Grid IsHitTestVisible="False">
                <Rectangle
                    Fill="{Binding Interior}"
                    Stroke="White"
                    StrokeThickness="1" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="5,3,5,3"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="11"
                        Foreground="White"
                        IsHitTestVisible="False"
                        Text="{Binding Item.Expense}" />
                    <TextBlock
                        Margin="5,3,5,3"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="11"
                        Foreground="White"
                        Text=":" />
                    <TextBlock
                        Margin="5,3,5,3"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="11"
                        Foreground="White"
                        IsHitTestVisible="False"
                        Text="{Binding YData}" />
                </StackPanel>
            </Grid>
        </DataTemplate>

        <!--  LegendItem Template  -->
        <DataTemplate x:Key="legend">
            <StackPanel Orientation="Horizontal">
                <Grid Margin="10,0,0,0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Rectangle
                        Width="15"
                        Height="15"
                        Fill="{Binding Interior}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="10,5,5,0"
                        FontSize="16"
                        Text="{Binding Item.Expense}" />
                </Grid>
            </StackPanel>
        </DataTemplate>
    </democommon:DemoControl.Resources>
    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart3D
            x:Name="DoughnutChart"
            Grid.RowSpan="2"
            Margin="50"
            HorizontalAlignment="Center"
            Depth="30"
            EnableRotation="True"
            PerspectiveAngle="127.41573033707868"
            Rotation="44"
            Tilt="-45">

            <interact:Interaction.Behaviors>
                <local:RotateAnimationBehavior />
            </interact:Interaction.Behaviors>

            <!--  Header  -->
            <chart:SfChart3D.Header>
                <TextBlock
                    Margin="0,20,0,10"
                    FontFamily="Segoe UI"
                    FontSize="18"
                    Text="Communication Medium" />
            </chart:SfChart3D.Header>

            <!--  PrimaryAxis  -->
            <chart:SfChart3D.PrimaryAxis>
                <chart:CategoryAxis3D />
            </chart:SfChart3D.PrimaryAxis>

            <!--  SecondaryAxis  -->
            <chart:SfChart3D.SecondaryAxis>
                <chart:NumericalAxis3D />
            </chart:SfChart3D.SecondaryAxis>

            <!--  Legend  -->
            <chart:SfChart3D.Legend>
                <chart:ChartLegend
                    Width="272"
                    Height="200"
                    BorderThickness="1"
                    CheckBoxVisibility="Visible"
                    CornerRadius="0"
                    DockPosition="Right"
                    ItemTemplate="{StaticResource legend}"
                    RenderTransformOrigin="0.5,0.5" />
            </chart:SfChart3D.Legend>

            <!--  DoughnutSeries3D  -->
            <chart:DoughnutSeries3D
                x:Name="pieSeries"
                chart:ChartTooltip.EnableAnimation="True"
                ColorModel="{StaticResource CustomColor}"
                ItemsSource="{Binding Expenditure}"
                Label="Expenditures"
                LabelPosition="Outside"
                Palette="Custom"
                ShowTooltip="True"
                TooltipTemplate="{StaticResource TooltipTemplate}"
                XBindingPath="Expense"
                YBindingPath="Amount">

                <!--  AdornmentInfo  -->
                <chart:DoughnutSeries3D.AdornmentsInfo>
                    <chart:ChartAdornmentInfo3D
                        LabelTemplate="{StaticResource labelTemplate1}"
                        SegmentLabelContent="LabelContentPath"
                        ShowLabel="True" />
                </chart:DoughnutSeries3D.AdornmentsInfo>
            </chart:DoughnutSeries3D>
        </chart:SfChart3D>
    </Grid>
</democommon:DemoControl>
