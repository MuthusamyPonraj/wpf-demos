<UserControl
    x:Class="syncfusion.chartdemos.wpf.ColumnSeries"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="http://schemas.syncfusion.com/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/CustomTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.Resources>
            <DataTemplate x:Key="postfixTemplate">
                <TextBlock
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Text="%" />
            </DataTemplate>
            <DataTemplate x:Key="labelTemplate">
                <TextBlock
                    Margin="5"
                    FontSize="16"
                    Text="{Binding Path=LabelContent}" />
            </DataTemplate>
            <DataTemplate x:Key="headerTemplate">
                <TextBlock
                    Margin="5"
                    FontSize="18"
                    Text="{Binding}" />
            </DataTemplate>
            <DataTemplate x:Key="axisLabelTemplate">
                <TextBlock
                    Margin="0,-8,0,0"
                    FontSize="12"
                    Text="{Binding LabelContent}" />
            </DataTemplate>
            <Style x:Key="axisLineStyle" TargetType="Line">
                <Setter Property="Stroke" Value="#FFBCBEC0" />
                <Setter Property="StrokeThickness" Value="1" />
            </Style>
            <Style x:Key="majorTickLineStyle" TargetType="Line">
                <Setter Property="Stroke" Value="#FFBCBEC0" />
                <Setter Property="StrokeThickness" Value="1" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.DataContext>
                <local:ViewModelColumn />
            </Grid.DataContext>
            <chart:SfChart x:Name="SfChart1" AreaBorderBrush="Transparent">

                <chart:SfChart.Legend>
                    <chart:ChartLegend
                        Margin="0,-10,0,20"
                        HorizontalAlignment="Right"
                        FontSize="12"
                        IconHeight="10"
                        IconWidth="10"
                        ItemMargin="0,0,18,0"
                        LegendPosition="Outside" />
                </chart:SfChart.Legend>

                <chart:SfChart.Header>
                    <StackPanel
                        x:Name="HeaderStack1"
                        Margin="50,0,-10,0"
                        HorizontalAlignment="Left">
                        <TextBlock
                            HorizontalAlignment="Left"
                            FontFamily="Segoe UI"
                            FontSize="18"
                            Text="Literacy rate in Nation" />
                    </StackPanel>
                </chart:SfChart.Header>

                <chart:SfChart.PrimaryAxis>
                    <chart:CategoryAxis
                        AxisLineStyle="{StaticResource axisLineStyle}"
                        FontSize="10"
                        LabelPlacement="BetweenTicks"
                        LabelTemplate="{StaticResource axisLabelTemplate}"
                        MajorTickLineStyle="{StaticResource majorTickLineStyle}"
                        ShowGridLines="False"
                        TickLineSize="8" />
                </chart:SfChart.PrimaryAxis>

                <chart:SfChart.SecondaryAxis>
                    <chart:NumericalAxis
                        AxisLineStyle="{StaticResource axisLineStyle}"
                        FontSize="12"
                        Interval="20"
                        MajorTickLineStyle="{StaticResource majorTickLineStyle}"
                        Maximum="100"
                        Minimum="0"
                        PlotOffset="10"
                        PostfixLabelTemplate="{StaticResource postfixTemplate}"
                        ShowGridLines="False" />
                </chart:SfChart.SecondaryAxis>

                <chart:ColumnSeries
                    CustomTemplate="{StaticResource columnTemplate1}"
                    Interior="#FF8BC34A"
                    ItemsSource="{Binding}"
                    Label="Educated"
                    LegendIcon="Rectangle"
                    SegmentSpacing="0.1"
                    XBindingPath="Gadget"
                    YBindingPath="Value1" />

                <chart:ColumnSeries
                    CustomTemplate="{StaticResource columnTemplate2}"
                    Interior="#FFD1D3D4"
                    ItemsSource="{Binding}"
                    Label="Uneducated"
                    LegendIcon="Rectangle"
                    XBindingPath="Gadget"
                    YBindingPath="Value1" />
            </chart:SfChart>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.DataContext>
                <local:ViewModelColumn1 />
            </Grid.DataContext>
            <chart:SfChart x:Name="SfChart2" AreaBorderBrush="Transparent">

                <chart:SfChart.Legend>
                    <chart:ChartLegend
                        HorizontalAlignment="Right"
                        Foreground="#FF676767"
                        IconHeight="10"
                        IconWidth="10"
                        LegendPosition="Outside" />
                </chart:SfChart.Legend>

                <chart:SfChart.Header>
                    <StackPanel
                        x:Name="HeaderStack2"
                        Margin="50,20,-10,0"
                        HorizontalAlignment="Left">
                        <TextBlock
                            FontFamily="Segoe UI"
                            FontSize="18"
                            Text="Economic Growth - Year 2013" />
                    </StackPanel>
                </chart:SfChart.Header>

                <chart:SfChart.PrimaryAxis>
                    <chart:CategoryAxis
                        AxisLineStyle="{StaticResource axisLineStyle}"
                        LabelPlacement="BetweenTicks"
                        LabelTemplate="{StaticResource axisLabelTemplate}"
                        MajorTickLineStyle="{StaticResource majorTickLineStyle}"
                        ShowGridLines="False" />
                </chart:SfChart.PrimaryAxis>

                <chart:SfChart.SecondaryAxis>
                    <chart:NumericalAxis
                        AxisLineStyle="{StaticResource axisLineStyle}"
                        FontSize="12"
                        Header="Millions"
                        Interval="10"
                        MajorTickLineStyle="{StaticResource majorTickLineStyle}"
                        Maximum="30"
                        Minimum="0"
                        PlotOffset="20"
                        ShowGridLines="False" />
                </chart:SfChart.SecondaryAxis>

                <chart:ColumnSeries
                    CustomTemplate="{StaticResource columnTemplate3}"
                    Interior="#FFFFC107"
                    ItemsSource="{Binding}"
                    Label="Year 2013"
                    LegendIcon="Rectangle"
                    SegmentSpacing="0.6"
                    XBindingPath="Gadget"
                    YBindingPath="Value2" />

            </chart:SfChart>
        </Grid>
    </Grid>
</UserControl>
