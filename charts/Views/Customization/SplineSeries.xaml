<UserControl
    x:Class="syncfusion.chartdemos.wpf.SplineSeries"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="http://schemas.syncfusion.com/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/CustomTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.DataContext>
            <local:ViewModelSpline />
        </Grid.DataContext>

        <Grid.Resources>

            <local:SplineValueConverter x:Key="SplineValueConverter" />

            <DataTemplate x:Key="postfixTemplate">
                <TextBlock
                    VerticalAlignment="Top"
                    FontSize="10"
                    Text="o" />
            </DataTemplate>

            <DataTemplate x:Key="labelTemplate">
                <TextBlock
                    Margin="5"
                    FontSize="14"
                    Text="{Binding Path=LabelContent}" />
            </DataTemplate>

            <DataTemplate x:Key="headerTemplate">
                <TextBlock
                    Margin="5"
                    FontSize="16"
                    Text="{Binding}" />
            </DataTemplate>

            <Style x:Key="axisLineStyle" TargetType="Line">
                <Setter Property="Stroke" Value="#FFBCBEC0" />
                <Setter Property="StrokeThickness" Value="1" />
            </Style>

            <Style x:Key="minorTickLineStyle" TargetType="Line">
                <Setter Property="Stroke" Value="#FFBCBEC0" />
                <Setter Property="StrokeThickness" Value="1" />
            </Style>

        </Grid.Resources>

        <chart:SfChart Margin="10">

            <chart:SfChart.Header>
                <TextBlock
                    Margin="50,10,0,10"
                    FontFamily="Segoe UI"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="Climate Graph" />
            </chart:SfChart.Header>

            <chart:SfChart.PrimaryAxis>
                <chart:DateTimeAxis
                    AxisLineStyle="{StaticResource axisLineStyle}"
                    Header="Year 2014"
                    HeaderTemplate="{StaticResource headerTemplate}"
                    Interval="1"
                    IntervalType="Months"
                    LabelFormat="MMM"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource minorTickLineStyle}"
                    PlotOffset="20"
                    ShowGridLines="False" />
            </chart:SfChart.PrimaryAxis>
            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource axisLineStyle}"
                    Header="Temperature (in Celsius)"
                    HeaderTemplate="{StaticResource headerTemplate}"
                    Interval="5"
                    Maximum="30"
                    Minimum="-10" />
            </chart:SfChart.SecondaryAxis>


            <chart:SplineSeries
                Interior="#FF448DD5"
                ItemsSource="{Binding}"
                Label="Mean daily maximum temperature"
                LegendIcon="Diamond"
                XBindingPath="Month"
                YBindingPath="Value2">
                <chart:SplineSeries.CustomTemplate>
                    <DataTemplate>
                        <Canvas>
                            <Path
                                Data="{Binding Data}"
                                Stroke="{Binding Converter={StaticResource SplineValueConverter}}"
                                StrokeEndLineCap="Round"
                                StrokeThickness="3" />
                        </Canvas>
                    </DataTemplate>
                </chart:SplineSeries.CustomTemplate>

            </chart:SplineSeries>
        </chart:SfChart>
    </Grid>
</UserControl>
