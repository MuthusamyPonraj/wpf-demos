<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.DataTableBindingDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:DataTableBindingViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <DataTemplate x:Key="labelTemplate">
            <TextBlock FontSize="16" Text="{Binding LabelContent}" />
        </DataTemplate>

        <Style x:Key="AxisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

        <Style x:Key="AxisStyle1" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="0.5" />
        </Style>

    </democommon:DemoControl.Resources>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="BarChart"
            Margin="10"
            ColorModel="{StaticResource CustomColor}"
            Palette="Custom">

            <chart:SfChart.Legend>
                <chart:ChartLegend
                    Margin="11"
                    DockPosition="Right"
                    FontSize="15"
                    Orientation="Vertical" />
            </chart:SfChart.Legend>

            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,0,0,10"
                    FontFamily="Segoe UI"
                    FontSize="18">
                    Sales and target analysis for the year 2018
                </TextBlock>
            </chart:SfChart.Header>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    LabelTemplate="{StaticResource labelTemplate}"
                    ShowGridLines="False"
                    MajorTickLineStyle="{StaticResource AxisStyle}" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource AxisStyle1}"
                    Header="Percentage"
                    Interval="10"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}" />
            </chart:SfChart.SecondaryAxis>

            <chart:BarSeries
                EnableAnimation="True"
                ItemsSource="{Binding ChartDataTable2}"
                Label="Actual Sales"
                ShowTooltip="True"
                XBindingPath="Product"
                YBindingPath="Percentage">
                <chart:BarSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        AdornmentsPosition="TopAndBottom"
                        ShowLabel="True"
                        ShowMarker="True">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock
                                        FontFamily="Segoe UI"
                                        FontSize="20"
                                        Foreground="White"
                                        Text="{Binding}" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:BarSeries.AdornmentsInfo>
            </chart:BarSeries>

            <chart:BarSeries
                EnableAnimation="True"
                ItemsSource="{Binding ChartDataTable}"
                Label="Sales Target"
                ShowTooltip="True"
                XBindingPath="Product"
                YBindingPath="Percentage">
                <chart:BarSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        AdornmentsPosition="TopAndBottom"
                        ShowLabel="True"
                        ShowMarker="True">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock
                                        FontFamily="Segoe UI"
                                        FontSize="20"
                                        Foreground="White"
                                        Text="{Binding}" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:BarSeries.AdornmentsInfo>
            </chart:BarSeries>

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
