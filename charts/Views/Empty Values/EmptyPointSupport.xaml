<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.EmptyPointSupportDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.Resources>
        <Style x:Key="AxisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

        <Style x:Key="AxisStyle1" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="0.5" />
        </Style>
    </democommon:DemoControl.Resources>

    <democommon:DemoControl.DataContext>
        <local:EmptyPointSupportViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Options>
        <StackPanel Margin="5">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="13"
                FontWeight="Bold"
                Text="Properties" />

            <TextBlock
                Name="EmptyPointStyle"
                Margin="5"
                Text="EmptyPointStyle" />
            <ComboBox
                Name="EmptyPointStyles"
                Margin="5"
                FontSize="12"
                IsEditable="False"
                ItemsSource="{democommon:EnumValuesExtension Type=chart:EmptyPointStyle}"
                SelectedIndex="0">
            </ComboBox>

            <TextBlock
                Name="EmptyPointValue"
                Margin="5"
                Text="EmptyPointValue" />
            <ComboBox
                Name="EmptyPointValues"
                Margin="5"
                FontSize="12"
                IsEditable="False"
                ItemsSource="{democommon:EnumValuesExtension Type=chart:EmptyPointValue}"
                SelectedIndex="1">
            </ComboBox>

            <TextBlock Margin="5" Text="EmptyPointInterior" />
            <ComboBox
                Name="EmptyPointInterior"
                Margin="5"
                DisplayMemberPath="Tag"
                FontSize="12"
                SelectedIndex="2">
                <ComboBoxItem Tag="Blue">
                    <Polyline
                        Points="0,8,125,8"
                        Stroke="Blue"
                        StrokeThickness="2" />
                </ComboBoxItem>
                <ComboBoxItem Tag="Green">
                    <Polyline
                        Points="0,8,125,8"
                        Stroke="Green"
                        StrokeThickness="2" />
                </ComboBoxItem>
                <ComboBoxItem Tag="Orange">
                    <Polyline
                        Points="0,8,125,8"
                        Stroke="Orange"
                        StrokeThickness="2" />
                </ComboBoxItem>
                <ComboBoxItem Tag="Purple">
                    <Polyline
                        Points="0,8,125,8"
                        Stroke="Purple"
                        StrokeThickness="2" />
                </ComboBoxItem>
                <ComboBoxItem Tag="RoyalBlue">
                    <Polyline
                        Points="0,8,125,8"
                        Stroke="RoyalBlue"
                        StrokeThickness="2" />
                </ComboBoxItem>
            </ComboBox>
        </StackPanel>
    </democommon:DemoControl.Options>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="EmptyPointChart"
            Margin="10"
            VerticalAlignment="Center"
            ColorModel="{StaticResource CustomColor}"
            Palette="Custom">

            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,0,0,10"
                    FontFamily="Segoe UI"
                    FontSize="18">
                    New Products Count by Year
                </TextBlock>
            </chart:SfChart.Header>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    x:Name="Categor"
                    AxisLineStyle="{StaticResource AxisStyle}"
                    Header="Year"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    ShowGridLines="False"
                    PlotOffset="10" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    Header="Count"
                    Interval="1"
                    MajorTickLineStyle="{StaticResource AxisStyle}" />
            </chart:SfChart.SecondaryAxis>

            <chart:ColumnSeries
                EmptyPointInterior="{Binding ElementName=EmptyPointInterior, Path=SelectedItem.Content.Stroke}"
                EmptyPointValue="{Binding ElementName=EmptyPointValues, Path=SelectedItem, Mode=TwoWay}"
                EmptyPointStyle="{Binding ElementName=EmptyPointStyles, Path=SelectedItem,Mode=TwoWay}"
                EnableAnimation="False"
                ItemsSource="{Binding Data}"
                ShowEmptyPoints="True"
                XBindingPath="Year"
                YBindingPath="Count">
                <chart:ColumnSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        AdornmentsPosition="TopAndBottom"
                        ShowLabel="True">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock
                                        FontFamily="Segoe UI"
                                        FontSize="14"
                                        Foreground="White"
                                        Text="{Binding}" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:ColumnSeries.AdornmentsInfo>
            </chart:ColumnSeries>

        </chart:SfChart>

    </Grid>
</democommon:DemoControl>
