<UserControl
    x:Class="syncfusion.chartdemos.wpf.ChartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="http://schemas.syncfusion.com/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="21,33,35,38">

        <Grid.Resources>

            <Style x:Key="AxisStyle" TargetType="Line">
                <Setter Property="Stroke" Value="DarkGray" />
                <Setter Property="StrokeThickness" Value="1" />
            </Style>

            <Style x:Key="AxisStyle1" TargetType="Line">
                <Setter Property="Stroke" Value="DarkGray" />
                <Setter Property="StrokeThickness" Value="0.5" />
            </Style>

        </Grid.Resources>

        <chart:SfChart x:Name="ExportDemoChart">

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    AxisLineStyle="{StaticResource AxisStyle1}"
                    Header="Month"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    PlotOffset="20" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    Header="Degree ( In Celsius )"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    RangePadding="Round" />
            </chart:SfChart.SecondaryAxis>

            <!--  Add Series to the Chart  -->
            <chart:SplineSeries
                Interior="#0BB4C2"
                ItemsSource="{Binding ClimateData}"
                Label="Sports"
                XBindingPath="Month"
                YBindingPath="Temperature">
                <chart:SplineSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        Foreground="White"
                        ShowLabel="True"
                        ShowMarker="True"
                        Symbol="Ellipse" />
                </chart:SplineSeries.AdornmentsInfo>
            </chart:SplineSeries>

        </chart:SfChart>

    </Grid>
</UserControl>
