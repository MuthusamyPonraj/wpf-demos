<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.FastCandleChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:FinancialViewModel/>
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>

        <DataTemplate x:Key="headerTemplate">
            <TextBlock
                Margin="5"
                FontSize="16"
                Text="{Binding}" />
        </DataTemplate>

        <DataTemplate x:Key="labelTemplate">
            <TextBlock
                Margin="5"
                FontSize="14"
                Text="{Binding Path=LabelContent}" />
        </DataTemplate>
        <DataTemplate x:Key="tooltiptemplate">
            <Border
                Margin="10"
                Background="White"
                BorderBrush="Black"
                BorderThickness="1">
                <Grid Margin="3,3,3,3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Foreground="Black" Text="High" />
                        <TextBlock Foreground="Black" Text="Open" />
                        <TextBlock Foreground="Black" Text="Close" />
                        <TextBlock Foreground="Black" Text="Low" />
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Foreground="Black" Text=" : " />
                        <TextBlock Foreground="Black" Text=" : " />
                        <TextBlock Foreground="Black" Text=" : " />
                        <TextBlock Foreground="Black" Text=" : " />
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Foreground="Black" Text="{Binding Item.Y}" />
                        <TextBlock Foreground="Black" Text="{Binding Item.X}" />
                        <TextBlock Foreground="Black" Text="{Binding Item.Y2}" />
                        <TextBlock Foreground="Black" Text="{Binding Item.Y1}" />
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
        <Style x:Key="axisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

        <Style x:Key="axisStyle1" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="0.5" />
        </Style>

    </democommon:DemoControl.Resources>

    <Grid>
        <chart:SfChart
            x:Name="FastCandleChart"
            Margin="10"
            HorizontalAlignment="Center">

            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,0,0,10"
                    FontFamily="Segoe UI"
                    FontSize="18">
                    Microsoft Stock Market Trend Analysis
                </TextBlock>
            </chart:SfChart.Header>

            <chart:SfChart.PrimaryAxis>
                <chart:DateTimeAxis
                    AxisLineStyle="{StaticResource axisStyle1}"
                    Header="Month" LabelFormat="MMM-yyyy" 
                    HeaderTemplate="{StaticResource headerTemplate}"
                    ShowGridLines="False"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource axisStyle}" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource axisStyle}"
                    Header="Price in USD"
                    HeaderTemplate="{StaticResource headerTemplate}"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource axisStyle}"
                    Minimum="54" Maximum="72" Interval="2"  />
            </chart:SfChart.SecondaryAxis>

            <chart:FastCandleBitmapSeries
                BearFillColor="#0BB4C2"
                BullFillColor="#874DAF"
                ItemsSource="{Binding FinancialData}"
                High="Y"
                Open="X"
                Close="Y2"
                Low="Y1"
                Label="Price of Product"
                ShowTooltip="True"
                TooltipTemplate="{StaticResource tooltiptemplate}"
                XBindingPath="Date"/>
        </chart:SfChart>

    </Grid>
</democommon:DemoControl>
