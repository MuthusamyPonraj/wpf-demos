<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.FastStackingColumnChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:FastStackingColumnChartViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>

        <DataTemplate x:Key="headerTemplate">
            <TextBlock
                Margin="5"
                FontSize="16"
                Text="{Binding}" />
        </DataTemplate>

        <DataTemplate x:Key="labelTemplate">
            <TextBlock
                Margin="5"
                FontSize="14"
                Text="{Binding Path=LabelContent}" />
        </DataTemplate>

        <Style x:Key="axisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

    </democommon:DemoControl.Resources>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="FastStackingColumn"
            Margin="10"
            HorizontalAlignment="Center"
            ColorModel="{StaticResource CustomColor}"
            Palette="Custom">

            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,0,0,10"
                    FontFamily="Segoe UI"
                    FontSize="18">
                    Microsoft Stock Market Trend Analysis
                </TextBlock>
            </chart:SfChart.Header>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    x:Name="axis1"
                    AxisLineStyle="{StaticResource axisStyle}"
                    Header="Product Id"
                    ShowGridLines="False"
                    HeaderTemplate="{StaticResource headerTemplate}"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource axisStyle}" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource axisStyle}"
                    Header="Price in USD"
                    HeaderTemplate="{StaticResource headerTemplate}"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource axisStyle}"
                    RangePadding="Round" />
            </chart:SfChart.SecondaryAxis>

            <chart:FastStackingColumnBitmapSeries
                ItemsSource="{Binding MedalDetails}"
                Label="Gold"
                ShowTooltip="True"
                StrokeThickness="5"
                XBindingPath="CountryName"
                YBindingPath="GoldMedals" />
            <chart:FastStackingColumnBitmapSeries
                ItemsSource="{Binding MedalDetails}"
                Label="Silver"
                ShowTooltip="True"
                StrokeThickness="5"
                XBindingPath="CountryName"
                YBindingPath="SilverMedals" />
            <chart:FastStackingColumnBitmapSeries
                ItemsSource="{Binding MedalDetails}"
                Label="Bronze"
                ShowTooltip="True"
                StrokeThickness="5"
                XBindingPath="CountryName"
                YBindingPath="BronzeMedals" />

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
