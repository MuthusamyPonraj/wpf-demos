<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.FastStepLineChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.Resources>

        <DataTemplate x:Key="headerTemplate">
            <TextBlock
                Margin="5"
                FontSize="16"
                Text="{Binding}" />
        </DataTemplate>

        <DataTemplate x:Key="labelTemplate">
            <TextBlock
                Margin="5"
                FontSize="14"
                Text="{Binding Path=LabelContent}" />
        </DataTemplate>

        <Style x:Key="axisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

        <Style x:Key="axisStyle1" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="0.5" />
        </Style>

        <DataTemplate x:Key="tooltipVal">
            <Border
                Padding="4"
                Background="#FFFFFFFF"
                BorderBrush="#FF808080"
                BorderThickness="1"
                CornerRadius="3">
                <ContentControl
                    Content="{Binding YData}"
                    FontSize="15"
                    Foreground="Black" />
            </Border>
        </DataTemplate>

    </democommon:DemoControl.Resources>

    <democommon:DemoControl.DataContext>
        <local:FastColumnChartViewModel />
    </democommon:DemoControl.DataContext>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="FastStepLine"
            Margin="10"
            HorizontalAlignment="Center">

            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,0,0,10"
                    FontFamily="Segoe UI"
                    FontSize="18">
                    Weather Forecasting
                </TextBlock>
            </chart:SfChart.Header>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    x:Name="axis1"
                    AxisLineStyle="{StaticResource axisStyle1}"
                    Header="Date"
                    HeaderTemplate="{StaticResource headerTemplate}"
                    LabelFormat="MMM dd"
                    ShowGridLines="False"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource axisStyle}" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource axisStyle}"
                    Header="Temperature(In Fahrenheit)"
                    HeaderTemplate="{StaticResource headerTemplate}"
                    Interval="5"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource axisStyle}"
                    RangePadding="Round" />
            </chart:SfChart.SecondaryAxis>

            <chart:FastStepLineBitmapSeries
                x:Name="FastStepLineSeries"
                EnableAnimation="True"
                Interior="#0BB4C2"
                ItemsSource="{Binding List}"
                Label="Expenditures"
                ShowTooltip="True"
                TooltipTemplate="{StaticResource tooltipVal}"
                XBindingPath="Date"
                YBindingPath="Price" />

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
