<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.AxisDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:AxisViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </democommon:DemoControl.Resources>

    <Grid>
        <Grid.Resources>
            <Style x:Key="AxisStyle" TargetType="Line">
                <Setter Property="Stroke" Value="DarkGray" />
                <Setter Property="StrokeThickness" Value="0" />
            </Style>
        </Grid.Resources>
        <TabControl>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Category Axis"  />
                    </StackPanel>
                </TabItem.Header>
                <ContentControl x:Name="contentcontrol">
                    <Grid>

                        <chart:SfChart
                            x:Name="Chart"
                            Margin="10"
                            ColorModel="{StaticResource CustomColor}"
                            Palette="Custom"
                            SideBySideSeriesPlacement="True">
                            <chart:SfChart.Header>
                                <TextBlock
                                    Margin="0,0,0,15"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Seoge UI"
                                    FontSize="18"
                                    Text="Internet Users - 2019" />
                            </chart:SfChart.Header>
                            <chart:SfChart.PrimaryAxis>
                                <chart:CategoryAxis
                                    x:Name="primary"
                                    AxisLineStyle="{StaticResource AxisStyle}"
                                    LabelPlacement="BetweenTicks">
                                    <chart:CategoryAxis.LabelStyle>
                                        <chart:LabelStyle x:Name="axisLabelStyle" />
                                    </chart:CategoryAxis.LabelStyle>
                                </chart:CategoryAxis>
                            </chart:SfChart.PrimaryAxis>
                            <chart:SfChart.SecondaryAxis>
                                <chart:NumericalAxis
                                    AxisLineStyle="{StaticResource AxisStyle}"
                                    FontSize="18"
                                    Maximum="80"
                                    Minimum="0" />
                            </chart:SfChart.SecondaryAxis>
                            <chart:ColumnSeries
                                x:Name="Series1"
                                EnableAnimation="True"
                                Interior="#0BB4C2"
                                ItemsSource="{Binding CategoryData1}"
                                XBindingPath="XValue"
                                YBindingPath="YValue">
                                <chart:ColumnSeries.AdornmentsInfo>
                                    <chart:ChartAdornmentInfo
                                        AdornmentsPosition="TopAndBottom"
                                        FontSize="18"
                                        Foreground="White"
                                        LabelPosition="Center"
                                        ShowLabel="True" />
                                </chart:ColumnSeries.AdornmentsInfo>
                            </chart:ColumnSeries>
                            <chart:ColumnSeries
                                x:Name="Series2"
                                EnableAnimation="True"
                                Interior="#874DAF"
                                ItemsSource="{Binding CategoryData2}"
                                XBindingPath="XValue"
                                YBindingPath="YValue">
                                <chart:ColumnSeries.AdornmentsInfo>
                                    <chart:ChartAdornmentInfo
                                        AdornmentsPosition="TopAndBottom"
                                        FontSize="18"
                                        Foreground="White"
                                        LabelPosition="Center"
                                        ShowLabel="True" />
                                </chart:ColumnSeries.AdornmentsInfo>
                            </chart:ColumnSeries>
                        </chart:SfChart>

                    </Grid>
                </ContentControl>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Numeric Axis" />
                    </StackPanel>
                </TabItem.Header>
                <ContentControl>
                    <Grid>
                        <chart:SfChart x:Name="Chart2" Margin="10">
                            <chart:SfChart.Header>
                                <TextBlock
                                    Margin="0,0,0,20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe UI"
                                    FontSize="18"
                                    Text="England vs West Indies" />
                            </chart:SfChart.Header>
                            <chart:SfChart.Resources>

                                <Style x:Key="lineStyle" TargetType="Line">
                                    <Setter Property="StrokeThickness" Value="0" />
                                </Style>

                            </chart:SfChart.Resources>
                            <chart:SfChart.Legend>
                                <chart:ChartLegend
                                    DockPosition="Bottom"
                                    IconHeight="14"
                                    IconWidth="14"
                                    ToggleSeriesVisibility="true" />
                            </chart:SfChart.Legend>
                            <chart:SfChart.PrimaryAxis>
                                <chart:CategoryAxis
                                    AxisLineOffset="2"
                                    AxisLineStyle="{StaticResource AxisStyle}"
                                    Header="Death Overs"
                                    Interval="1"
                                    LabelPlacement="BetweenTicks"
                                    PlotOffset="2" />
                            </chart:SfChart.PrimaryAxis>
                            <chart:SfChart.SecondaryAxis>
                                <chart:NumericalAxis
                                    AxisLineStyle="{StaticResource AxisStyle}"
                                    Interval="5"
                                    MajorGridLineStyle="{StaticResource lineStyle}"
                                    Maximum="25"
                                    Minimum="0"
                                    TickLineSize="0" />
                            </chart:SfChart.SecondaryAxis>
                            <chart:SfChart.Series>
                                <chart:ColumnSeries
                                    x:Name="series1"
                                    EnableAnimation="True"
                                    Interior="#0BB4C2"
                                    ItemsSource="{Binding NumericData}"
                                    Label="England"
                                    LegendIcon="SeriesType"
                                    ShowTooltip="True"
                                    XBindingPath="Value"
                                    YBindingPath="Size">
                                    <chart:ColumnSeries.AdornmentsInfo>
                                        <chart:ChartAdornmentInfo FontSize="12" LabelPosition="Inner" />
                                    </chart:ColumnSeries.AdornmentsInfo>
                                </chart:ColumnSeries>
                                <chart:ColumnSeries
                                    x:Name="series2"
                                    EnableAnimation="True"
                                    Interior="#874DAF"
                                    ItemsSource="{Binding NumericData1}"
                                    Label="West Indies"
                                    LegendIcon="SeriesType"
                                    ShowTooltip="True"
                                    XBindingPath="Value"
                                    YBindingPath="Size">
                                    <chart:ColumnSeries.AdornmentsInfo>
                                        <chart:ChartAdornmentInfo FontSize="12" LabelPosition="Inner" />
                                    </chart:ColumnSeries.AdornmentsInfo>
                                </chart:ColumnSeries>
                            </chart:SfChart.Series>
                        </chart:SfChart>

                    </Grid>
                </ContentControl>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="DateTime Axis" />
                    </StackPanel>
                </TabItem.Header>
                <ContentControl>
                    <Grid>
                        <chart:SfChart Margin="10" Palette="Elite" x:Name="Chart3">
                            <chart:SfChart.Header>
                                <TextBlock
                                    Margin="0,0,0,20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe UI"
                                    FontSize="18"
                                    Text="Food Production - 2017" />
                            </chart:SfChart.Header>
                            <chart:SfChart.PrimaryAxis>
                                <chart:DateTimeAxis
                                    AxisLineStyle="{StaticResource AxisStyle}"
                                    EdgeLabelsDrawingMode="Shift"
                                    Header="Production across year"
                                    LabelFormat="yyyy-MM-dd"
                                    ZoomFactor="0.2"
                                    ZoomPosition="0.6" />
                            </chart:SfChart.PrimaryAxis>
                            <chart:SfChart.SecondaryAxis>
                                <chart:NumericalAxis AxisLineStyle="{StaticResource AxisStyle}" Header="Growth (In metric tonnes)" />
                            </chart:SfChart.SecondaryAxis>
                            <chart:SfChart.Series>
                                <chart:FastLineSeries
                                    EnableAnimation="True"
                                    Interior="#0BB4C2"
                                    ItemsSource="{Binding DateTimeData}"
                                    ShowTooltip="True"
                                    XBindingPath="Date"
                                    YBindingPath="Growth" />
                            </chart:SfChart.Series>
                        </chart:SfChart>

                    </Grid>
                </ContentControl>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Logarithmic Axis" />
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <chart:SfChart
                        x:Name="LogarithmicChart"
                        Margin="10">

                        <chart:SfChart.Header>
                            <TextBlock
                                Margin="0,0,0,20"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI"
                                FontSize="18"
                                Text="Product X Growth [1995 - 2005]" />
                        </chart:SfChart.Header>

                        <chart:SfChart.PrimaryAxis>
                            <chart:CategoryAxis
                                EdgeLabelsDrawingMode="Shift"
                                Header="Year"
                                Interval="2"
                                LabelFormat="yyyy"
                                PlotOffset="10"
                                ShowGridLines="False" />
                        </chart:SfChart.PrimaryAxis>

                        <chart:SfChart.SecondaryAxis>
                            <chart:LogarithmicAxis Header="Profit" SmallTicksPerInterval="5" />
                        </chart:SfChart.SecondaryAxis>

                        <chart:LineSeries
                            EnableAnimation="True"
                            Interior="#0BB4C2"
                            ItemsSource="{Binding DataPoints}"
                            ShowTooltip="True"
                            XBindingPath="Year"
                            YBindingPath="Profit">
                            <chart:LineSeries.AdornmentsInfo>
                                <chart:ChartAdornmentInfo
                                    ShowMarker="True"
                                    Symbol="Ellipse"
                                    SymbolHeight="10"
                                    SymbolInterior="White"
                                    SymbolStroke="#FF1BA1E2"
                                    SymbolWidth="10" />
                            </chart:LineSeries.AdornmentsInfo>
                        </chart:LineSeries>

                    </chart:SfChart>

                </Grid>
            </TabItem>

        </TabControl>

    </Grid>


</democommon:DemoControl>
