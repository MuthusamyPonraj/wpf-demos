<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.AxisConfigurationDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    OptionsSize="300">

    <democommon:DemoControl.DataContext>
        <local:AxisConfigurationViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>

        <DataTemplate x:Key="labelTemplate">
            <TextBlock FontSize="12" Text="{Binding LabelContent}" />
        </DataTemplate>

        <Style x:Key="axisLineStyle" TargetType="Line">
            <Setter Property="Stroke" Value="#FFBCBEC0" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

        <Style x:Key="gridLineStyle" TargetType="Line">
            <Setter Property="Stroke" Value="Gray" />
            <Setter Property="StrokeThickness" Value="0.2" />
        </Style>

        <Style x:Key="majorTickLineStyle" TargetType="Line">
            <Setter Property="Stroke" Value="#FFBCBEC0" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

    </democommon:DemoControl.Resources>
    <democommon:DemoControl.Options>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Expander Header="PrimaryAxis" IsExpanded="False">
                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="5"
                            Text="Is Inversed" />
                        <CheckBox
                            Name="isInversed"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="5"
                            IsChecked="False" />

                        <TextBlock
                            Name="customRange"
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="5"
                            Text="LabelRotationAngle" />
                        <Slider
                            Name="labelsRotation"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5"
                            Maximum="360"
                            Minimum="0"
                            Value="{Binding ElementName=categoryAxis, Path=LabelRotationAngle, Mode=TwoWay}" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="5"
                            Text="LabelPosition" />
                        <ComboBox
                            Name="labelPosition"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="13"
                            IsEditable="False"
                            ItemsSource="{democommon:EnumValuesExtension Type=chart:AxisElementPosition}"
                            SelectedIndex="1" />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="5"
                            Text="Label Placement" />
                        <ComboBox
                            Name="labelPlacement"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="13"
                            IsEditable="False"
                            ItemsSource="{democommon:EnumValuesExtension Type=chart:LabelPlacement}"
                            SelectedIndex="1" />

                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="5"
                            Text="LabelIntersectAction" />
                        <ComboBox
                            Name="labelIntersectAction"
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="13"
                            IsEditable="False"
                            ItemsSource="{democommon:EnumValuesExtension Type=chart:AxisLabelsIntersectAction}"
                            SelectedIndex="1" />

                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="0"
                            Margin="5"
                            Text="TickLinesPosition" />
                        <ComboBox
                            Name="tickPosition"
                            Grid.Row="5"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="13"
                            IsEditable="False"
                            ItemsSource="{democommon:EnumValuesExtension Type=chart:AxisElementPosition}"
                            SelectedIndex="1" />
    
                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="0"
                            Margin="5"
                            Text="Axis Visibility" />
                        <ComboBox
                            Name="axisVisibility"
                            Grid.Row="6"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="13"
                            IsEditable="False"
                            ItemsSource="{democommon:EnumValuesExtension Type=Visibility}"
                            SelectedIndex="0" />

                        <TextBlock
                            Grid.Row="7"
                            Grid.Column="0"
                            Margin="5"
                            Text="Label Extent" />
                        <Slider
                            Name="labelExtent"
                            Grid.Row="7"
                            Grid.Column="1"
                            Margin="5"
                            Maximum="100"
                            Minimum="0"
                            Value="{Binding ElementName=categoryAxis, Path=LabelExtent, Mode=TwoWay}" />

                        <TextBlock
                            Grid.Row="8"
                            Grid.Column="0"
                            Margin="5"
                            Text="TickLine Size" />
                        <Slider
                            Name="tickLineSize"
                            Grid.Row="8"
                            Grid.Column="1"
                            Margin="5"
                            Maximum="10"
                            Minimum="6"
                            Value="{Binding ElementName=categoryAxis, Path=TickLineSize, Mode=TwoWay}" />

                        <TextBlock
                            Grid.Row="9"
                            Grid.Column="0"
                            Margin="5"
                            Text="EdgeLabel DrawingMode" />
                        <ComboBox
                            Name="edgeLabel"
                            Grid.Row="9"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="13"
                            IsEditable="False"
                            ItemsSource="{democommon:EnumValuesExtension Type=chart:EdgeLabelsDrawingMode}"
                            SelectedIndex="0" />

                        <TextBlock
                            Grid.Row="10"
                            Grid.Column="0"
                            Margin="5"
                            Text="Origin" />
                        <Slider
                            Name="origin"
                            Grid.Row="10"
                            Grid.Column="1"
                            Margin="5"
                            Maximum="70"
                            Minimum="0"
                            Value="{Binding ElementName=categoryAxis, Path=Origin, Mode=TwoWay}" />

                        <TextBlock
                            Grid.Row="11"
                            Grid.Column="0"
                            Margin="5"
                            Text="ShowAxisNextToOrgin" />
                        <CheckBox
                            Name="showNextToOrgin"
                            Grid.Row="11"
                            Grid.Column="1"
                            Margin="5"
                            IsChecked="False" />

                        <TextBlock
                            Grid.Row="12"
                            Grid.Column="0"
                            Margin="5"
                            Text="HeaderPosition" />
                        <ComboBox
                            Name="headerPosition"
                            Grid.Row="12"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="13"
                            IsEditable="False"
                            ItemsSource="{democommon:EnumValuesExtension Type=chart:AxisHeaderPosition}"
                            SelectedIndex="0" />
                    </Grid>
                </Expander>
                <Expander
                    Grid.Row="1"
                    Header="SecondaryAxis"
                    IsExpanded="False">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="5"
                            Text="Is Inversed" />
                        <CheckBox
                            Name="isInversed1"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="5"
                            IsChecked="False" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="5"
                            Text="LabelRotationAngle" />
                        <Slider
                            Name="labelsRotation1"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5"
                            Maximum="360"
                            Minimum="0"
                            Value="{Binding ElementName=numericalAxis, Path=LabelRotationAngle, Mode=TwoWay}" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="5"
                            Text="LabelPosition" />
                        <ComboBox
                            Name="labelPosition1"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="13"
                            IsEditable="False"
                            ItemsSource="{democommon:EnumValuesExtension Type=chart:AxisElementPosition}"
                            SelectedIndex="1" />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="5"
                            Text="Range Padding" />
                        <ComboBox
                            Name="rangePadding"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="13"
                            IsEditable="False"
                            ItemsSource="{democommon:EnumValuesExtension Type=chart:NumericalPadding}"
                            SelectedIndex="1" />

                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="5"
                            Text="LabelIntersectAction" />
                        <ComboBox
                            Name="labelsIntersectAction1"
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="13"
                            IsEditable="False"
                            ItemsSource="{democommon:EnumValuesExtension Type=chart:AxisLabelsIntersectAction}"
                            SelectedIndex="1" />

                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="0"
                            Margin="5"
                            Text="TickLinesPosition" />
                        <ComboBox
                            Name="tickPosition1"
                            Grid.Row="5"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="13"
                            IsEditable="False"
                            ItemsSource="{democommon:EnumValuesExtension Type=chart:AxisElementPosition}"
                            SelectedIndex="1" />

                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="0"
                            Margin="5"
                            Text="Axis Visibility" />
                        <ComboBox
                            Name="axisVisibility1"
                            Grid.Row="6"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="13"
                            IsEditable="False"
                            ItemsSource="{democommon:EnumValuesExtension Type=Visibility}"
                            SelectedIndex="0" />

                        <TextBlock
                            Grid.Row="7"
                            Grid.Column="0"
                            Margin="5"
                            Text="Label Extent" />
                        <Slider
                            Name="labelExtent1"
                            Grid.Row="7"
                            Grid.Column="1"
                            Margin="5"
                            Maximum="100"
                            Minimum="0"
                            Value="{Binding ElementName=numericalAxis, Path=LabelExtent, Mode=TwoWay}" />

                        <TextBlock
                            Grid.Row="8"
                            Grid.Column="0"
                            Margin="5"
                            Text="TickLine Size" />
                        <Slider
                            Name="tickLineSize1"
                            Grid.Row="8"
                            Grid.Column="1"
                            Margin="5"
                            Maximum="10"
                            Minimum="6"
                            Value="{Binding ElementName=numericalAxis, Path=TickLineSize, Mode=TwoWay}" />

                        <TextBlock
                            Grid.Row="9"
                            Grid.Column="0"
                            Margin="5"
                            Text="EdgeLabel DrawingMode" />
                        <ComboBox
                            Name="edgeLabel1"
                            Grid.Row="9"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="13"
                            IsEditable="False"
                            ItemsSource="{democommon:EnumValuesExtension Type=chart:EdgeLabelsDrawingMode}"
                            SelectedIndex="0" />
                        <TextBlock
                            Grid.Row="10"
                            Grid.Column="0"
                            Margin="5"
                            Text="Origin" />
                        <Slider
                            Name="origin1"
                            Grid.Row="10"
                            Grid.Column="1"
                            Margin="5"
                            Value="{Binding ElementName=numericalAxis, Path=Origin, Mode=TwoWay}" />

                        <TextBlock
                            Grid.Row="11"
                            Grid.Column="0"
                            Margin="5"
                            Text="ShowAxisNextToOrgin" />
                        <CheckBox
                            Name="showNextToOrgin1"
                            Grid.Row="11"
                            Grid.Column="1"
                            Margin="5"
                            IsChecked="False" />

                        <TextBlock
                            Grid.Row="12"
                            Grid.Column="0"
                            Margin="5"
                            Text="HeaderPosition" />
                        <ComboBox
                            Name="headerPosition1"
                            Grid.Row="12"
                            Grid.Column="1"
                            Margin="5"
                            FontSize="13"
                            IsEditable="False"
                            ItemsSource="{democommon:EnumValuesExtension Type=chart:AxisHeaderPosition}"
                            SelectedIndex="0" />
                    </Grid>
                </Expander>
            </Grid>
        </ScrollViewer>
    </democommon:DemoControl.Options>
    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="columnChart"
            Margin="10"
            VerticalAlignment="Center">

            <chart:SfChart.Header>
                <TextBlock Margin="0,-10,0,10" FontSize="18">Production Details</TextBlock>
            </chart:SfChart.Header>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    x:Name="categoryAxis"
                    AxisLineStyle="{StaticResource axisLineStyle}"
                    EdgeLabelsDrawingMode="{Binding ElementName=edgeLabel, Path=SelectedItem, Mode=TwoWay}"
                    Header="Product"
                    HeaderPosition="{Binding ElementName=headerPosition, Path=SelectedItem, Mode=TwoWay}"
                    IsInversed="{Binding ElementName=isInversed, Path=IsChecked, Mode=TwoWay}"
                    LabelExtent="0"
                    LabelPlacement="{Binding ElementName=labelPlacement, Path=SelectedItem, Mode=TwoWay}"
                    LabelRotationAngle="0"
                    ShowGridLines="False"
                    LabelTemplate="{StaticResource labelTemplate}"
                    LabelsIntersectAction="{Binding ElementName=labelIntersectAction, Path=SelectedItem, Mode=TwoWay}"
                    LabelsPosition="{Binding ElementName=labelPosition, Path=SelectedItem, Mode=TwoWay}"
                    MajorGridLineStyle="{StaticResource gridLineStyle}"
                    MajorTickLineStyle="{StaticResource majorTickLineStyle}"
                    ShowAxisNextToOrigin="{Binding ElementName=showNextToOrgin, Path=IsChecked, Mode=TwoWay}"
                    TickLineSize="6"
                    TickLinesPosition="{Binding ElementName=tickPosition, Path=SelectedItem, Mode=TwoWay}"
                    Visibility="{Binding ElementName=axisVisibility, Path=SelectedItem, Mode=TwoWay}" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    x:Name="numericalAxis"
                    AxisLineStyle="{StaticResource axisLineStyle}"
                    EdgeLabelsDrawingMode="{Binding ElementName=edgeLabel1, Path=SelectedItem, Mode=TwoWay}"
                    Header="Percentage (%)"
                    HeaderPosition="{Binding ElementName=headerPosition1, Path=SelectedItem, Mode=TwoWay}"
                    IsInversed="{Binding ElementName=isInversed1, Path=IsChecked, Mode=TwoWay}"
                    LabelExtent="0"
                    LabelRotationAngle="0"
                    LabelTemplate="{StaticResource labelTemplate}"
                    LabelsIntersectAction="{Binding ElementName=labelsIntersectAction1, Path=SelectedItem, Mode=TwoWay}"
                    LabelsPosition="{Binding ElementName=labelPosition1, Path=SelectedItem, Mode=TwoWay}"
                    MajorGridLineStyle="{StaticResource gridLineStyle}"
                    MajorTickLineStyle="{StaticResource majorTickLineStyle}"
                    RangePadding="{Binding ElementName=rangePadding, Path=SelectedItem, Mode=TwoWay}"
                    ShowAxisNextToOrigin="{Binding ElementName=showNextToOrgin1, Path=IsChecked, Mode=TwoWay}"
                    TickLinesPosition="{Binding ElementName=tickPosition1, Path=SelectedItem, Mode=TwoWay}"
                    Visibility="{Binding ElementName=axisVisibility1, Path=SelectedItem, Mode=TwoWay}" />
            </chart:SfChart.SecondaryAxis>

            <chart:ColumnSeries
                ColorModel="{StaticResource CustomColor}"
                EnableAnimation="True"
                ItemsSource="{Binding CategoricalDatas}"
                Label="First"
                Palette="Custom"
                XBindingPath="Category"
                YBindingPath="Value">
                <chart:ColumnSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        AdornmentsPosition="TopAndBottom"
                        ShowLabel="True"
                        ShowMarker="True">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock
                                        FontSize="16"
                                        Foreground="White"
                                        Text="{Binding}" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:ColumnSeries.AdornmentsInfo>
            </chart:ColumnSeries>

        </chart:SfChart>

    </Grid>

</democommon:DemoControl>
