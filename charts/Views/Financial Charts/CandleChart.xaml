<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.CandleChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.Resources>

        <DataTemplate x:Key="headerTemplate">
            <TextBlock
                Margin="5"
                FontSize="16"
                Text="{Binding}" />
        </DataTemplate>

        <DataTemplate x:Key="labelTemplate">
            <TextBlock
                Margin="5"
                FontSize="14"
                Text="{Binding Path=LabelContent}" />
        </DataTemplate>

        <Style x:Key="axisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

    </democommon:DemoControl.Resources>

    <Grid>
        <chart:SfChart
            x:Name="financialChart"
            Margin="10">

            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,0,0,20"
                    FontFamily="Segoe UI"
                    FontSize="18">
                    USD - INR Foreign Exchange Rate Analysis
                </TextBlock>
            </chart:SfChart.Header>

            <chart:SfChart.DataContext>
                <local:HiLoChartViewModel />
            </chart:SfChart.DataContext>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    AxisLineStyle="{StaticResource axisStyle}" 
                    PlotOffset="20"
                    Header="Date"
                    ShowGridLines="False"
                    HeaderTemplate="{StaticResource headerTemplate}"
                    LabelFormat="MMM dd"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource axisStyle}" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    x:Name="axis2"
                    AxisLineStyle="{StaticResource axisStyle}"
                    Header="Stock Price"
                    HeaderTemplate="{StaticResource headerTemplate}"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource axisStyle}"
                    StartRangeFromZero="False" />
            </chart:SfChart.SecondaryAxis>

            <chart:CandleSeries
                Name="series"
                chart:ChartTooltip.EnableAnimation="True"
                BearFillColor="#0BB4C2"
                BorderThickness="0"
                BullFillColor="#874DAF"
                Close="Close"
                ComparisonMode="Low"
                EnableAnimation="True"
                High="High"
                ItemsSource="{Binding StockPriceDetails}"
                Label="Candleseries"
                Low="Low"
                Open="Open"
                ShowTooltip="True"
                XBindingPath="Date" />

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
