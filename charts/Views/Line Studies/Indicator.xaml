<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.Indicator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    OptionsSize="250">

    <democommon:DemoControl.DataContext>
        <local:IndicatorStockViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>

        <DataTemplate x:Key="labelTemplate">
            <TextBlock
                FontFamily="Seoge UI"
                FontSize="14"
                Text="{Binding LabelContent}" />
        </DataTemplate>

        <Style x:Key="AxisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

        <Style x:Key="AxisStyle1" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="0.5" />
        </Style>

    </democommon:DemoControl.Resources>
    <democommon:DemoControl.Options>
        <ComboBox
            x:Name="Indicators"
            Width="180"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            IsEditable="False"
            ItemsSource="{Binding TechincalIndicatorsStringCollection}"
            SelectedItem="{Binding SelectedIndicator}" />
    </democommon:DemoControl.Options>
    <Grid>
        <syncfusion:SfChart
            x:Name="SfChart"
            Margin="10"
            IsManipulationEnabled="True"
            TechnicalIndicators="{Binding TechnicalIndicators}">

            <syncfusion:SfChart.Header>
                <TextBlock
                    Margin="0,0,0,7"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Seoge UI"
                    FontSize="18"
                    Text="Financial Analysis" />
            </syncfusion:SfChart.Header>

            <syncfusion:SfChart.PrimaryAxis>
                <syncfusion:CategoryAxis
                    AxisLineStyle="{StaticResource AxisStyle1}"
                    FontFamily="Seoge UI"
                    FontSize="16"
                    Header="Month"
                    LabelFormat="MMM"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}" />
            </syncfusion:SfChart.PrimaryAxis>

            <syncfusion:SfChart.SecondaryAxis>
                <syncfusion:NumericalAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    FontFamily="Seoge UI"
                    FontSize="16"
                    Header="Price in Dollars"
                    LabelFormat="$0"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    Maximum="900"
                    Minimum="100" />
            </syncfusion:SfChart.SecondaryAxis>

            <syncfusion:FastHiLoOpenCloseBitmapSeries
                x:Name="Series"
                Close="Last"
                High="High"
                Interior="#0BB4C2"
                ItemsSource="{Binding Datas}"
                Low="Low"
                Open="Open"
                XBindingPath="TimeStamp" />

        </syncfusion:SfChart>

    </Grid>
</democommon:DemoControl>
