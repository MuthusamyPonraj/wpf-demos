<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.HistogramChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:HistogramChartViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>

        <DataTemplate x:Key="headerTemplate">
            <TextBlock
                Margin="5"
                FontSize="16"
                Text="{Binding}" />
        </DataTemplate>

        <DataTemplate x:Key="labelTemplate">
            <TextBlock
                Margin="5"
                FontSize="14"
                Text="{Binding Path=LabelContent}" />
        </DataTemplate>

        <Style x:Key="majorTickLineStyle" TargetType="Line">
            <Setter Property="Stroke" Value=" #a9a9a9" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

        <Style x:Key="AxisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

    </democommon:DemoControl.Resources>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="AreaChart"
            Margin="10"
            HorizontalAlignment="Center">

            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,5,0,17"
                    FontFamily="Segoe UI"
                    FontSize="18">
                    Analysis of Average Call Handling Time
                </TextBlock>
            </chart:SfChart.Header>

            <chart:SfChart.PrimaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    Header="Minutes"
                    HeaderTemplate="{StaticResource headerTemplate}"
                    ShowGridLines="False"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource majorTickLineStyle}"
                    Maximum="45"
                    Minimum="0" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    Header="Frequency"
                    HeaderTemplate="{StaticResource headerTemplate}"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource majorTickLineStyle}"
                    Maximum="8"
                    Minimum="0" />
            </chart:SfChart.SecondaryAxis>

            <chart:HistogramSeries
                x:Name="histogramSeries"
                ColorModel="{StaticResource CustomColor}"
                EnableAnimation="True"
                HistogramInterval="5"
                ItemsSource="{Binding Product}"
                Palette="Custom"
                ShowTooltip="True"
                XBindingPath="Price"
                YBindingPath="Value">

                <chart:HistogramSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        AdornmentsPosition="TopAndBottom"
                        FontSize="14"
                        Foreground="White"
                        ShowLabel="True" />
                </chart:HistogramSeries.AdornmentsInfo>

            </chart:HistogramSeries>
        </chart:SfChart>
    </Grid>

</democommon:DemoControl>
