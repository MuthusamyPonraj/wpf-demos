<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.RealTimeChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:RealTimeChartViewModel x:Name="viewModel" />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>

        <Style x:Key="AxisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>
    </democommon:DemoControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="Chart"
            Margin="10"
            ColorModel="{StaticResource CustomColor}"
            Palette="Custom">

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    LabelFormat="hh:mm:ss"
                    MajorTickLineStyle="{StaticResource AxisStyle}">
                    <chart:ChartAxis.Header>
                        <TextBlock
                            Margin="10"
                            FontFamily="SegoeUI"
                            FontSize="16"
                            Text="Time" />
                    </chart:ChartAxis.Header>
                </chart:CategoryAxis>
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    Margin="1,0,0,0"
                    AxisLineStyle="{StaticResource AxisStyle}"
                    Interval="1"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    Maximum="1006"
                    Minimum="1000"
                    PlotOffset="0.5">
                    <chart:ChartAxis.Header>
                        <TextBlock
                            Margin="10"
                            FontFamily="SegoeUI"
                            FontSize="16"
                            Text="Value" />
                    </chart:ChartAxis.Header>
                </chart:NumericalAxis>
            </chart:SfChart.SecondaryAxis>

            <chart:FastLineBitmapSeries
                EnableAntiAliasing="True"
                ItemsSource="{Binding DynamicData}"
                Label="First"
                LegendIcon="SeriesType"
                StrokeThickness="2"
                XBindingPath="Date"
                YBindingPath="Value" />
            <chart:FastLineBitmapSeries
                EnableAntiAliasing="True"
                ItemsSource="{Binding DynamicData}"
                Label="Second"
                LegendIcon="SeriesType"
                StrokeThickness="2"
                XBindingPath="Date"
                YBindingPath="Value1" />
            <chart:FastLineBitmapSeries
                EnableAntiAliasing="True"
                ItemsSource="{Binding DynamicData}"
                Label="Third"
                LegendIcon="SeriesType"
                StrokeThickness="2"
                XBindingPath="Date"
                YBindingPath="Value2" />

        </chart:SfChart>
    </Grid>

</democommon:DemoControl>