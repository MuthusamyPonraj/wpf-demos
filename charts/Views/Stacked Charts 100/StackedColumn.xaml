<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.StackingColumn100ChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">
    <democommon:DemoControl.DataContext>
        <local:StackingColumnChartViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <DataTemplate x:Key="dataLabelTemplate">
            <Grid>
                <TextBlock
                    Margin="0,2,10,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoeui"
                    FontSize="20"
                    FontStretch="Expanded"
                    FontWeight="Light"
                    Foreground="White"
                    Text="{Binding}" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="labelTemplate">
            <TextBlock FontSize="14" Text="{Binding LabelContent}" />
        </DataTemplate>

        <Style x:Key="axisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

        <Style x:Key="axisStyle1" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="0.5" />
        </Style>

    </democommon:DemoControl.Resources>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="StackingColumn100Chart"
            Margin="10"
            ColorModel="{StaticResource CustomColor}"
            Palette="Custom">

            <chart:SfChart.Legend>
                <chart:ChartLegend
                    Margin="0,10,0,0"
                    DockPosition="Bottom"
                    FontFamily="Segoe UI"
                    FontSize="14" />
            </chart:SfChart.Legend>

            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,0,0,20"
                    FontFamily="Segoe UI"
                    FontSize="18">
                    Olympic Games Medal Details
                </TextBlock>
            </chart:SfChart.Header>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    AxisLineStyle="{StaticResource axisStyle1}"
                    FontSize="16"
                    Header="Country"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource axisStyle}" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource axisStyle}"
                    FontSize="16"
                    Header="Number of Medals (In percentage) "
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource axisStyle}" />
            </chart:SfChart.SecondaryAxis>

            <chart:StackingColumn100Series
                EnableAnimation="True"
                ItemsSource="{Binding MedalDetails}"
                Label="Gold"
                LegendIcon="SeriesType"
                XBindingPath="CountryName"
                YBindingPath="GoldMedals">
                <chart:StackingColumn100Series.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        AdornmentsPosition="TopAndBottom"
                        LabelTemplate="{StaticResource dataLabelTemplate}"
                        ShowLabel="True" />
                </chart:StackingColumn100Series.AdornmentsInfo>
            </chart:StackingColumn100Series>

            <chart:StackingColumn100Series
                EnableAnimation="True"
                ItemsSource="{Binding MedalDetails}"
                Label="Silver"
                LegendIcon="SeriesType"
                XBindingPath="CountryName"
                YBindingPath="SilverMedals">
                <chart:StackingColumn100Series.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        AdornmentsPosition="TopAndBottom"
                        LabelTemplate="{StaticResource dataLabelTemplate}"
                        ShowLabel="True" />
                </chart:StackingColumn100Series.AdornmentsInfo>
            </chart:StackingColumn100Series>

            <chart:StackingColumn100Series
                EnableAnimation="True"
                ItemsSource="{Binding MedalDetails}"
                Label="Bronze"
                LegendIcon="SeriesType"
                XBindingPath="CountryName"
                YBindingPath="BronzeMedals">
                <chart:StackingColumn100Series.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                        AdornmentsPosition="TopAndBottom"
                        LabelTemplate="{StaticResource dataLabelTemplate}"
                        ShowLabel="True" />
                </chart:StackingColumn100Series.AdornmentsInfo>
            </chart:StackingColumn100Series>

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
