<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.StackingLineChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:StackingLineChartViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <DataTemplate x:Key="adornment">
            <Grid>
                <Ellipse
                    Width="25"
                    Height="25"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Fill="#FFF4F4F5"
                    Stroke="#EE5A5A5A" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="legend">
            <StackPanel Orientation="Horizontal">
                <Grid Margin="20,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Rectangle
                        Width="10"
                        Height="10"
                        Fill="{Binding Interior}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        FontSize="12"
                        Text="{Binding Label}" />
                </Grid>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="labelTemplate">
            <TextBlock FontSize="13" Text="{Binding LabelContent}" />
        </DataTemplate>

        <Style x:Key="AxisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

    </democommon:DemoControl.Resources>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart
            x:Name="StackingLineChart"
            Margin="10"
            ColorModel="{StaticResource CustomColor}"
            Palette="Custom">

            <chart:SfChart.Header>
                <TextBlock
                    Margin="0,0,0,20"
                    FontFamily="Segoe UI"
                    FontSize="18">
                    Monthly expense of a family
                </TextBlock>
            </chart:SfChart.Header>

            <chart:SfChart.Legend>
                <chart:ChartLegend
                    Margin="0,10,0,0"
                    DockPosition="Bottom"
                    FontFamily="Segoe UI"
                    FontSize="14" />
            </chart:SfChart.Legend>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    LabelTemplate="{StaticResource labelTemplate}"
                    ShowGridLines="False"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    PlotOffset="50" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    Header="Expenses"
                    Interval="20"
                    LabelFormat="$0"
                    LabelTemplate="{StaticResource labelTemplate}"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    Maximum="200"
                    Minimum="0" />
            </chart:SfChart.SecondaryAxis>

            <chart:StackingLineSeries
                EnableAnimation="True"
                ItemsSource="{Binding MonthlyExpense}"
                Label="Daughter"
                ShowTooltip="True"
                XBindingPath="Name"
                YBindingPath="Daughter">
                <chart:StackingLineSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo ShowLabel="True" Symbol="Custom">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid IsHitTestVisible="False">
                                    <Ellipse
                                        Width="13"
                                        Height="13"
                                        Fill="#0BB4C2"
                                        Stroke="{Binding Background, ElementName=StackingLineChart}"
                                        StrokeThickness="3" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:StackingLineSeries.AdornmentsInfo>
            </chart:StackingLineSeries>

            <chart:StackingLineSeries
                EnableAnimation="True"
                ItemsSource="{Binding MonthlyExpense}"
                ShowTooltip="True"
                Label="Son"
                XBindingPath="Name"
                YBindingPath="Son">
                <chart:StackingLineSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo ShowLabel="True" Symbol="Custom">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid IsHitTestVisible="False">
                                    <Ellipse
                                        Width="13"
                                        Height="13"
                                        Fill="#874DAF"
                                        Stroke="{Binding Background, ElementName=StackingLineChart}"
                                        StrokeThickness="3" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:StackingLineSeries.AdornmentsInfo>
            </chart:StackingLineSeries>

            <chart:StackingLineSeries
                EnableAnimation="True"
                ItemsSource="{Binding MonthlyExpense}"
                ShowTooltip="True"
                Label="Mother"
                XBindingPath="Name"
                YBindingPath="Mother">
                <chart:StackingLineSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo ShowLabel="True" Symbol="Custom">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid IsHitTestVisible="False">
                                    <Ellipse
                                        Width="13"
                                        Height="13"
                                        Fill="#DE4383"
                                        Stroke="{Binding Background, ElementName=StackingLineChart}"
                                        StrokeThickness="3" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:StackingLineSeries.AdornmentsInfo>
            </chart:StackingLineSeries>

            <chart:StackingLineSeries
                EnableAnimation="True"
                ItemsSource="{Binding MonthlyExpense}"
                ShowTooltip="True"
                Label="Father"
                XBindingPath="Name"
                YBindingPath="Father">
                <chart:StackingLineSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo ShowLabel="True" Symbol="Custom">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <Grid IsHitTestVisible="False">
                                    <Ellipse
                                        Width="13"
                                        Height="13"
                                        Fill="#EFBB4B"
                                        Stroke="{Binding Background, ElementName=StackingLineChart}"
                                        StrokeThickness="3" />
                                </Grid>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:StackingLineSeries.AdornmentsInfo>
            </chart:StackingLineSeries>

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
