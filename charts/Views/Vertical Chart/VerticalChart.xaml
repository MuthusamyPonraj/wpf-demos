<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.VerticalChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="http://schemas.syncfusion.com/wpf"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:MeasurementDetails x:Name="viewModel" />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <Style x:Key="AxisStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGray" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>
    </democommon:DemoControl.Resources>

    <Grid x:Name="grid">
        <chart:SfChart
            x:Name="chart"
            Margin="10"
            AreaBorderThickness="0,1,1,0"
            FontFamily="Segoe UI"
            FontSize="18"
            Header="Seismograph comparison of two countries">

            <chart:SfChart.ColumnDefinitions>
                <chart:ChartColumnDefinition />
                <chart:ChartColumnDefinition Width="0.1" />
                <chart:ChartColumnDefinition />
            </chart:SfChart.ColumnDefinitions>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis
                    x:Name="axis"
                    AxisLineStyle="{StaticResource AxisStyle}"
                    FontFamily="Segoe UI"
                    Header="Time(sec)"
                    LabelFormat="mm:ss"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    ShowGridLines="False" />
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.Legend>
                <chart:ChartLegend />
            </chart:SfChart.Legend>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    AxisLineStyle="{StaticResource AxisStyle}"
                    Header="Velocity(m/s)"
                    MajorTickLineStyle="{StaticResource AxisStyle}"
                    Maximum="15"
                    Minimum="-15"
                    ShowGridLines="False" />
            </chart:SfChart.SecondaryAxis>

            <chart:FastLineSeries
                x:Name="series1"
                chart:SfChart.Column="0"
                Interior="#0BB4C2"
                IsTransposed="True"
                ItemsSource="{Binding}"
                Label="Indonesia"
                StrokeThickness="1"
                XBindingPath="Time"
                YBindingPath="Velocity1" />
            <chart:FastLineSeries
                chart:SfChart.Column="1"
                Interior="#874DAF"
                IsTransposed="True"
                ItemsSource="{Binding}"
                Label="Japan"
                StrokeThickness="1"
                XBindingPath="Time"
                YBindingPath="Velocity2">
                <chart:FastLineSeries.YAxis>
                    <chart:NumericalAxis
                        chart:SfChart.Column="2"
                        AxisLineStyle="{StaticResource AxisStyle}"
                        FontFamily="Segoe UI"
                        Header="Velocity(m/s)"
                        MajorTickLineStyle="{StaticResource AxisStyle}"
                        Maximum="15"
                        Minimum="-15"
                        ShowGridLines="False" />
                </chart:FastLineSeries.YAxis>
            </chart:FastLineSeries>

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
