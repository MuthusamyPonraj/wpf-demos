    <Style TargetType="{x:Type local:SearchControl}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="#FFE5E5E5" />
        <Setter Property="BorderBrush" Value="#FFACACAC" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SearchControl}">
                    <AdornerDecorator
                        x:Name="PART_AdornerLayer"
                        Margin="0,30,17,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        KeyboardNavigation.TabNavigation="Cycle">
                        <Border
                            Background="#f2f2f2"
                            BorderBrush="#d5d5d4"
                            BorderThickness="3,1,1,3">
                            <Grid Margin="10,0,10,06">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10" />
                                    <RowDefinition />
                                    <RowDefinition Height="10" />
                                    <RowDefinition />
                                    <RowDefinition Height="10" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="30" />
                                </Grid.ColumnDefinitions>
                                <TextBox
                                    x:Name="PART_TextBox"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Width="140"
                                    Height="20"
                                    BorderBrush="#d1d2d2" />
                                <Button
                                    x:Name="PART_FindPrevious"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Width="20"
                                    Height="20"
                                    Style="{DynamicResource FindPreviousButtonStyle}" />
                                <Button
                                    x:Name="PART_FindNext"
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Width="20"
                                    Height="20"
                                    Style="{DynamicResource FindNextButtonStyle}" />
                                <Button
                                    x:Name="PART_Close"
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    Style="{StaticResource CloseButtonStyle}" />
                                <Grid Grid.Row="3" Grid.ColumnSpan="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <CheckBox
                                        x:Name="PART_ApplyFiltering"
                                        Grid.Column="0"
                                        HorizontalAlignment="Left"
                                        Content="Apply filters"
                                        IsChecked="False" />
                                    <CheckBox
                                        x:Name="PART_CaseSensitiveSearch"
                                        Grid.Column="1"
                                        HorizontalAlignment="Left"
                                        Content="Match case"
                                        IsChecked="False" />
                                </Grid>
                                <Grid Grid.Row="5" Grid.ColumnSpan="4">
                                    <ComboBox
                                        x:Name="PART_ComboBox"
                                        Height="25"
                                        BorderBrush="#d1d2d2"
                                        ItemsSource="{Binding SearchComboBoxItems}"
                                        SelectedIndex="0" />
                                </Grid>
                            </Grid>
                        </Border>
                    </AdornerDecorator>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
