<democommon:DemoControl
    x:Class="syncfusion.editordemos.wpf.ColorEditDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.editordemos.wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Width="Auto"
    Height="Auto"
    FontFamily="Calibri"
    mc:Ignorable="d">

    <democommon:DemoControl.DataContext>
        <local:ColorEditViewModel />
    </democommon:DemoControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Margin="4">
            <Grid Name="InnerGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <syncfusion:ColorEdit
                        x:Name="ColorEdit1"
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        MaxWidth="400"
                        Brush="{Binding Brush1, Mode=TwoWay}"
                        EnableToolTip="True"
                        InvertColor="{Binding InvertColor1, Mode=TwoWay}" />
                    <TextBlock
                        Name="header1"
                        Grid.ColumnSpan="2"
                        Margin="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontWeight="SemiBold"
                        Text="Default"
                        TextAlignment="Center" />
                    <TextBlock
                        Name="textblock1"
                        Grid.Row="1"
                        Width="110"
                        Height="110"
                        Margin="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{Binding Brush1}"
                        FontSize="70"
                        Text="a"
                        TextAlignment="Center">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding InvertColor1}" />
                        </TextBlock.Foreground>
                    </TextBlock>
                </Grid>

                <Grid
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <syncfusion:ColorEdit
                        x:Name="ColorEdit2"
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        MaxWidth="400"
                        Margin="10"
                        Brush="{Binding Brush2, Mode=TwoWay}"
                        BrushMode="Solid"
                        EnableToolTip="True"
                        InvertColor="{Binding InvertColor2, Mode=TwoWay}"
                        IsGradientPropertyEnabled="False" />
                    <TextBlock
                        Name="header2"
                        Grid.ColumnSpan="2"
                        Margin="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontWeight="SemiBold"
                        Text="Solid Color Editor"
                        TextAlignment="Center" />
                    <TextBlock
                        Name="textblock2"
                        Grid.Row="1"
                        Width="110"
                        Height="110"
                        Margin="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{Binding Brush2}"
                        FontSize="70"
                        Text="a"
                        TextAlignment="Center">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding InvertColor2}" />
                        </TextBlock.Foreground>
                    </TextBlock>
                </Grid>

                <Grid
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <syncfusion:ColorEdit
                        x:Name="ColorEdit3"
                        Grid.Row="1"
                        Grid.Column="1"
                        MaxWidth="400"
                        Margin="10"
                        Brush="{Binding Brush3, Mode=TwoWay}"
                        BrushMode="Gradient"
                        EnableToolTip="True"
                        GradientPropertyEditorMode="Extended"
                        InvertColor="{Binding InvertColor3, Mode=TwoWay}" />
                    <TextBlock
                        Name="header3"
                        Grid.ColumnSpan="2"
                        Margin="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontWeight="SemiBold"
                        Text="LinearGradient Color Editor"
                        TextAlignment="Center" />
                    <TextBlock
                        Name="textblock3"
                        Grid.Row="1"
                        Width="110"
                        Height="110"
                        Margin="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{Binding Brush3}"
                        FontSize="70"
                        Text="a"
                        TextAlignment="Center">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding InvertColor3}" />
                        </TextBlock.Foreground>
                    </TextBlock>
                </Grid>

                <Grid
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <syncfusion:ColorEdit
                        x:Name="ColorEdit4"
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        MaxWidth="400"
                        Margin="10"
                        Brush="{Binding Brush4, Mode=TwoWay}"
                        BrushMode="Gradient"
                        EnableToolTip="True"
                        InvertColor="{Binding InvertColor4, Mode=TwoWay}" />
                    <TextBlock
                        Name="header4"
                        Grid.ColumnSpan="2"
                        Margin="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontWeight="SemiBold"
                        Text="RadialGradient Color Editor"
                        TextAlignment="Center" />
                    <TextBlock
                        Name="textblock4"
                        Grid.Row="1"
                        Width="110"
                        Height="110"
                        Margin="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Background="{Binding Brush4}"
                        FontSize="70"
                        Text="a"
                        TextAlignment="Center">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding InvertColor4}" />
                        </TextBlock.Foreground>
                    </TextBlock>
                </Grid>
            </Grid>
        </Border>
    </ScrollViewer>

</democommon:DemoControl>
