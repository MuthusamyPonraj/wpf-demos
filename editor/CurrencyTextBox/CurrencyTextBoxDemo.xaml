<democommon:DemoControl
    x:Class="syncfusion.editordemos.wpf.CurrencyTextBoxDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:numberformat="clr-namespace:System.Globalization;assembly=mscorlib"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ScrollViewer
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        VerticalScrollBarVisibility="Auto">
        <WrapPanel>
            <StackPanel Margin="20">
                <Label
                    Margin="10"
                    Content="Custom Number Format"
                    FontWeight="DemiBold" />
                <syncfusion:CurrencyTextBox
                    Width="250"
                    Margin="10"
                    Value="1234567">
                    <syncfusion:CurrencyTextBox.NumberFormat>
                        <numberformat:NumberFormatInfo
                            CurrencyDecimalDigits="2"
                            CurrencyDecimalSeparator=","
                            CurrencyGroupSeparator=" "
                            CurrencySymbol="$" />
                    </syncfusion:CurrencyTextBox.NumberFormat>
                </syncfusion:CurrencyTextBox>
            </StackPanel>

            <StackPanel Margin="20">
                <Label
                    Margin="10"
                    Content="Extended Scrolling (Click and Drag)"
                    FontWeight="DemiBold" />
                <syncfusion:CurrencyTextBox
                    Width="250"
                    Margin="10"
                    EnableExtendedScrolling="True"
                    Value="1234567" />
            </StackPanel>

            <StackPanel Margin="20">
                <Label
                    Margin="10"
                    Content="Culture (French)"
                    FontWeight="DemiBold" />
                <syncfusion:CurrencyTextBox
                    Width="250"
                    Margin="10"
                    Culture="fr-FR"
                    Value="1234567" />
            </StackPanel>

            <StackPanel Margin="20">
                <Label
                    Margin="10"
                    Content="Watermark"
                    FontWeight="DemiBold" />
                <syncfusion:CurrencyTextBox
                    Width="250"
                    Margin="10"
                    UseNullOption="True"
                    WatermarkText="Type Here"
                    WatermarkTextIsVisible="True" />
            </StackPanel>

            <StackPanel Margin="20">
                <Label
                    Margin="10"
                    Content="Right To Left"
                    FontWeight="DemiBold" />
                <syncfusion:CurrencyTextBox
                    Width="250"
                    Margin="10"
                    FlowDirection="RightToLeft"
                    Value="1234567" />
            </StackPanel>

            <StackPanel Margin="20">
                <Label
                    Margin="10"
                    Content="Range Adorner"
                    FontWeight="DemiBold" />
                <syncfusion:CurrencyTextBox
                    Width="250"
                    Margin="10"
                    EnableRangeAdorner="True"
                    MaxValue="100"
                    MinValue="0"
                    Value="40" />
            </StackPanel>

            <StackPanel Margin="20">
                <Label
                    Margin="10"
                    Content="Positive Pattern"
                    FontWeight="DemiBold" />
                <syncfusion:CurrencyTextBox
                    Width="250"
                    Margin="10"
                    CurrencyPositivePattern="2"
                    Value="1234567" />
            </StackPanel>

            <StackPanel Margin="20">
                <Label
                    Margin="10"
                    Content="Negative Pattern"
                    FontWeight="DemiBold" />
                <syncfusion:CurrencyTextBox
                    Width="250"
                    Margin="10"
                    CurrencyNegativePattern="12"
                    Value="-1234567" />
            </StackPanel>

            <StackPanel Margin="20">
                <Label
                    Margin="10"
                    Content="Read Only"
                    FontWeight="DemiBold" />
                <syncfusion:CurrencyTextBox
                    Width="250"
                    Margin="10"
                    IsReadOnly="True"
                    Value="1234567" />
            </StackPanel>
        </WrapPanel>
    </ScrollViewer>
</democommon:DemoControl>
