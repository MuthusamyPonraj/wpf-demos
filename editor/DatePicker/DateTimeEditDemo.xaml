<democommon:DemoControl
    x:Class="syncfusion.editordemos.wpf.DateTimeEditDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.editordemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    FontFamily="Calibri"
    FontSize="13">

    <i:Interaction.Behaviors>
        <local:DateTimeEditBehavior />
    </i:Interaction.Behaviors>

    <democommon:DemoControl.DataContext>
        <local:DateTimeEditViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Options>
        <Grid
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="2"
                Grid.Column="0"
                Margin="5"
                VerticalAlignment="Center"
                Content="Pattern"
                FontWeight="Normal"
                IsEnabled="{Binding EnablePattern}" />

            <ComboBox
                Name="cmbopattern"
                Grid.Row="2"
                Grid.Column="1"
                Width="80"
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontWeight="Normal"
                IsEnabled="{Binding EnablePattern}"
                SelectedItem="{Binding Pattern, Mode=TwoWay}">
                <syncfusion:DateTimePattern>ShortDate</syncfusion:DateTimePattern>
                <syncfusion:DateTimePattern>LongDate</syncfusion:DateTimePattern>
                <syncfusion:DateTimePattern>ShortTime</syncfusion:DateTimePattern>
                <syncfusion:DateTimePattern>LongTime</syncfusion:DateTimePattern>
                <syncfusion:DateTimePattern>FullDateTime</syncfusion:DateTimePattern>
                <syncfusion:DateTimePattern>MonthDay</syncfusion:DateTimePattern>
                <syncfusion:DateTimePattern>RFC1123</syncfusion:DateTimePattern>
                <syncfusion:DateTimePattern>SortableDateTime</syncfusion:DateTimePattern>
                <syncfusion:DateTimePattern>YearMonth</syncfusion:DateTimePattern>
            </ComboBox>

            <Label
                Grid.Row="3"
                Grid.Column="0"
                Margin="5"
                VerticalAlignment="Center"
                Content="Culture"
                FontWeight="Normal"
                IsEnabled="{Binding EnableCulture}" />

            <ComboBox
                Name="comboculture"
                Grid.Row="3"
                Grid.Column="1"
                Width="80"
                Margin="3"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontWeight="Normal"
                IsEnabled="{Binding EnableCulture}"
                SelectedItem="{Binding DateTimeCulture, Mode=TwoWay}">
                <system:String>uk-UA</system:String>
                <system:String>vi-VN</system:String>
                <system:String>sq-AL</system:String>
                <system:String>en-US</system:String>
                <system:String>mn-MN</system:String>
                <system:String>is-IS</system:String>
                <system:String>ar-SA</system:String>
                <system:String>he-IL</system:String>
            </ComboBox>

            <Label
                Grid.Row="4"
                Grid.Column="0"
                Margin="5"
                VerticalAlignment="Center"
                Content="Min Date"
                FontWeight="Normal"
                IsEnabled="{Binding EnableMinMax}" />

            <syncfusion:DateTimeEdit
                x:Name="minDateTime"
                Grid.Row="4"
                Grid.Column="1"
                Margin="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                DateTime="{Binding MinimumValue, Mode=TwoWay}"
                FontSize="12"
                FontWeight="Normal"
                IsEnabled="{Binding EnableMinMax}"
                TextAlignment="Left" />

            <Label
                Grid.Row="5"
                Grid.Column="0"
                Margin="5"
                VerticalAlignment="Center"
                Content="Max Date"
                FontWeight="Normal"
                IsEnabled="{Binding EnableMinMax}" />

            <syncfusion:DateTimeEdit
                x:Name="maxDateTime"
                Grid.Row="5"
                Grid.Column="1"
                Margin="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                DateTime="{Binding MaximumValue, Mode=TwoWay}"
                FontSize="12"
                FontWeight="Normal"
                IsEnabled="{Binding EnableMinMax}" />
        </Grid>
    </democommon:DemoControl.Options>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid
                Width="Auto"
                Height="Auto"
                Margin="30,0,0,0">
                <Grid x:Name="grid1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="0.5*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="column1" Width="*" />
                        <ColumnDefinition x:Name="column2" Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid
                        x:Name="gridDT1"
                        Grid.Row="1"
                        HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Edit Mode" />
                        <syncfusion:DateTimeEdit
                            Name="canEditDT"
                            Grid.Row="1"
                            Width="300"
                            Height="20"
                            HorizontalAlignment="Left"
                            CanEdit="True"
                            Pattern="FullDateTime"
                            ShowMaskOnNullValue="False" />
                    </Grid>
                    <Grid Grid.Row="3" HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Display only RepeatButton" />
                        <syncfusion:DateTimeEdit
                            Name="repeatButtonDT"
                            Grid.Row="2"
                            Width="300"
                            Height="20"
                            HorizontalAlignment="Left"
                            IsButtonPopUpEnabled="False"
                            IsVisibleRepeatButton="True"
                            ShowMaskOnNullValue="False" />
                    </Grid>
                    <Grid Grid.Row="5" HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Min and Max date validation" />
                        <syncfusion:DateTimeEdit
                            Name="validationDT"
                            Grid.Row="2"
                            Width="300"
                            Height="20"
                            MaxDateTime="{Binding MaximumValue}"
                            MinDateTime="{Binding MinimumValue}" />
                    </Grid>
                    <Grid Grid.Row="7" HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Disable value change on mouse scroll" />
                        <syncfusion:DateTimeEdit
                            Name="scrollingOnCircleDT"
                            Grid.Row="2"
                            Width="300"
                            Height="20"
                            DateTime="{Binding Value, Mode=TwoWay}"
                            EnableMouseWheelEdit="False" />
                    </Grid>
                    <Grid Grid.Row="9" HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Pattern" />
                        <syncfusion:DateTimeEdit
                            Name="patternDT"
                            Grid.Row="2"
                            Width="300"
                            Height="20"
                            Pattern="{Binding Pattern}"
                            ShowMaskOnNullValue="False" />
                    </Grid>
                    <Grid
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Read Only Mode" />
                        <syncfusion:DateTimeEdit
                            Name="readOnlyDT"
                            Grid.Row="2"
                            Width="300"
                            Height="20"
                            HorizontalAlignment="Left"
                            IsReadOnly="True"
                            ShowMaskOnNullValue="False" />
                    </Grid>
                    <Grid
                        Grid.Row="3"
                        Grid.Column="1"
                        HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Month and Year Selection" />
                        <syncfusion:DateTimeEdit
                            Name="disableDateSelectionDT"
                            Grid.Row="2"
                            Width="300"
                            Height="20"
                            DisableDateSelection="True"
                            Pattern="YearMonth"
                            ShowMaskOnNullValue="False" />
                    </Grid>
                    <Grid
                        Grid.Row="5"
                        Grid.Column="1"
                        HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Black out dates" />
                        <syncfusion:DateTimeEdit
                            Name="blackOutDates"
                            Grid.Row="2"
                            Width="300"
                            Height="20"
                            HorizontalAlignment="Left"
                            ShowMaskOnNullValue="False" />
                    </Grid>
                    <Grid
                        Grid.Row="7"
                        Grid.Column="1"
                        HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Allow Null" />
                        <syncfusion:DateTimeEdit
                            Name="allowNullDT"
                            Grid.Row="2"
                            Width="300"
                            Height="20"
                            HorizontalAlignment="Left"
                            IsEmptyDateEnabled="True"
                            NoneDateText="Enter Value"
                            ShowMaskOnNullValue="False" />
                    </Grid>
                    <Grid
                        Grid.Row="9"
                        Grid.Column="1"
                        HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Culture" />
                        <syncfusion:DateTimeEdit
                            Name="cultureDT"
                            Grid.Row="2"
                            Width="300"
                            Height="20"
                            HorizontalAlignment="Left"
                            CultureInfo="{Binding DateTimeCulture}"
                            Pattern="LongDate"
                            ShowMaskOnNullValue="False" />
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</democommon:DemoControl>
