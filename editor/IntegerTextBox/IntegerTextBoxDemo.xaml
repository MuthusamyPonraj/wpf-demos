<democommon:DemoControl
    x:Class="syncfusion.editordemos.wpf.IntegerTextBoxDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:numberformat="clr-namespace:System.Globalization;assembly=mscorlib"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Margin="20">
            <Label
                Margin="10"
                Content="Custom Number Format"
                FontWeight="DemiBold" />
            <syncfusion:IntegerTextBox
                Width="250"
                Margin="10"
                Value="1234567">
                <syncfusion:IntegerTextBox.NumberFormat>
                    <numberformat:NumberFormatInfo NumberGroupSeparator=" " />
                </syncfusion:IntegerTextBox.NumberFormat>
            </syncfusion:IntegerTextBox>
        </StackPanel>

        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Margin="20">
            <Label
                Margin="10"
                Content="Extended Scrolling (Click and Drag)"
                FontWeight="DemiBold" />
            <syncfusion:IntegerTextBox
                Width="250"
                Margin="10"
                EnableExtendedScrolling="True"
                Value="1234567" />
        </StackPanel>

        <StackPanel
            Grid.Row="0"
            Grid.Column="2"
            Margin="20">
            <Label
                Margin="10"
                Padding="0"
                HorizontalAlignment="Left"
                Content="Culture (French)"
                FontWeight="DemiBold" />
            <syncfusion:IntegerTextBox
                Width="250"
                Margin="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Culture="fr-FR"
                Value="1234567" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Margin="20">
            <Label
                Margin="10"
                Content="Watermark"
                FontWeight="DemiBold" />
            <syncfusion:IntegerTextBox
                Width="250"
                Margin="10"
                UseNullOption="True"
                WatermarkText="Type Here"
                WatermarkTextIsVisible="True" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Margin="20">
            <Label
                Margin="10"
                Content="Right To Left"
                FontWeight="DemiBold" />
            <syncfusion:IntegerTextBox
                Width="250"
                Margin="10"
                FlowDirection="RightToLeft"
                Value="1234567" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.Column="2"
            Margin="20">
            <Label
                Margin="10"
                Content="Range Adorner"
                FontWeight="DemiBold" />
            <syncfusion:IntegerTextBox
                Width="250"
                Margin="10"
                EnableRangeAdorner="True"
                MaxValue="100"
                MinValue="0"
                Value="40" />
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            Margin="20">
            <Label
                Margin="10"
                Content="Read Only"
                FontWeight="DemiBold" />
            <syncfusion:IntegerTextBox
                Width="250"
                Margin="10"
                IsReadOnly="True"
                Value="1234567" />
        </StackPanel>
    </Grid>
</democommon:DemoControl>