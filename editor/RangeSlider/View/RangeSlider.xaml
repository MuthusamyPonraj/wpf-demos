<democommon:DemoControl
    x:Class="syncfusion.editordemos.wpf.RangeSliderDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.editordemos.wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    OptionsSize="250"
    OptionsTitle="PROPERTIES"
    mc:Ignorable="d">

    <democommon:DemoControl.DataContext>
        <local:RangeSliderViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <democommon:EnumDisplayNameConverter x:Key="EnumDisplayNameConverter" />
    </democommon:DemoControl.Resources>

    <democommon:DemoControl.Options>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel>
                <Grid
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,10,0,0"
                        FontWeight="Bold"
                        Text="Value Placement" />
                    <ComboBox
                        Name="valuePlacement"
                        Grid.Row="1"
                        Margin="0,10,0,0"
                        ItemsSource="{democommon:EnumValuesExtension Type=syncfusion:ValuePlacement}"
                        SelectedItem="{Binding ValuePlacement, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumDisplayNameConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock
                        Grid.Row="2"
                        Margin="0,15,0,0"
                        FontWeight="Bold"
                        Text="Tick Placement" />
                    <ComboBox
                        Name="tickPlacement"
                        Grid.Row="3"
                        Margin="0,10,0,0"
                        ItemsSource="{democommon:EnumValuesExtension Type=syncfusion:TickPlacement}"
                        SelectedItem="{Binding TickPlacement, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumDisplayNameConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock
                        Grid.Row="4"
                        Margin="0,15,0,0"
                        FontWeight="Bold"
                        Text="Snaps To" />
                    <ComboBox
                        x:Name="snapsTo"
                        Grid.Row="5"
                        Margin="0,10,0,0"
                        ItemsSource="{democommon:EnumValuesExtension Type=syncfusion:SliderSnapsTo}"
                        SelectedItem="{Binding SnapsTo, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumDisplayNameConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>
            </WrapPanel>
        </ScrollViewer>
    </democommon:DemoControl.Options>

    <Grid VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Grid Grid.Row="1" Margin="40,20,100,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    x:Name="Text"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="{Binding ElementName=range, Path=Value}"
                    Text="Hello world" />
                <syncfusion:SfRangeSlider
                    x:Name="range"
                    Grid.Row="1"
                    LabelPlacement="BottomRight"
                    Maximum="17"
                    Minimum="2"
                    Orientation="Horizontal"
                    ShowCustomLabels="True"
                    ShowRange="False"
                    ShowValueLabels="True"
                    SnapsTo="{Binding SnapsTo, Mode=TwoWay}"
                    TickFrequency="3"
                    TickPlacement="{Binding TickPlacement, Mode=TwoWay}"
                    ValuePlacement="{Binding ValuePlacement, Mode=TwoWay}"
                    Value="16" />
            </Grid>
        </Grid>
        <Grid
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Grid Grid.Row="1" Margin="40,20,100,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock FontSize="20" Text="Select price range from " />
                    <TextBlock FontSize="20" Text="{Binding ElementName=rangeslider, StringFormat=N0, Path=RangeStart}" />
                    <TextBlock FontSize="20" Text=" to " />
                    <TextBlock FontSize="20" Text="{Binding ElementName=rangeslider, StringFormat=N0, Path=RangeEnd}" />
                </StackPanel>
                <syncfusion:SfRangeSlider
                    Name="rangeslider"
                    Grid.Row="1"
                    AllowRangeDrag="True"
                    CustomLabels="{Binding CustomCollection}"
                    LabelPlacement="TopLeft"
                    Maximum="100"
                    Minimum="0"
                    Orientation="Horizontal"
                    RangeEnd="{Binding EndValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    RangeStart="{Binding StartValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ShowRange="True"
                    ShowValueLabels="True"
                    SnapsTo="{Binding SnapsTo, Mode=TwoWay}"
                    StepFrequency="5"
                    ThumbToolTipPlacement="TopLeft"
                    TickFrequency="10"
                    TickLength="5"
                    TickPlacement="{Binding TickPlacement, Mode=TwoWay}"
                    ValuePlacement="{Binding ValuePlacement, Mode=TwoWay}" />
            </Grid>
        </Grid>
    </Grid>
</democommon:DemoControl>
