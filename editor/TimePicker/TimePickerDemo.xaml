<democommon:DemoControl
    x:Class="syncfusion.editordemos.wpf.TimePickerDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.editordemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">

    <democommon:DemoControl.DataContext>
        <local:TimePickerViewModel />
    </democommon:DemoControl.DataContext>

    <Grid
        Margin="30,0,0,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" />
            <ColumnDefinition Width="230" />
            <ColumnDefinition Width="230" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            FontWeight="SemiBold"
            Text="Time Picker" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            FontWeight="SemiBold"
            Text="Time Picker (Freeform Editing)" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            Margin="5"
            FontWeight="SemiBold"
            Text="Time Picker (No Dropdown)" />

        <syncfusion:SfTimePicker
            Name="default"
            Grid.Row="1"
            Grid.Column="0"
            Width="150"
            Margin="5,5,5,50"
            HorizontalAlignment="Left"
            SetValueOnLostFocus="True" />
        <syncfusion:SfTimePicker
            Grid.Row="1"
            Grid.Column="1"
            Width="150"
            Margin="5,5,5,50"
            HorizontalAlignment="Left"
            AllowInlineEditing="True" />
        <syncfusion:SfTimePicker
            Grid.Row="1"
            Grid.Column="3"
            Width="150"
            Margin="5,5,5,50"
            HorizontalAlignment="Left"
            ShowDropDownButton="False" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="5"
            FontWeight="SemiBold"
            Text="Accept Null Value" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Margin="5"
            FontWeight="SemiBold"
            Text="Watermark" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="2"
            Margin="5"
            FontWeight="SemiBold"
            Text="Readonly" />

        <syncfusion:SfTimePicker
            Grid.Row="3"
            Grid.Column="0"
            Width="150"
            Margin="5,5,5,50"
            HorizontalAlignment="Left"
            AllowNull="True"
            Value="{x:Null}" />
        <syncfusion:SfTimePicker
            Grid.Row="3"
            Grid.Column="1"
            Width="150"
            Margin="5,5,5,50"
            HorizontalAlignment="Left"
            AllowNull="True"
            Value="{x:Null}">
            <syncfusion:SfTimePicker.WatermarkTemplate>
                <DataTemplate>
                    <TextBlock
                        FontStyle="Italic"
                        Foreground="DimGray"
                        Text="Set alarm" />
                </DataTemplate>
            </syncfusion:SfTimePicker.WatermarkTemplate>
        </syncfusion:SfTimePicker>
        <syncfusion:SfTimePicker
            Grid.Row="3"
            Grid.Column="2"
            Width="150"
            Margin="5,5,5,50"
            HorizontalAlignment="Left"
            IsEnabled="False" />

        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="5"
            FontWeight="SemiBold"
            Text="Time Range (9:00 to 18:00)" />
        <TextBlock
            Grid.Row="4"
            Grid.Column="1"
            Margin="5"
            FontWeight="SemiBold"
            Text="Value and Selector Formatting" />
        <TextBlock
            Grid.Row="4"
            Grid.Column="2"
            Margin="5"
            FontWeight="SemiBold"
            Text="Dropdown Height" />

        <syncfusion:SfTimePicker
            Grid.Row="5"
            Grid.Column="0"
            Width="150"
            Margin="5,5,5,50"
            HorizontalAlignment="Left"
            MaxTime="{Binding MaxTime}"
            MinTime="{Binding MinTime}"
            SelectorFormatString="HH/MM/SS" />
        <syncfusion:SfTimePicker
            Grid.Row="5"
            Grid.Column="1"
            Width="150"
            Margin="5,5,5,50"
            HorizontalAlignment="Left"
            FormatString="HH':'mm"
            SelectorFormatString="HH/mm/tt" />
        <syncfusion:SfTimePicker
            Grid.Row="5"
            Grid.Column="2"
            Width="150"
            Margin="5,5,5,50"
            HorizontalAlignment="Left"
            DropDownHeight="160" />
    </Grid>
</democommon:DemoControl>
