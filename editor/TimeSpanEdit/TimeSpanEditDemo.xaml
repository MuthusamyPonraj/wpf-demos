<democommon:DemoControl
    x:Class="syncfusion.editordemos.wpf.TimeSpanEditDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.editordemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    FontFamily="Calibri"
    FontSize="13"
    OptionsSize="400">

    <democommon:DemoControl.DataContext>
        <local:TimeSpanEditViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Options>
        <Grid
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!--  Validation  -->
            <TextBlock
                Grid.ColumnSpan="2"
                Margin="3"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="Validation" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="3"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontWeight="Normal"
                Text="Minimum Value" />
            <syncfusion:TimeSpanEdit
                x:Name="mintimespanedit"
                Grid.Row="1"
                Grid.Column="1"
                Width="180"
                Margin="3"
                VerticalAlignment="Center"
                FontSize="12"
                FontWeight="Normal"
                Format="{Binding Format}"
                TextAlignment="Left"
                Value="{Binding MinimumValue, Mode=TwoWay}" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Margin="3"
                VerticalAlignment="Center"
                FontWeight="Normal"
                Text="Maximum Value" />
            <syncfusion:TimeSpanEdit
                x:Name="maxtimespanedit"
                Grid.Row="2"
                Grid.Column="1"
                Width="180"
                Margin="3"
                VerticalAlignment="Center"
                FontSize="12"
                FontWeight="Normal"
                Format="{Binding Format}"
                Value="{Binding MaximumValue, Mode=TwoWay}" />

            <!--  Format  -->
            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Margin="3,15,3,3"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="Format" />
            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                Margin="3"
                VerticalAlignment="Center"
                FontWeight="Normal"
                Text="Format" />
            <ComboBox
                Name="txtformat"
                Grid.Row="4"
                Grid.Column="1"
                MaxWidth="180"
                Margin="3"
                VerticalAlignment="Center"
                FontWeight="Normal"
                SelectedItem="{Binding Format, Mode=TwoWay}">
                <system:String>d 'Days' h 'Hours' m 'Minutes'</system:String>
                <system:String>d.h:m:s</system:String>
            </ComboBox>

            <!--  Others  -->
            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                Margin="3,15,3,3"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="Others" />
            <TextBlock
                Grid.Row="6"
                Grid.Column="0"
                Margin="3"
                FontWeight="Normal"
                Text="Show ArrowButtons" />
            <CheckBox
                Name="chkarrowvisibility"
                Grid.Row="6"
                Grid.Column="1"
                Margin="3"
                VerticalAlignment="Center"
                IsChecked="{Binding ShowArrowButtons, Mode=TwoWay}" />

            <TextBlock
                Grid.Row="8"
                Grid.Column="0"
                Margin="3"
                VerticalAlignment="Center"
                FontWeight="Normal"
                Text="Increment On Scrolling" />
            <CheckBox
                Name="chkscrolling"
                Grid.Row="8"
                Grid.Column="1"
                Margin="3"
                VerticalAlignment="Center"
                IsChecked="{Binding IncrementOnScrolling, Mode=TwoWay}" />


            <!--  Null Value  -->
            <TextBlock
                Grid.Row="9"
                Grid.Column="0"
                Margin="3,15,3,3"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="NullValue Support" />
            <TextBlock
                Grid.Row="10"
                Grid.Column="0"
                Margin="3"
                VerticalAlignment="Center"
                FontWeight="Normal"
                Text="Allow Null" />
            <CheckBox
                Name="chkallownull"
                Grid.Row="10"
                Grid.Column="1"
                Margin="3"
                VerticalAlignment="Center"
                IsChecked="{Binding AllowNull, Mode=TwoWay}" />

            <TextBlock
                Grid.Row="11"
                Grid.Column="0"
                Margin="3"
                VerticalAlignment="Center"
                FontWeight="Normal"
                Text="Null String" />
            <TextBox
                Name="txtnullstring"
                Grid.Row="11"
                Grid.Column="1"
                MaxWidth="180"
                Margin="3"
                VerticalAlignment="Center"
                FontWeight="Normal"
                Text="{Binding NullString, Mode=TwoWay}" />
            <Button
                Name="btnSetNull"
                Grid.Row="12"
                Margin="3"
                VerticalAlignment="Center"
                Command="{Binding SetNullValueCommand}"
                Content="Set Null Value"
                FontWeight="Normal" />
        </Grid>
    </democommon:DemoControl.Options>

    <Grid
        Margin="0,0,0,50"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <syncfusion:TimeSpanEdit
            Name="myTimeSpanEdit"
            Width="180"
            Height="23"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            AllowNull="{Binding AllowNull}"
            Format="{Binding Format}"
            IncrementOnScrolling="{Binding IncrementOnScrolling}"
            MaxValue="{Binding MaximumValue}"
            MinValue="{Binding MinimumValue}"
            NullString="{Binding NullString}"
            ShowArrowButtons="{Binding ShowArrowButtons}"
            Value="{Binding Value, Mode=TwoWay}" />
    </Grid>
</democommon:DemoControl>
