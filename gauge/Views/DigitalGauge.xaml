<democommon:DemoControl
    x:Class="syncfusion.gaugedemos.wpf.DigitalGauge"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.gaugedemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Width="auto"
    Height="auto">

    <Grid
        x:Name="LayoutRoot"
        Grid.Row="1"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <Grid.DataContext>
            <local:DigitalGaugeViewModel />
        </Grid.DataContext>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*" />
        </Grid.ColumnDefinitions>
        <Border>
            <Grid>
                <Grid
                    Width="430"
                    Height="250"
                    Margin="10"
                    VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*" />
                        <RowDefinition Height="50*" />
                    </Grid.RowDefinitions>
                    <Rectangle Grid.RowSpan="2" Margin="0,0,10,10">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Offset="1" Color="Black" />
                                <GradientStop Color="White" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Grid.RowSpan="2" Margin="0,0,10,10">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Offset="0.153" Color="#FF2A5EAE" />
                                <GradientStop Offset="0.984" Color="#FF173572" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle
                        Grid.RowSpan="2"
                        Width="400"
                        Height="220"
                        Margin="10,10,20,20">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Offset="0" Color="#FF1E4787" />
                                <GradientStop Offset="0.007" Color="#FF255298" />
                                <GradientStop Offset="0.979" Color="#FF112753" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                        <Rectangle.Stroke>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Offset="1" Color="#FF041433" />
                                <GradientStop Color="#FF132A58" />
                            </LinearGradientBrush>
                        </Rectangle.Stroke>
                    </Rectangle>
                    <Grid Grid.Row="0" Grid.ColumnSpan="3">
                        <Border
                            Height="2"
                            Margin="15,0,23,8"
                            VerticalAlignment="Bottom"
                            Background="#FF5882C2"
                            BorderBrush="#FF5882C2"
                            BorderThickness="1" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.7*" />
                                <ColumnDefinition Width="0.3*" />
                            </Grid.ColumnDefinitions>
                            <syncfusion:SfDigitalGauge
                                x:Name="secGauge"
                                Grid.Column="1"
                                Margin="30,40,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Background="Transparent"
                                CharacterHeight="30"
                                CharacterStroke="#FFB7CFF5"
                                CharacterType="SegmentSeven"
                                CharacterWidth="30"
                                CharactersSpacing="4"
                                DimmedBrush="Transparent"
                                SegmentThickness="3"
                                Value="{Binding SecondsGauge}" />
                            <syncfusion:SfDigitalGauge
                                x:Name="timeGauge"
                                Grid.Column="0"
                                Margin="130,35,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Background="Transparent"
                                CharacterHeight="50"
                                CharacterStroke="#FFB7CFF5"
                                CharacterType="SegmentSeven"
                                CharacterWidth="25"
                                CharactersSpacing="4"
                                DimmedBrush="Transparent"
                                SegmentThickness="3"
                                Value="{Binding TimeGauge}" />
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1" Margin="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width=".5*" />
                            <ColumnDefinition Width=".5*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <StackPanel Margin="15,-6,-15,6" Orientation="Horizontal">
                                <StackPanel Width="61" Height="127">
                                    <TextBlock
                                        Height="29"
                                        Margin="0,0,-10,0"
                                        Foreground="#FF5882C2"
                                        Text="Month"
                                        TextWrapping="Wrap" />
                                    <syncfusion:SfDigitalGauge
                                        x:Name="monthGauge"
                                        Width="84"
                                        Height="65"
                                        Margin="3,20,-33,20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Background="Transparent"
                                        CharacterHeight="30"
                                        CharacterStroke="#FFB7CFF5"
                                        CharacterType="SegmentFourteen"
                                        CharacterWidth="30"
                                        CharactersSpacing="10"
                                        DimmedBrush="Transparent"
                                        SegmentThickness="3"
                                        Value="{Binding MonthGauge}" />
                                </StackPanel>
                                <Rectangle
                                    Width="2"
                                    Height="41.735"
                                    Margin="0,0,0,13"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom"
                                    Fill="Transparent"
                                    RenderTransformOrigin="0.5,0.5"
                                    Stroke="Transparent"
                                    UseLayoutRounding="False">
                                    <Rectangle.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform />
                                            <SkewTransform />
                                            <RotateTransform Angle="10.437" />
                                            <TranslateTransform />
                                        </TransformGroup>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                                <StackPanel Width="125">
                                    <TextBlock
                                        Width="45"
                                        Height="30"
                                        Foreground="#FF5882C2"
                                        Text="Date"
                                        TextWrapping="Wrap" />
                                    <syncfusion:SfDigitalGauge
                                        x:Name="dateGauge"
                                        Width="98"
                                        Height="35"
                                        Margin="15,20,0,0"
                                        Background="Transparent"
                                        CharacterHeight="30"
                                        CharacterStroke="#FFB7CFF5"
                                        CharacterType="SegmentFourteen"
                                        CharacterWidth="30"
                                        CharactersSpacing="5"
                                        DimmedBrush="Transparent"
                                        RenderTransformOrigin="0.442,-0.424"
                                        SegmentThickness="3"
                                        Value="{Binding DateGauge}" />
                                </StackPanel>
                                <Path
                                    Width="3"
                                    Height="47"
                                    Margin="5,0,0,13"
                                    VerticalAlignment="Bottom"
                                    Data="M0.5,25.5 L2.5,25.5 L2.5,46.5 L0.5,46.5 z M0.5,0.5 L2.5,0.5 L2.5,21.5 L0.5,21.5 z"
                                    Fill="Transparent"
                                    Stretch="Fill"
                                    Stroke="Transparent"
                                    UseLayoutRounding="False" />
                            </StackPanel>
                        </Grid>
                        <Grid
                            Grid.Column="1"
                            Height="84"
                            Margin="0,-6,0,0"
                            VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="17*" />
                                <ColumnDefinition Width="91*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.ColumnSpan="2"
                                Height="31"
                                Margin="0,0,46,53"
                                VerticalAlignment="Bottom"
                                Foreground="#FF5882C2"
                                Text="Day"
                                TextWrapping="Wrap" />
                            <Path
                                Grid.Column="1"
                                Width="3"
                                Height="47"
                                Margin="0,0,0,-27"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Data="M0.5,25.5 L2.5,25.5 L2.5,46.5 L0.5,46.5 z M0.5,0.5 L2.5,0.5 L2.5,21.5 L0.5,21.5 z"
                                Fill="Transparent"
                                Stretch="Fill"
                                Stroke="Transparent"
                                UseLayoutRounding="False" />
                            <syncfusion:SfDigitalGauge
                                x:Name="dayGauge"
                                Grid.ColumnSpan="2"
                                Height="0"
                                Margin="-11,50,24,34"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                CharacterHeight="30"
                                CharacterStroke="#FFB7CFF5"
                                CharacterType="SegmentFourteen"
                                CharacterWidth="30"
                                CharactersSpacing="4"
                                DimmedBrush="Transparent"
                                SegmentThickness="3"
                                Value="{Binding DayGauge}" />
                        </Grid>
                        <Grid Grid.Column="2">
                            <syncfusion:SfDigitalGauge
                                x:Name="tempGauge"
                                Height="56"
                                Margin="0,0,17,25"
                                VerticalAlignment="Bottom"
                                Background="Transparent"
                                CharacterHeight="30"
                                CharacterStroke="#FFB7CFF5"
                                CharacterType="SegmentFourteen"
                                CharacterWidth="30"
                                CharactersSpacing="1"
                                DimmedBrush="Transparent"
                                SegmentThickness="3"
                                Value="21" />
                            <TextBlock
                                Height="12"
                                Margin="24,0,17,35"
                                VerticalAlignment="Bottom"
                                Text="."
                                TextWrapping="Wrap" />
                            <TextBlock
                                Margin="6,-6,51,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Foreground="#FF5882C2"
                                Text="Temp"
                                TextWrapping="Wrap" />
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</democommon:DemoControl>
