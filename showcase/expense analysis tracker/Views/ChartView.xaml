<UserControl
    x:Class="syncfusion.expenseanalysis.wpf.ChartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Syncfusion="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:interactivity="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.expenseanalysis.wpf">

    <interactivity:Interaction.Behaviors>
        <local:ChartViewBehavior />
    </interactivity:Interaction.Behaviors>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="0.9*" />
        </Grid.RowDefinitions>

        <Grid>
            <TextBlock
                Margin="20,10,0,0"
                Background="Transparent"
                FontSize="22"
                Text="Expense Chart" />
        </Grid>

        <Grid Grid.Row="1" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*" />
                <ColumnDefinition Width="0.6*" />
                <ColumnDefinition Width="0.3*" />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="backbtn"
                Height="25"
                Margin="20,10,10,10"
                VerticalAlignment="Top"
                Command="{Binding BackCommand}"
                CommandParameter="{Binding ElementName=Chart}"
                Content="Back"
                Cursor="Hand"
                Visibility="{Binding BackButtonVisibility, Mode=TwoWay}" />


            <Syncfusion:SfChart
                x:Name="Chart"
                Grid.Column="1"
                AreaBorderBrush="Transparent">
                <Syncfusion:SfChart.Behaviors>
                    <Syncfusion:ChartSelectionBehavior />
                </Syncfusion:SfChart.Behaviors>
                <Syncfusion:PieSeries
                    EnableAnimation="True"
                    ItemsSource="{Binding PieExpense}"
                    LabelPosition="Outside"
                    PieCoefficient="0.6"
                    SegmentSelectionBrush="Wheat"
                    XBindingPath="Category"
                    YBindingPath="Amount">
                    <Syncfusion:PieSeries.AdornmentsInfo>
                        <Syncfusion:ChartAdornmentInfo
                            AdornmentsPosition="Top"
                            ConnectorHeight="45"
                            ConnectorRotationAngle="90"
                            SegmentLabelContent="LabelContentPath"
                            ShowConnectorLine="True"
                            ShowLabel="True" />
                    </Syncfusion:PieSeries.AdornmentsInfo>
                </Syncfusion:PieSeries>
            </Syncfusion:SfChart>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.3*" />
                    <RowDefinition Height="0.3*" />
                    <RowDefinition Height="0.3*" />
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="0"
                    Margin="30"
                    BorderBrush="Black"
                    BorderThickness="0.5"
                    SnapsToDevicePixels="True">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            Margin="10,5"
                            Text="Most Spent"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Margin="10,5"
                            Text="{Binding Path=MostSpent}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                <Border
                    Grid.Row="1"
                    Margin="30"
                    BorderBrush="Black"
                    BorderThickness="0.5"
                    SnapsToDevicePixels="True">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            Margin="10,5"
                            Text="Least Spent"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Margin="10,5"
                            Text="{Binding Path=LeastSpent}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                <Border
                    Grid.Row="2"
                    Margin="30"
                    BorderBrush="Black"
                    BorderThickness="0.5"
                    SnapsToDevicePixels="True">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            Margin="10,5"
                            Text="Average Spent"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Margin="10,5"
                            Text="{Binding Path=AverageSpent}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>