<UserControl
    x:Class="syncfusion.stockanalysisdemo.wpf.StockAnalysisView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.stockanalysisdemo.wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    x:Name="root"
    d:DesignHeight="1000"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/syncfusion.stockanalysisdemo.wpf;component/Views/StockAnalysisStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid DataContext="{StaticResource stockmodel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <syncfusion:TileViewControl
            x:Name="tileView"
            Grid.Row="1"
            Background="#E8EAEA"
            BorderBrush="Transparent"
            BorderThickness="1"
            ItemContainerStyle="{StaticResource tileitemstyle}"
            ItemsSource="{Binding Stocks}"
            MinimizedItemsOrientation="Left"
            SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Loaded">
                    <i:InvokeCommandAction Command="{Binding LoadedCommand}" CommandParameter="{Binding ElementName=tileView}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <syncfusion:TileViewControl.MaximizedItemTemplate>
                <DataTemplate>
                    <Grid x:Name="mainGrid" Margin="0,-5,-3,-1">
                        <!--  Chart View  -->
                        <Border
                            Margin="0,0,-4,-5"
                            Background="#E5E5E5"
                            BorderBrush="#999999"
                            BorderThickness="1">
                            <Grid Background="White">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0.7*" />
                                            <RowDefinition Height="0.3*" />
                                        </Grid.RowDefinitions>
                                        <chart:SfChart
                                            Margin="0,17,0,0"
                                            AreaBorderBrush="#D3D3D3"
                                            AreaBorderThickness="1"
                                            Background="White"
                                            DataContext="{Binding SelectedStock, Mode=OneWay}">
                                            <chart:SfChart.Watermark>
                                                <chart:Watermark HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <chart:Watermark.Content>
                                                        <TextBlock
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            FontSize="100"
                                                            Foreground="Black"
                                                            Opacity="0.1"
                                                            Text="{Binding StockName}" />
                                                    </chart:Watermark.Content>
                                                </chart:Watermark>
                                            </chart:SfChart.Watermark>
                                            <chart:SfChart.Header>
                                                <TextBlock Height="25" />
                                            </chart:SfChart.Header>
                                            <chart:SfChart.Behaviors>
                                                <local:CustomCrossHairBehavior
                                                    HorizontalLineStyle="{StaticResource lineStyle}"
                                                    SummaryItemsStyle="{StaticResource itemsPanelStyle}"
                                                    VerticalLineStyle="{StaticResource lineStyle}" />
                                                <local:ChartTechnicalIndicatorBehavior />

                                            </chart:SfChart.Behaviors>
                                            <chart:SfChart.PrimaryAxis>
                                                <chart:DateTimeCategoryAxis
                                                    AxisLineStyle="{StaticResource gridLineStyle}"
                                                    EdgeLabelsDrawingMode="Hide"
                                                    Foreground="#4F4F59"
                                                    Interval="2"
                                                    LabelFormat="MMM-yyyy"
                                                    MajorGridLineStyle="{StaticResource gridLineStyle}"
                                                    MajorTickLineStyle="{StaticResource gridLineStyle}"
                                                    ZoomFactor="{Binding ElementName=RangeNavigator, Path=ZoomFactor, Mode=TwoWay}"
                                                    ZoomPosition="{Binding ElementName=RangeNavigator, Path=ZoomPosition, Mode=TwoWay}" />
                                            </chart:SfChart.PrimaryAxis>

                                            <chart:SfChart.SecondaryAxis>
                                                <chart:NumericalAxis
                                                    Header="Test"
                                                    MajorGridLineStyle="{StaticResource gridLineStyle}"
                                                    MajorTickLineStyle="{StaticResource gridLineStyle}"
                                                    Visibility="Collapsed" />
                                            </chart:SfChart.SecondaryAxis>

                                            <chart:HiLoOpenCloseSeries
                                                Name="Series1"
                                                chart:ChartSeries.Spacing="0.2"
                                                Close="Last"
                                                High="High"
                                                ItemsSource="{Binding Datas}"
                                                Label="Price History"
                                                Low="Low"
                                                Open="Open"
                                                XBindingPath="TimeStamp" />

                                        </chart:SfChart>
                                        <chart:SfDateTimeRangeNavigator
                                            x:Name="RangeNavigator"
                                            Grid.Row="1"
                                            Background="White"
                                            BorderBrush="#d3d3d3"
                                            BorderThickness="1,1,1,0"
                                            HigherBarTickLineStyle="{StaticResource ticklineStyle}"
                                            HigherLabelStyle="{StaticResource higherBarLabelStyle}"
                                            ItemsSource="{Binding Datas}"
                                            ScrollbarVisibility="Collapsed"
                                            ShowGridLines="False"
                                            ViewRangeEnd="2011/2/1"
                                            ViewRangeStart="2009/2/1"
                                            XBindingPath="TimeStamp">
                                            <chart:SfDateTimeRangeNavigator.Intervals>
                                                <chart:Interval IntervalType="Year" />
                                            </chart:SfDateTimeRangeNavigator.Intervals>
                                            <chart:SfDateTimeRangeNavigator.HigherLevelBarStyle>
                                                <chart:LabelBarStyle Position="Inside" SelectedLabelBrush="Transparent" />
                                            </chart:SfDateTimeRangeNavigator.HigherLevelBarStyle>
                                            <chart:SfDateTimeRangeNavigator.Content>
                                                <chart:SfChart
                                                    Grid.Row="0"
                                                    AreaBorderBrush="#D3D3D3"
                                                    AreaBorderThickness="0"
                                                    DataContext="{Binding SelectedStock, Mode=OneWay}">
                                                    <chart:SfChart.Resources>
                                                        <local:CustomTemplateConverter x:Key="converter" />
                                                        <DataTemplate x:Key="cusTemp">
                                                            <Canvas>
                                                                <Rectangle
                                                                    Canvas.Left="{Binding RectX}"
                                                                    Canvas.Top="{Binding RectY}"
                                                                    Width="{Binding Width}"
                                                                    Height="{Binding Height}"
                                                                    Fill="{Binding Item, Converter={StaticResource converter}}"
                                                                    Tag="{Binding Converter={StaticResource converter}}" />
                                                            </Canvas>
                                                        </DataTemplate>
                                                    </chart:SfChart.Resources>
                                                    <chart:SfChart.Header>
                                                        <TextBlock Height="25" />
                                                    </chart:SfChart.Header>

                                                    <chart:SfChart.PrimaryAxis>
                                                        <chart:CategoryAxis
                                                            AxisLineStyle="{StaticResource gridLineStyle}"
                                                            EdgeLabelsDrawingMode="Fit"
                                                            Foreground="#4F4F59"
                                                            Interval="12"
                                                            LabelFormat="yyyy"
                                                            MajorGridLineStyle="{StaticResource gridLineStyle}"
                                                            MajorTickLineStyle="{StaticResource gridLineStyle}"
                                                            ShowGridLines="False"
                                                            Visibility="Collapsed" />
                                                    </chart:SfChart.PrimaryAxis>

                                                    <chart:SfChart.SecondaryAxis>
                                                        <chart:NumericalAxis
                                                            Header="Test"
                                                            MajorGridLineStyle="{StaticResource gridLineStyle}"
                                                            MajorTickLineStyle="{StaticResource tickLineStyle}"
                                                            ShowGridLines="False"
                                                            Visibility="Collapsed" />
                                                    </chart:SfChart.SecondaryAxis>


                                                    <chart:ColumnSeries
                                                        Name="Series2"
                                                        CustomTemplate="{StaticResource cusTemp}"
                                                        Interior="#B74255"
                                                        ItemsSource="{Binding Datas}"
                                                        Label="Volume"
                                                        XBindingPath="TimeStamp"
                                                        YBindingPath="Volume" />
                                                </chart:SfChart>
                                            </chart:SfDateTimeRangeNavigator.Content>
                                        </chart:SfDateTimeRangeNavigator>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>

                    </Grid>
                </DataTemplate>
            </syncfusion:TileViewControl.MaximizedItemTemplate>

            <syncfusion:TileViewControl.MinimizedItemTemplate>
                <DataTemplate>
                    <Border
                        Padding="10,8,2,3"
                        BorderBrush="#FFA5A5A5"
                        BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Margin="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="25"
                                Foreground="Gray"
                                Text="{Binding StockName}" />
                            <StackPanel Grid.Row="1" Orientation="Vertical">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel
                                        Grid.Column="0"
                                        HorizontalAlignment="Stretch"
                                        Orientation="Horizontal">
                                        <ContentPresenter
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Content="{Binding}"
                                            ContentTemplate="{StaticResource triangleIndicatorLarge}" />
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontFamily="Segoe UI"
                                            FontSize="20"
                                            FontWeight="Light"
                                            Foreground="#999999"
                                            Text="{Binding PreviousClose}" />
                                    </StackPanel>
                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Top">

                                        <StackPanel Orientation="Horizontal">
                                            <ContentPresenter
                                                Margin="2"
                                                Content="{Binding}"
                                                ContentTemplate="{StaticResource triangleIndicatorSmallHigh}" />
                                            <TextBlock
                                                Margin="2"
                                                FontSize="10"
                                                Foreground="#FF595959"
                                                Text="High" />
                                            <TextBlock
                                                Margin="2"
                                                FontSize="10"
                                                Foreground="#318E5A"
                                                Text="{Binding CurrentHigh}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <ContentPresenter
                                                Margin="2"
                                                Content="{Binding}"
                                                ContentTemplate="{StaticResource triangleIndicatorSmallLow}" />
                                            <TextBlock
                                                Margin="2"
                                                FontSize="10"
                                                Foreground="#FF595959"
                                                Text="Low" />
                                            <TextBlock
                                                Margin="2"
                                                FontSize="10"
                                                Foreground="#318E5A"
                                                Text="{Binding CurrentLow}" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                        </Grid>
                    </Border>
                </DataTemplate>
            </syncfusion:TileViewControl.MinimizedItemTemplate>
            <syncfusion:TileViewControl.ItemTemplate>
                <DataTemplate>
                    <Border
                        Padding="10,8,2,3"
                        BorderBrush="#FFA5A5A5"
                        BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Margin="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="25"
                                Foreground="Gray"
                                Text="{Binding StockName}" />
                            <StackPanel Grid.Row="1" Orientation="Vertical">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel
                                        Grid.Column="0"
                                        HorizontalAlignment="Stretch"
                                        Orientation="Horizontal">
                                        <ContentPresenter
                                            Margin="2"
                                            VerticalAlignment="Center"
                                            Content="{Binding}"
                                            ContentTemplate="{StaticResource triangleIndicatorLarge}" />
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontFamily="Segoe UI"
                                            FontSize="20"
                                            FontWeight="Light"
                                            Foreground="#999999"
                                            Text="{Binding PreviousClose}" />
                                    </StackPanel>
                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Top">

                                        <StackPanel Orientation="Horizontal">
                                            <ContentPresenter
                                                Margin="2"
                                                Content="{Binding}"
                                                ContentTemplate="{StaticResource triangleIndicatorSmallHigh}" />
                                            <TextBlock
                                                Margin="2"
                                                FontSize="10"
                                                Foreground="#595D94"
                                                Text="High" />
                                            <TextBlock
                                                Margin="2"
                                                FontSize="10"
                                                Foreground="#318E5A"
                                                Text="{Binding CurrentHigh}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <ContentPresenter
                                                Margin="2"
                                                Content="{Binding}"
                                                ContentTemplate="{StaticResource triangleIndicatorSmallLow}" />
                                            <TextBlock
                                                Margin="2"
                                                FontSize="10"
                                                Foreground="#595D94"
                                                Text="Low" />
                                            <TextBlock
                                                Margin="2"
                                                FontSize="10"
                                                Foreground="#318E5A"
                                                Text="{Binding CurrentLow}" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                        </Grid>
                    </Border>
                </DataTemplate>
            </syncfusion:TileViewControl.ItemTemplate>
        </syncfusion:TileViewControl>
    </Grid>
</UserControl>
