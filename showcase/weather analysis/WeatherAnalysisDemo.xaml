<syncfusion:ChromelessWindow
    x:Class="syncfusion.weatheranalysis.wpf.WeatherAnalysisDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:syncfusion.weatheranalysis.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="Weather Analysis"
    MinWidth="1024"
    MinHeight="650"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    skin:SfSkinManager.VisualStyle="MaterialLight"
    Icon="App.ico"
    UseNativeChrome="True"
    WindowStartupLocation="CenterScreen">

    <syncfusion:ChromelessWindow.DataContext>
        <local:ViewModel />
    </syncfusion:ChromelessWindow.DataContext>

    <syncfusion:ChromelessWindow.Resources>
        <syncfusion:BooleanToVisibilityConverter x:Key="boolToVisibilityConverter" />
        <syncfusion:VisibilityToBooleanConverter x:Key="visibilityToBoolConverter" />
        <local:StringToImageConverter x:Key="stringToImageConverter" />
    </syncfusion:ChromelessWindow.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3.5*" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2" />
                <RowDefinition Height="*" />
                <RowDefinition Height="2" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.3*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                        <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI"
                                FontSize="42"
                                FontWeight="Light"
                                Text="{Binding Temperature, StringFormat={}{0} °c}" />
                    </Border>

                    <Border Grid.Row="1" Background="Transparent">
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <TextBlock
                                FontFamily="Segoe UI"
                                FontSize="16"
                                Text="{Binding SkyCondition}" />
                        </StackPanel>
                    </Border>
                </Grid>

                <Border
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <Image
                        x:Name="sampleImg"
                        Width="90"
                        Height="90"
                        HorizontalAlignment="Left"
                        Source="{Binding SkyCondition, Converter={StaticResource stringToImageConverter}}" />
                </Border>
            </Grid>
      
            <Border
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Path
                    Width="250"
                    Height="0.5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Data="M434.33334,716.70599 L547.40271,716.70599"
                    Stretch="Fill"
                    Stroke="#FFD8D8D8"
                    StrokeThickness="0.5"
                    UseLayoutRounding="False" />
            </Border>

            <Grid Grid.Row="2" Height="90"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*" />
                    <ColumnDefinition Width="10*" />
                </Grid.ColumnDefinitions>
                <Grid
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                            Padding="30"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontFamily="Segoe UI"
                            FontSize="18"
                            FontWeight="Light"
                            Text="NEWYORK" />
                        
                    <TextBlock Grid.Row="1"
                        Padding="30,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI"
                        FontSize="35"
                        FontWeight="Light"
                        Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='{}{0:hh:mm tt}'}" />
                       
                    <TextBlock Grid.Row="2"
                            Padding="30"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontFamily="Segoe UI"
                            FontSize="16"
                            Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat=dddd}" />
                </Grid>
            </Grid>
       
            <Border
                Grid.Row="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Path
                    Width="250"
                    Height="0.5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Data="M434.33334,716.70599 L547.40271,716.70599"
                    Stretch="Fill"
                    Stroke="#FFD8D8D8"
                    StrokeThickness="0.5"
                    UseLayoutRounding="False" />
            </Border>

            <Grid Grid.Row="4"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.3*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom">
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI"
                                FontSize="28"
                                FontWeight="Light"
                                Text="44%" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1">
                        <TextBlock HorizontalAlignment="Center"
                                FontFamily="Segoe UI Light"
                                FontSize="16"
                                Text="Humidity" />
                    </Border>
                </Grid>

                <Border
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <Image
                        Width="90"
                        Height="90"
                        HorizontalAlignment="Left"
                        Source="/syncfusion.weatheranalysis.wpf;component/Assets/WeatherAnalysis/img_Humidity.png" />
                </Border>
            </Grid>
        
            <Grid Grid.Row="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.3*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        Background="Transparent">
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Light"
                                FontSize="28"
                                Text="{Binding DewPoint}" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Light"
                                FontSize="28"
                                Text="%" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Background="Transparent">
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <TextBlock
                                FontFamily="Segoe UI Light"
                                FontSize="16"
                                Text="Dew Point" />
                        </StackPanel>
                    </Border>
                </Grid>

                <Border
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <Image
                        Width="90"
                        Height="90"
                        HorizontalAlignment="Left"
                        Source="/syncfusion.weatheranalysis.wpf;component/Assets/WeatherAnalysis/img_DewPoint.png" />
                </Border>
            </Grid>

            <Grid Grid.Row="6"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.3*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom">
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI"
                                FontSize="28"
                                FontWeight="Light"
                                Text="{Binding Wind}" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Light"
                                FontSize="28"
                                FontWeight="Light"
                                Text="mph" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Background="Transparent">
                        <TextBlock HorizontalAlignment="Center"
                                FontFamily="Segoe UI Light"
                                FontSize="16"
                                Text="Wind" />
                    </Border>
                </Grid>

                <Border
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <Image
                        Width="90"
                        Height="90"
                        HorizontalAlignment="Left"
                        Source="/syncfusion.weatheranalysis.wpf;component/Assets/WeatherAnalysis/img_Wind.png" />
                </Border>
            </Grid>
       
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="8*" />
            </Grid.RowDefinitions>

            <Border BorderBrush="LightGray" BorderThickness="1,1,1,0">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock
                        Margin="10,0,0,0"
                        Padding="25"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI"
                        FontSize="32"
                        FontWeight="Light"
                        Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat=dddd}" />
                
                    <RadioButton
                        Name="chartButton"
                        Grid.Column="1"
                        Content="Chart" />

                    <RadioButton
                        Name="gridButton"
                        Grid.Column="2"
                        Content="Grid"
                        IsChecked="True" />

                </Grid>
            </Border>
            <Border
                Grid.Row="1"
                BorderBrush="LightGray"
                BorderThickness="1">
                <ContentPresenter
                    Name="ContentHolder"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <ContentPresenter.Content>
                        <Grid>
                            <local:GridView Visibility="{Binding IsChecked, ElementName=gridButton, Converter={StaticResource boolToVisibilityConverter}}" />
                            <local:ChartView Visibility="{Binding IsChecked, ElementName=chartButton, Converter={StaticResource boolToVisibilityConverter}}" />
                        </Grid>
                    </ContentPresenter.Content>
                </ContentPresenter>
            </Border>
        </Grid>

    </Grid>
</syncfusion:ChromelessWindow>