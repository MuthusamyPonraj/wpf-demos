<democommon:DemoControl
    x:Class="syncfusion.surfacechartdemos.wpf.SurfaceandWireframeSurface"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Syncfusion="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:interact="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.surfacechartdemos.wpf"
    Width="auto"
    Height="auto"
    Background="White"
    Foreground="Black"
    OptionsPosition="Right"
    OptionsSize="Auto">

    <interact:Interaction.Behaviors>
        <local:SurfaceandWireframeSurfaceBehavior />
    </interact:Interaction.Behaviors>
    <Grid>
        <Grid.Resources>
            <DataTemplate x:Key="LabelTemplate">
                <TextBlock FontWeight="SemiBold" Text="{Binding LabelContent}" />
            </DataTemplate>

            <DataTemplate x:Key="HeaderTemplate">
                <TextBlock
                    FontSize="14"
                    FontWeight="Bold"
                    Text="{Binding}" />
            </DataTemplate>

        </Grid.Resources>
        <Syncfusion:SfSurfaceChart
            x:Name="surface"
            Background="White"
            EnableRotation="True"
            EnableZooming="{Binding ElementName=CheckBox, Path=IsChecked}"
            Rotate="30"
            Tilt="20"
            Type="Surface"
            WireframeStrokeThickness="2"
            XBindingPath="X"
            YBindingPath="Y"
            ZBindingPath="Z"
            ZoomLevel="0.33">
            <Syncfusion:SfSurfaceChart.XAxis>
                <Syncfusion:SurfaceAxis
                    Header="X-Axis"
                    HeaderTemplate="{StaticResource HeaderTemplate}"
                    LabelTemplate="{StaticResource LabelTemplate}" />
            </Syncfusion:SfSurfaceChart.XAxis>
            <Syncfusion:SfSurfaceChart.YAxis>
                <Syncfusion:SurfaceAxis
                    x:Name="Axis"
                    Header="Y-Axis"
                    HeaderTemplate="{StaticResource HeaderTemplate}"
                    LabelFormat="0.0"
                    LabelTemplate="{StaticResource LabelTemplate}" />
            </Syncfusion:SfSurfaceChart.YAxis>
            <Syncfusion:SfSurfaceChart.ZAxis>
                <Syncfusion:SurfaceAxis
                    Header="Z-Axis"
                    HeaderTemplate="{StaticResource HeaderTemplate}"
                    LabelTemplate="{StaticResource LabelTemplate}" />
            </Syncfusion:SfSurfaceChart.ZAxis>
            <Syncfusion:SfSurfaceChart.ColorBar>
                <Syncfusion:ChartColorBar DockPosition="Right" />
            </Syncfusion:SfSurfaceChart.ColorBar>
        </Syncfusion:SfSurfaceChart>
    </Grid>

    <democommon:DemoControl.Options>
        <Grid VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Margin="10,5" Text="Type" />
            <ComboBox
                x:Name="surfaceTypeComboBox"
                Grid.Row="0"
                Grid.Column="1"
                Width="165"
                IsEditable="False">
                <ComboBoxItem Content="Surface" />
                <ComboBoxItem Content="WireframeSurface" />
            </ComboBox>
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="10,5"
                Text="Function" />
            <ComboBox
                x:Name="comboBox"
                Grid.Row="1"
                Grid.Column="1"
                Width="165"
                Margin="10,5"
                IsEditable="False">
                <ComboBoxItem Content="2x^2+2y^2" />
                <ComboBoxItem Content="sin((x-k)*2pi)*sin((y-k)*2pi)" />
                <ComboBoxItem Content="(1-Cos(x^2+y^2)/(x^2+y^2))*k" />
            </ComboBox>
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Margin="10,5"
                Text="Enable Zooming" />
            <CheckBox
                x:Name="CheckBox"
                Grid.Row="2"
                Grid.Column="1"
                Width="165"
                Margin="10,5"
                IsChecked="False" />
        </Grid>
    </democommon:DemoControl.Options>
</democommon:DemoControl>
